<!-- Auto Retro Achievements -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="static">
			<origin>0 0</origin>									
			<size>0.1791667 0.7814815</size>									
			<pos>0.4 -1</pos>
			<scale>0.3</scale>
			<rotation>2</rotation>
			<zIndex>20</zIndex>
			<opacity>1</opacity>
			<path>./avatar.png</path>
		
			<storyboard>
				<animation property="scale" from="0.3" to="0.93" begin="400" duration="1000" mode="bump"/>
				<animation property="y" from="-1" to="0.23" begin="400" duration="1000" mode="EaseIn"/>
				<animation property="y" to="0.17" begin="1400" duration="500" mode="bump"/>
				<animation property="rotation" from="1" to="-1" begin="1400" autoreverse="true" duration="4000" repeat="forever" mode="linear"/>
				<animation property="scale" from="0.93" to="0.97" begin="1400" autoreverse="true" duration="4000" repeat="forever" mode="linear"/>
				<animation property="y" from="0.17" to="0.11" begin="1400" autoreverse="true" duration="4000" repeat="forever" mode="easeOut"/>
				
			</storyboard>			
		</image>
		
		
		
		
		
		
		
	</view>

</theme>
