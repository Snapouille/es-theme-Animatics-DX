<!-- Auto Retro Achievements -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<size>0.1791667 0.7814815</size>									
			<pos>0.85 -0.55</pos>									
			<path>./avatar.png</path>
			<scale>0.9</scale>

			<storyboard repeatAt="600">
				<animation property="offsetY" to="1.07" begin="100" duration="500" mode="EaseOut"/>
				<animation property="scale" to="1" begin="600" duration="10000" autoreverse="true" mode="EaseInOut"/>
			</storyboard>
		</image>
	
		
	</view>

</theme>
