		<image name="avatar-wolf2" extra="static">
			<size>0.2015625 0.7111111</size>									
			<scale>0.95</scale>
			<path>./avatar-wolf2.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>25</zIndex>
			<origin>0.5 0.5</origin>
			<size>0.2182292 0.787037</size>									
			<pos>1.05 0.55</pos>	
			<opacity>0</opacity>

			<storyboard repeatAt="1000">
				<animation property="offsetX" to="-0.21" begin="100" duration="500" mode="EaseOut"/>
				
				<animation property="opacity" to="1" begin="2000" duration="10" mode="EaseOut"/>
				<animation property="opacity" to="0" begin="4000" duration="10" mode="EaseOut"/>
				<animation property="opacity" to="0" begin="10000" duration="10" mode="EaseOut"/>
