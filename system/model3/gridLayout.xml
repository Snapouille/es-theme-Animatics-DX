<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
	

		<image name="avatar" extra="static">
			<origin>0 0</origin>
			<size>0.2817708 0.6277778</size>									
			<pos>0.37 0.24</pos>
			<scale>0.58</scale>
			<flipX>true</flipX>
			<zIndex>13</zIndex>
			
			<storyboard repeatAt="350">
        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
