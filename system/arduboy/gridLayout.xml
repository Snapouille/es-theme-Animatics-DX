<!-- Arduboy -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			<flipX>true</flipX>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
		

		<image name="avatar1" extra="static">
			<origin>0.5 0.5</origin>	
			<size>0.253125 0.4268519</size>									
			<pos>0.845 0.85</pos>	
			<scale>1.2</scale>
			<linearSmooth>true</linearSmooth>
			<path>./avatar1.png</path>
			<zIndex>18</zIndex>	
			<opacity>0</opacity>
			<storyboard>
				
        		<animation property="scale" to="1" begin="100" duration="700" mode="linear"/>
				<animation property="opacity" to="1" begin="100" duration="10" mode="linear"/>
        		<animation property="y" to="0.495" begin="100" duration="700" mode="bump"/>
				
				<animation property="opacity" to="0" begin="800" duration="10" mode="linear"/>
				
			</storyboard>					

		</image>
		
		<image name="avatar2" extra="static">
			<origin>0.5 0.5</origin>	
			<size>0.253125 0.4268519</size>									
			<pos>0.845 0.85</pos>	
			<scale>1.2</scale>
			<linearSmooth>true</linearSmooth>	
			<path>./avatar2.png</path>
			<opacity>0</opacity>
			<zIndex>18</zIndex>
			<storyboard>
			
        		<animation property="scale" to="1" begin="100" duration="700" mode="linear"/>
        		<animation property="y" to="0.495" begin="100" duration="700" mode="bump"/>
				
				<animation property="opacity" to="1" begin="800" duration="10" mode="linear"/>
				
				<animation property="saturation" to="0" begin="500" duration="25" autoreverse="true" repeat="8" mode="linear"/>
				
				<animation property="rotation" to="-10" begin="1100" duration="125" autoreverse="true" mode="linear"/>
				<animation property="scale" to="1.1" begin="1100" duration="125" autoreverse="true" mode="linear"/>
				<animation property="x" to="0.88" begin="1100" duration="125" autoreverse="true" mode="linear"/>
				<animation property="y" to="0.45" begin="1100" duration="50" mode="linear"/>
				<animation property="y" to="0.495" begin="1150" duration="200" mode="bump"/>
				
				
				
				
			</storyboard>					

		</image>
		
	</view>
</theme>
