<!-- VUE SYSTEM FIGURINES LAYOUT -->
<!-- quand on choisit la vue Systeme Figurines on force des backgrounds fixe -->
<!-- les backgrounds forcer sont les mÃªmes que pour la vue background smooth wallpaper -->


<theme>
<formatVersion>7</formatVersion>

<view name="system">

	<!-- pour ne pas afficher les vieux avatar.png animation qui trainent encore parfois -->
	<image name="avatar" extra="true">
		<visible>false</visible>
	</image>
	
	<image name="BG_snapLegacy" extra="true">
	
		<size>1 1</size>									
		<pos>0.5 0.5</pos>	
		
		<path>firstfile(
			"${themePath}/system/" + {system:theme} + "/background-fanart.jpg",
			"${themePath}/system/" + {system:theme} + "/background-grid.jpg",
			"${themePath}/system/" + {system:theme} + "/background.jpg",
			"${themePath}/system/" + {system:theme} + "/background.png")
		</path>
		
		<flipX if="{system.theme} == 'apf1000' || 
				   {system.theme} == 'apple2gs' ">true</flipX>
		
		<saturation>1</saturation>
		
		<storyboard>
			<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
		</storyboard>
				   
	</image>
	
</view>

</theme>
