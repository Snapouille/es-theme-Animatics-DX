<!-- SNES -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar-yoshi" extra="static">
			<pos>1 0.35</pos>
			<scale>0.45</scale>
			<zIndex>18</zIndex>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			<path>./avatar-yoshi.png</path>
		</image>
		
		
		
		<image name="avatar-flou" extra="static">
			<pos>1 0.35</pos>
			<scale>0.45</scale>
			<zIndex>18</zIndex>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			<path>./avatar-flou.png</path>
		</image>
		
		
		
		
		
		
		<image name="avatar-yoshi" extra="true">
		
			 <storyboard repeat="forever">
			 
				<animation property="x" from="0.95" to="0.35" begin="1300" duration="400" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="1700" duration="200" mode="linear"/>
				<animation property="y" from="0.35" to="0.355" begin="1700" autoreverse="true" duration="400" repeat="1" mode="easeOut"/>
				
				<animation property="rotation" to="-0.5" begin="2000" autoreverse="true" duration="500" repeat="1" mode="linear"/>
				
				<animation property="x" from="0.35" to="0.50" begin="3000" duration="2000" mode="easeOut"/>
				<animation property="y" from="0.35" to="0.18" begin="3000" duration="2000" mode="easeIn"/>
				<animation property="scale" from="0.45" to="0.42" begin="3000" duration="2000" mode="linear"/>
				<animation property="rotation" to="-5" begin="3000" autoreverse="true" duration="500" repeat="3" mode="linear"/>
				
				<animation property="x" from="0.5" to="0.415" begin="6000" duration="500" mode="easeOut"/>
				<animation property="y" from="0.18" to="0.205" begin="6000" duration="500" mode="easeOut"/>
                <animation property="scale" from="0.42" to="0.9" begin="6000" duration="500" mode="easeIn"/>
				
				
				
				
				
				<animation property="rotation" to="0.5" begin="6500" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" from="0.205" to="0.20" begin="6500" autoreverse="true" duration="400" repeat="1" mode="easeOut"/>
				
				<animation property="opacity" from="1" to="0" begin="25950" duration="50" mode="linear"/>
				
				<animation property="x" to="-0.95" begin="29000" duration="1000" mode="linear"/>
				
            </storyboard>		
			
		</image>
		
		<image name="avatar-flou" extra="true">
		
			 <storyboard repeat="forever">
			 
			    <animation property="opacity" from="0" to="1" begin="1300" duration="100" mode="linear"/>
				
				<animation property="x" from="0.95" to="0.35" begin="1300" duration="400" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="1700" duration="200" mode="linear"/>
				<animation property="y" from="0.35" to="0.355" begin="1700" autoreverse="true" duration="400" repeat="1" mode="easeOut"/>
				
				<animation property="x" from="0.5" to="0.415" begin="5000" duration="10" mode="linear"/>
				<animation property="y" from="0.18" to="0.205" begin="5000" duration="10" mode="linear"/>
                <animation property="scale" from="0.42" to="0.9" begin="5000" duration="10" mode="linear"/>
				
				<animation property="opacity" from="0" to="1" begin="25950" duration="50" mode="linear"/>
				<animation property="x" from="0.415" to="-0.95" begin="26000" duration="400" mode="linear"/>
				
				<animation property="x" to="-0.95" begin="29000" duration="1000" mode="linear"/>
				
			</storyboard>				
		
		</image>
		
		
		
		
		
	</view>

</theme>
