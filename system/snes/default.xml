<!-- SNES -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar-flou, avatar-yoshi, avatar-yoshi2">
			<origin>0 0</origin>									
			<size>0.29375 0.6675926</size>									
			<pos>1 0.3</pos>
			<scale>0.45</scale>
			<zIndex>3000</zIndex>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
		</image>
		
		
		<image name="avatar-flou" extra="true">
			<path>./avatar-flou.png</path>
		
			 <storyboard repeat="forever">
			    <animation property="opacity" from="0" to="1" begin="1300" duration="100" mode="linear"/>
				
				<animation property="x" to="0.35" begin="1300" duration="400" mode="linear"/>
				<animation property="opacity" to="0" begin="1700" duration="10" mode="linear"/>
				
				<animation property="x" to="0.37" begin="3000" duration="500" mode="bump"/>
				<animation property="y" to="0.23" begin="3000" duration="500" mode="easeOut"/>
                <animation property="scale" to="0.95" begin="3000" duration="500" mode="easeOut"/>
				
				<animation property="opacity" to="1" begin="14000" duration="10" mode="linear"/>
				<animation property="x" to="-0.95" begin="14010" duration="400" mode="linear"/>
				
				<animation property="opacity" to="0" begin="16000" duration="1" mode="linear"/>
			</storyboard>				
		</image>
		
		
		
		<image name="avatar-yoshi" extra="true">
			<linearSmooth>true</linearSmooth>
			<path>./avatar-yoshi.png</path>
		
			 <storyboard repeat="forever">
				<animation property="x" to="0.3" begin="" duration="1" mode="linear"/>
				<animation property="opacity" to="1" begin="1700" duration="10" mode="linear"/>
				<animation property="y" to="0.055" begin="1800" autoreverse="true" duration="400" mode="easeOut"/>
				<animation property="x" to="0.25" begin="1800" duration="800" mode="easeOut"/>
				<animation property="rotation" to="-5" begin="2000" autoreverse="true" repeat="4" duration="100" mode="linear"/>
				
				<animation property="rotation" to="-0.5" begin="2000" autoreverse="true" duration="500" repeat="1" mode="linear"/>
				
				<animation property="x" to="0.37" 		begin="3000" 	duration="700" mode="bump"/>
				<animation property="y" to="0.23" 		begin="3000" 	duration="700" mode="easeOut"/>
                <animation property="scale" to="0.95" 	begin="3000" 	duration="700" mode="easeOut"/>
				
				<animation property="rotation" to="0.5" begin="3700" autoreverse="true" duration="650" repeat="7" mode="linear"/>
				<animation property="y" to="0.2" begin="3700" autoreverse="true" duration="400" mode="easeOut"/>
				
				<animation property="opacity" to="0" begin="4000" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4200" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4400" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4600" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4800" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="5000" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="10000" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="10200" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="10300" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="10400" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="14000" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="16000" duration="1" mode="linear"/>
            </storyboard>		
		</image>
		
		
		<image name="avatar-yoshi2" extra="true">
			<path>./avatar-yoshi2.png</path>

			 <storyboard repeat="forever">
				<animation property="x" to="0.37" begin="3000" duration="500" mode="bump"/>
				<animation property="y" to="0.23" begin="3000" duration="500" mode="easeOut"/>
                <animation property="scale" to="0.95" begin="3000" duration="500" mode="easeOut"/>
				
				<animation property="rotation" to="0.5" begin="3700" autoreverse="true" duration="650" repeat="7" mode="linear"/>
				<animation property="y" to="0.2" begin="3700" autoreverse="true" duration="400" mode="easeOut"/>
				
				<animation property="opacity" to="1" begin="4000" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4200" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4400" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4600" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4800" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="5000" duration="10" mode="linear"/>
				
				<animation property="opacity" to="1" begin="10000" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="10200" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="10300" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="10400" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="16000" duration="1" mode="linear"/>
            </storyboard>		
		</image>
		
		
		
		
		
	</view>

</theme>
