			<zIndex>3000</zIndex>
			<opacity>1</opacity>
			<linearSmooth>true</linearSmooth>
			<path>./avatar-yoshi.png</path>
			
			
			<origin>0.5 0.5</origin>
			<pos>1.05 0.55</pos>									

			<storyboard>
				<animation property="rotation" from="20" to="0" begin="100" duration="500" mode="Bump"/>
