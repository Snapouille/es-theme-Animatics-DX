<!-- SNES -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="avatar-flou" extra="static">
			<visible>false</visible>
		</image>
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1.2</scale>	
			<saturation>0.7</saturation>
			<flipX>true</flipX>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
				<animation property="scale" to="1" begin="" duration="500" mode="linear"/>
			
			  </storyboard>
		</image>
		
		<image name="ground" extra="true">
			<path>./ground.png</path>
			<zIndex>10</zIndex>
			<linearSmooth>true</linearSmooth>
			<origin>0.5 0.5</origin>
			<size>0.31875 0.2490741</size>									
			<pos>0.8421875 1.2763889</pos>									
				<storyboard>
					<animation property="offsetY" to="-0.4" begin="" duration="500" mode="EaseInOut"/>
				</storyboard>
		</image>
		
	
	
		<image name="avatar-yoshi, avatar-yoshi2">
			<size>0.29375 0.6675926</size>									
			<zIndex>3000</zIndex>
			<opacity>1</opacity>
			<linearSmooth>true</linearSmooth>
			<origin>0.5 0.5</origin>
			<pos>1.05 0.85</pos>	
			<scale>0.5</scale>
		</image>
	
		<image name="avatar-yoshi" extra="true">
			<path>./avatar-yoshi.png</path>

			<storyboard repeatAt="900">
				<animation property="rotation" from="20" to="0" begin="400" duration="500" mode="Bump"/>
				<animation property="offsetX" to="-0.22" 		begin="400" duration="500" mode="EaseOut"/>
				<animation property="offsetY" to="-0.30" 		begin="400" duration="500" mode="Bump"/>
				<animation property="scale" to="1" 				begin="400" duration="500" mode="linear"/>
				
				<animation property="offsetY" to="-0.4" begin="1100" autoreverse="true" duration="400" mode="Bump"/>
				
				<animation property="opacity" to="0" begin="1000" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="1200" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="1300" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="1400" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="1500" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="1600" duration="10" mode="linear"/>
				
				
				<animation property="opacity" to="0" begin="4000" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4200" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4400" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4600" duration="10" mode="linear"/>
				
				<animation property="opacity" to="1" begin="11000" duration="10" mode="linear"/>
			</storyboard>
		</image>
		
		
		<image name="avatar-yoshi2" extra="true">
			<opacity>0</opacity>
			<path>./avatar-yoshi2.png</path>

			<storyboard repeatAt="900">
				<animation property="rotation" from="20" to="0" begin="100" duration="500" mode="Bump"/>
				<animation property="offsetX" to="-0.22" begin="100" duration="500" mode="EaseOut"/>
				<animation property="offsetY" to="-0.30" begin="100" duration="500" mode="Bump"/>
				<animation property="scale" to="1" begin="100" duration="500" mode="linear"/>
				
				<animation property="offsetY" to="-0.4" begin="1100" autoreverse="true" duration="400" mode="Bump"/>
				
				<animation property="opacity" to="1" begin="1000" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="1200" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="1300" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="1400" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="1500" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="1600" duration="10" mode="linear"/>
				
				<animation property="opacity" to="1" begin="4000" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4200" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="4400" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="4600" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="11000" duration="10" mode="linear"/>
			</storyboard>
		</image>
		
		
		
		
		
		
		
		
		
		
		
	</view>

</theme>
