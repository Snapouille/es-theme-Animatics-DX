<!-- Atari ST -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		
		<image name="avatar" extra="static">
			<origin>0 0</origin>
			<pos>0.021 0.02</pos>
			<size>0.284375 0.8851852</size>									

			<scale>1</scale>
			<opacity>1</opacity>
			
			<storyboard repeat="forever">
				<animation property="x" from="0.021" to="0.022" begin="" autoreverse="true" duration="1000" mode="EaseIn"/>
				<animation property="rotation" to="0.2" begin="" autoreverse="true" duration="300" mode="linear"/>
			</storyboard>			
		</image>
			
			
		
		
		
		<image name="avatar2" extra="static"> 
			<origin>0 0</origin>
			<pos>0.48 0.15</pos>
			<size>0.3552083 0.8851852</size>									

			<scale>0.8</scale>
			<path>./avatar2.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="avatar2-light" extra="static"> 
			<origin>0 0</origin>
			<pos>0.48 0.15</pos>
			<size>0.3552083 0.8851852</size>									

			<scale>0.8</scale>
			<path>./avatar2-light.png</path>
			<zIndex>17</zIndex>
			
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="" duration="1000" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="5000" duration="100" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="5200" duration="200" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="5600" duration="500" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="7600" duration="200" autoreverse="true" repeat="2" mode="linear"/>
			</storyboard>	
			
		</image>
		
		<image name="avatar2-candle" extra="static"> 
			<origin>0 0</origin>
			<pos>0.48 0.15</pos>
			<size>0.3552083 0.8851852</size>									

			<scale>0.8</scale>
			<path>./avatar2-candle.png</path>
			<zIndex>17</zIndex>
			
			<storyboard>
				<animation property="rotation" from="0" to="-0.5" begin="1000" duration="500" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="x" from="0.48" to="0.481" begin="1000" duration="500" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="y" from="0.15" to="0.149" begin="1000" duration="500" autoreverse="true" repeat="forever" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="background-torch-right" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>									

			<scale>1</scale>
			<path>./background-torch-right.png</path>
			<zIndex>15</zIndex>
			
			<storyboard>
				<animation property="rotation" from="0" to="-0.5" begin="500" duration="500" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="x" from="0" to="0.001" begin="500" duration="500" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="y" from="0" to="-0.001" begin="500" duration="500" autoreverse="true" repeat="forever" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="background-torch-left" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>									

			<scale>1</scale>
			<path>./background-torch-left.png</path>
			<zIndex>15</zIndex>
			
			<storyboard>
				<animation property="rotation" from="0" to="-0.5" begin="300" duration="600" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="x" from="0" to="0.001" begin="300" duration="600" autoreverse="true" repeat="forever" mode="linear"/>
				<animation property="y" from="0" to="-0.005" begin="300" duration="600" autoreverse="true" repeat="forever" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="background-light" extra="static"> 
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>									

			<scale>1</scale>
			<path>./background-light.png</path>
			<zIndex>15</zIndex>
			
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="0.6" begin="" duration="1000" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="0.4" begin="5000" duration="100" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="0.6" begin="5200" duration="200" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="0.4" begin="5600" duration="500" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="0.6" begin="7600" duration="200" autoreverse="true" repeat="2" mode="linear"/>
			</storyboard>	
			
		</image>
		
		
		<image name="avatar3-eye" extra="static"> 
			<origin>0 0</origin>
			<pos>0.3 0.23</pos>
			<size>0.01875 0.0037037</size>									

			<scale>1</scale>
			<path>./avatar3-eye.png</path>
			<zIndex>17</zIndex>
			<opacity>0</opacity>
		
			<storyboard repeat="forever">
				<animation property="opacity" to="1" begin="" duration="4000" mode="EaseIn"/>
				<animation property="opacity" from="1" to="0" begin="4000" duration="50" mode="EaseIn"/>
				<animation property="opacity" from="0" to="1" begin="4050" duration="10" mode="EaseIn"/>
				<animation property="opacity" from="1" to="0" begin="4060" duration="50" mode="EaseIn"/>
				<animation property="opacity" from="0" to="1" begin="4110" duration="10" mode="EaseIn"/>
				<animation property="opacity" from="1" to="0" begin="7110" duration="4000" mode="EaseIn"/>
			</storyboard>			
		</image>
		
	</view>
</theme>

