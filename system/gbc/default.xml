<!-- Game Boy Color -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="oiseau" extra="static">
			<pos>0.25 -1</pos>
			<scale>1</scale>
			<opacity>1</opacity>
			<path>./oiseau.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="wagon" extra="static">
			<pos>-0.05 0.53</pos>
			<scale>0.25</scale>
			<rotation>-32</rotation>
			<opacity>0</opacity>
			<path>./wagon.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="chute" extra="static">
			<pos>0.43 -0.2</pos>
			<scale>0.5</scale>
			<rotation>0</rotation>
			<opacity>0</opacity>
			<path>./chute.png</path>
			<zIndex>17</zIndex>
		</image>
		
		
		
		<image name="chute" extra="true">
		
			<storyboard repeat="forever">
				
				<animation property="opacity" from="0" to="1" begin="13500" duration="10" mode="linear"/>
				<animation property="scale" to="1" begin="13500" duration="200" mode="linear"/>
				<animation property="x" to="0.3" begin="13500" duration="200" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="13690" duration="10" mode="linear"/>
				
				<animation property="opacity" from="0" to="0" begin="17500" duration="500" mode="linear"/>
			</storyboard>
		
		</image>
		
		
		<image name="wagon" extra="true">
		
			<storyboard repeat="forever">
				
				<animation property="rotation" to="-32" begin="" duration="10" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="" duration="300" mode="linear"/>
				
				<animation property="x" from="-0.05" to="0.05" begin="300" duration="1100" mode="linear"/>
				<animation property="y" from="0.53" to="0.245" begin="300" duration="1100" mode="linear"/>
				<animation property="scale" from="0.25" to="0.35" begin="300" duration="1100" mode="linear"/>
				<animation property="rotation" from="-32" to="-30" begin="600" duration="500" mode="linear"/>
				<animation property="rotation" from="-30" to="-20" begin="1100" duration="1300" mode="linear"/>
				
				<animation property="x" to="0.33" begin="1400" duration="2100" mode="easeIn"/>
				<animation property="y" to="-0.01" begin="1400" duration="2100" mode="bump"/>
				<animation property="scale" to="0.7" begin="1400" duration="2100" mode="easeOut"/>
				<animation property="rotation" from="-20" to="0" begin="2400" duration="1100" mode="linear"/>
		
				<animation property="x" to="0.37" begin="3500" duration="10000" mode="linear"/>
				<animation property="y" to="-0.01" begin="3500" duration="10000" mode="bump"/>
				<animation property="scale" to="0.72" begin="3500" duration="10000" mode="linear"/>
				
				<animation property="y" to="1" begin="13500" duration="200" mode="linear"/>
				
				<animation property="opacity" from="0" to="0" begin="17500" duration="500" mode="linear"/>
			</storyboard>
		
		</image>
		
		
		<image name="oiseau" extra="true">
			
			<storyboard repeat="forever">
	
				<animation property="y" from="-1" to="0.14" begin="3000" duration="3000" mode="linear"/>
				<animation property="rotation" to="3" begin="5000" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" from="0.14" to="0.15" begin="5800" autoreverse="true" duration="400" repeat="11" mode="EaseOut"/>
	
				<animation property="scale" to="3" begin="15000" duration="2500" mode="Linear"/>
				<animation property="x" to="-0.3" begin="15000" duration="2500" mode="linear"/>
				<animation property="y" to="-0.2" begin="15000" duration="2500" mode="bump"/>
				<animation property="opacity" from="0" to="0" begin="17500" duration="500" mode="linear"/>
	
			</storyboard>
			
		</image>
		
		
	</view>

</theme>
