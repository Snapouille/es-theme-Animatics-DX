<!-- Game Boy Color -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
		<image name="wagon" extra="true">
			<origin>0.5 0.5</origin>
			<pos>-0.05 0.86</pos>
			<size>0.3682292 0.7166667</size>									
			<scale>0.45</scale>
			<rotation>-30</rotation>
			<opacity>1</opacity>
			<path>./wagon.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>14</zIndex>
			
			<storyboard repeat="forever">
			
				<animation property="rotation" 	to="-40" 			begin="" duration="150" mode="linear"/>
				<animation property="scale" 	to="0.55" 			begin="" duration="150" mode="linear"/>
				<animation property="pos" 		to="0.035 0.68" 	begin="" duration="150" mode="linear"/>
				
				<animation property="rotation" 	to="-22" 			begin="150" duration="100" mode="linear"/>
				<animation property="scale" 	to="0.65" 			begin="150" duration="100" mode="linear"/>
				<animation property="pos" 		to="0.1 0.53" 		begin="150" duration="100" mode="linear"/>
				
				<animation property="rotation" 	to="-5" 			begin="250" duration="150" mode="linear"/>
				<animation property="scale" 	to="0.7" 			begin="250" duration="150" mode="linear"/>
				<animation property="pos" 		to="0.25 0.38" 		begin="250" duration="150" mode="linear"/>
				
				<animation property="rotation" 	to="5" 				begin="400" duration="100" mode="linear"/>
				<animation property="scale" 	to="0.75" 			begin="400" duration="100" mode="linear"/>
				<animation property="pos" 		to="0.35 0.31" 		begin="400" duration="100" mode="linear"/>
				
				<animation property="scale" 	to="0.85" 			begin="500" duration="300" mode="linear"/>
				<animation property="x" 		to="0.8" 			begin="500" duration="400" mode="linear"/>
				<animation property="y" 		to="0.41" 			begin="500" duration="250" mode="linear"/>
				<animation property="rotation" 	to="30" 			begin="500" duration="350" mode="linear"/>
				
				<animation property="scale" 	to="0.87" 			begin="800" duration="9000" mode="linear"/>
				<animation property="rotation" 	to="31" 			begin="800" duration="9000" mode="linear"/>
				<animation property="offsetY" 	to="0.03" 			begin="800" duration="9000" mode="linear"/>
				
				<animation property="scale" 	to="1"	 			begin="10000" duration="300" mode="linear"/>
				<animation property="x" 		to="1.1" 			begin="10000" duration="300" mode="linear"/>
				<animation property="y" 		to="0.83" 			begin="10000" duration="300" mode="linear"/>
				<animation property="rotation" 	to="40" 			begin="10000" duration="300" mode="linear"/>

				<animation property="opacity" to="0" begin="25000" duration="10" mode="linear"/>
			</storyboard>
		
		</image>
		
		
		
		
			
	
		<image name="parrot" extra="true">
			<origin>0 0</origin>
			<pos>0.85 -1</pos>
			<size>0.05 0.125</size>	
			
			<opacity>1</opacity>
			<path>./parrot.gif</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>190</zIndex>
			
			<storyboard repeat="forever">
				<animation property="y" from="-1" to="0.14" 	begin="8000" duration="3000" mode="linear"/>
				<animation property="rotation" to="3"		 	begin="10000" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" from="0.14" to="0.15"	begin="10800" autoreverse="true" duration="400" repeat="11" mode="EaseOut"/>
				
	
				<animation property="scale" to="2" 			begin="20000" duration="2500" mode="linear"/>
				<animation property="x" to="0.3" 			begin="20000" duration="2500" mode="linear"/>
				<animation property="y" to="-0.5" 			begin="20000" duration="2500" mode="linear"/>
				
				<animation property="opacity" to="0" 		begin="25000" duration="10" mode="linear"/>
				
			</storyboard>
			
		</image>
		
		
		<image name="chute" extra="true">
			<visible>false</visible>
		</image>
		
		
		
	</view>

</theme>
