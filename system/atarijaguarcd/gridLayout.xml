	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
		<image name="avatar" extra="static">
			<size>0.2161458 0.3148148</size>									
			<origin>0 0</origin>
			<pos>0.72 0.45</pos>
			<scale>2</scale>
			<opacity>0</opacity>
		
			<storyboard>
				<animation property="opacity" to="1" begin="100" duration="10" mode="linear"/>	
