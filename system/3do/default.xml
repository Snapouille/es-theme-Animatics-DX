<!-- 3dO -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		
		
		<image name="avatar" extra="static">
		
			<pos>0.3 0.295</pos>
			<scale>0.5</scale>
			<opacity>1</opacity>

			<storyboard>
				
        		<animation property="x" to="0.1" begin="900" autoreverse="true" duration="20000" repeat="forever" mode="linear"/>
        		<animation property="color" to="202020" begin="900" autoreverse="true" duration="20000" repeat="forever" mode="linear"/>
        						
			</storyboard>
		
		</image>
		
		
		
	</view>

</theme>
