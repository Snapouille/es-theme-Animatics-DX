<!-- OpenLara -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="avatar" extra="static">
			<origin>0.5 0.5</origin>	
			<size>0.2604167 0.8333333</size>									
			<scale>0.9</scale>
			<linearSmooth>true</linearSmooth>		
			
			<pos>1.05 0.53</pos>									
			<path>./avatar.png</path>

			<storyboard>
				<animation property="offsetX" to="-0.215" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>

		</image>
		
	</view>
</theme>
