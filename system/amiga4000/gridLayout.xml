<!-- Amiga 4000 -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	
			<scale>1</scale>	
			<flipX>true</flipX>
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
	
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<size>0.29375 0.9092593</size>									
			<pos>0.755 0.51</pos>									
			<path>./avatar.png</path>
			<scale>0.8</scale>

			<storyboard>
				<animation property="scale" to="0.82" begin="" duration="600" mode="EaseOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="scale" to="0.82" begin="" duration="600" mode="EaseOut"/>
				<animation property="offsetY"  to="0.06"/>
			</storyboard>
		</image>
		
	</view>

</theme>
