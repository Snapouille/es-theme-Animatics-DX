<!-- FM Towns -->


<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		<image name="avatar-ship" extra="static">
			<pos>0.2 0.3</pos>
			<scale>0</scale>
			<opacity>1</opacity>
			<path>./avatar-ship.png</path>
			<zIndex>14</zIndex>
			<storyboard repeat="forever">
			
				<animation property="scale" to="0.8" begin="800" duration="1200" mode="linear"/>
				<animation property="x" to="0.29" begin="800" duration="1200" mode="bump"/>
				
				<animation property="y" to="0.305" begin="2000" duration="1000" autoreverse="true" repeat="9" mode="linear"/>
				<animation property="rotation" to="0.5" begin="2000" duration="1000" autoreverse="true" repeat="9" mode="linear"/>
				
				<animation property="scale" to="10" begin="20000" duration="1000" mode="linear"/>
				<animation property="x" to="-0.5" begin="20000" duration="1000" mode="linear"/>
				<animation property="y" to="0" begin="20000" duration="1000" mode="linear"/>
				<animation property="opacity" to="0" begin="20900" duration="100" mode="linear"/>
			</storyboard>
		</image>
	</view>

</theme>
