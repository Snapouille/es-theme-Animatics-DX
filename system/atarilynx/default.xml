<!-- Atari Lynx -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		
		<image name="avatar" extra="static">
			<pos>0.1 0.4</pos>
			<scale>0.5</scale>
			<rotation>20</rotation>
			<opacity>1</opacity>
		</image>
		
		
		<image name="shadow" extra="static">
			<pos>0.333 0.59</pos>
			<scale>0.3</scale>
			<rotation>12</rotation>
			<path>./shadow.png</path>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			<zIndex>14</zIndex>
		</image>
		
		
		<image name="monster" extra="static">
			<pos>0.08 -1</pos>
			<scale>0.65</scale>
			<opacity>1</opacity>
			<path>./monster.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>14</zIndex>
		</image>
		
		
		<image name="monster" extra="true">
		
			<storyboard repeat="forever">
				<animation property="y" from="-1" to="0.13" begin="" duration="1000" mode="easeIn"/>
				<animation property="rotation" to="3" begin="" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" from="0.13" to="0.14" begin="800" autoreverse="true" duration="400" repeat="15" mode="easeOut"/>

				<animation property="scale" to="1.3" begin="13200" duration="1000" mode="linear"/>
				<animation property="x" to="-0.26" begin="13200" duration="1000" mode="linear"/>
				<animation property="y" to="-0.26" begin="13200" duration="1000" mode="linear"/>
				
				<animation property="y" to="-0.26" begin="14200" duration="2800" mode="linear"/>
				
			</storyboard>
		
		</image>
		
		
		
		<image name="avatar" extra="true">
			 <storyboard repeat="forever">
			    
				<animation property="x" from="0.1" to="0.11" begin="" duration="1500" mode="linear"/> 
				<animation property="y" from="0.4" to="0.42" begin="1000" duration="500" mode="bump"/>
				<animation property="y" from="0.42" to="0.15" begin="1500" duration="1000" mode="bump"/>
				
				
				<animation property="rotation" from="20" to="0" begin="1500" duration="2000" mode="easeOut"/>
				<animation property="x" from="0.1" to="0.33" begin="1500" duration="2000" mode="bump"/>
				<animation property="y" from="0.15" to="0.23" begin="2500" duration="1000" mode="linear"/>
                <animation property="scale" from="0.5" to="1.1" begin="1500" duration="1500" mode="easeOut"/>
				<animation property="scale" from="1.1" to="1" begin="3000" duration="500" mode="linear"/>
				
				<animation property="rotation" to="0.5" begin="3500" autoreverse="true" duration="650" repeat="7" mode="linear"/>
				<animation property="y" from="0.23" to="0.235" begin="3500" autoreverse="true" duration="400" repeat="1" mode="easeOut"/>
				
				
				<animation property="scale" to="7" begin="13000" duration="1500" mode="Linear"/>
				<animation property="x" to="-0.9" begin="13000" duration="1500" mode="linear"/>
				<animation property="y" to="-0.6" begin="13000" duration="1500" mode="linear"/>
				<animation property="opacity" to="0" begin="13500" duration="1000" mode="linear"/>
				
				<animation property="opacity" to="0" begin="14500" duration="4100" mode="linear"/>
				
            </storyboard>		
		</image>
		
		
		
		<image name="shadow" extra="true">
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="6500" duration="1000" mode="linear"/> 
				
				<animation property="rotation" from="12" to="0" begin="6500" duration="7000" mode="linear"/>
				<animation property="x" from="0.333" to="0.28" begin="6500" duration="7000" mode="linear"/>
				<animation property="y" from="0.59" to="0.48" begin="6500" duration="7000" mode="linear"/>
                <animation property="scale" from="0.3" to="0.8" begin="6500" duration="7000" mode="linear"/>
				
				<animation property="opacity" from="1" to="0" begin="13000" duration="1500" mode="EaseOut"/>
				
				<animation property="opacity" to="0" begin="14500" duration="4100" mode="linear"/>
			</storyboard>
		</image>
		
		
		
	</view>

</theme>
