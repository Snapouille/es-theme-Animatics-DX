<!-- Atari Lynx -->

<theme>
<formatVersion>7</formatVersion>

<view name="system">
		
	<image name="BG_snapLegacy" extra="true">
		<size>1 1</size>									
		<scale>1</scale>
		<pos>0.5 0.5</pos>	<scale>1</scale>	
		<path>./background.jpg</path>
		<flipX>true</flipX>
		<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
		  </storyboard>
	</image>
		
		
		
	<image name="avatar.gif" extra="true">
		<visible>false</visible>
	</image>
	
	<image name="avatar-nodisk" extra="true">
		<origin>0 0</origin>
		<!-- <pos>0.69 0.32</pos> -->
		
		<pos>1.1 1.1</pos>
		<size>0.2911458 0.6666667</size>									
		<path>./avatar-nodisk.png</path>
		<scale>1</scale>
		<linearSmooth>true</linearSmooth>
		<rotation>20</rotation>
		<opacity>1</opacity>
		<zIndex>23</zIndex>
		
		<storyboard repeatAt="1000">
			<animation property="x" to="0.69" begin="100" duration="700" mode="linear"/> 
			<animation property="y" to="0.32" begin="100" duration="700" mode="bump"/>
			
			<animation property="opacity" to="1" begin="11000" duration="100" mode="linear"/>
		</storyboard>		
	</image>
	
	
	<image name="avatar-disk" extra="true">
		<origin>0.5 0.5</origin>									
		<size>0.0703125 0.1842593</size>									
		<pos>1.16 1.055</pos>									
		<path>./avatar-disk.gif</path>
		<linearSmooth>true</linearSmooth>
		<opacity>1</opacity>
		<zIndex>2401</zIndex>
		<scale>1</scale>
		
		
		<storyboard repeatAt="1000">
			<animation property="x" to="0.75" begin="100" duration="700" mode="linear"/> 
			<animation property="y" to="0.275" begin="100" duration="700" mode="bump"/>
		
		
			<animation property="pos" to="0.67 0.1" begin="3000" duration="500" autoreverse="true" mode="EaseInOut"/>
			<animation property="scale" to="1.3"    begin="3000" duration="500" autoreverse="true" mode="EaseInOut"/>
			
			<animation property="pos" to="0.67 0.1" begin="4500" duration="500" autoreverse="true" mode="EaseInOut"/>
			<animation property="scale" to="1.3"    begin="4500" duration="500" autoreverse="true" mode="EaseInOut"/>
			
			
			<animation property="opacity" to="1" begin="11000" duration="100" mode="linear"/>

		</storyboard>		
	</image>
	
	
	<image name="rope" extra="true">
		<origin>0.5 0.5</origin>									
		<size>0.0869792 0.0972222</size>									
		<pos>0.727 0.2273148</pos>									
		<path>./rope.png</path>
		<linearSmooth>true</linearSmooth>
		<opacity>0</opacity>
		<zIndex>21</zIndex>
		<rotation>20</rotation>
		
		<storyboard repeatAt="1000">
		
			<animation property="opacity" to="1" begin="3300" duration="10" mode="linear"/>
			<animation property="opacity" to="0" begin="3750" duration="10" mode="linear"/>
			
			<animation property="opacity" to="1" begin="4800" duration="10" mode="linear"/>
			<animation property="opacity" to="0" begin="5250" duration="10" mode="linear"/>
			
			<animation property="opacity" to="0" begin="11000" duration="100" mode="linear"/>

		</storyboard>		
	</image>
		
		
	<image name="monster" extra="true">
		<origin>0 0</origin>
		<pos>0.08 -1</pos>
		<size>0.2083333 0.2990741</size>									
		<scale>0.65</scale>
		<opacity>1</opacity>
		<path>./monster.gif</path>
		<linearSmooth>true</linearSmooth>
		<rotation>3</rotation>
		<zIndex>7</zIndex>
	
		<storyboard repeatAt="1000">
			<animation property="y" from="-1" to="0.13" begin="" duration="1000" mode="easeIn"/>
			<animation property="rotation" to="3" begin="" autoreverse="true" duration="750" repeat="5" mode="linear"/>
			<animation property="y" from="0.13" to="0.14" begin="800" autoreverse="true" duration="670" repeat="5" mode="easeOut"/>
			
			<animation property="offsetX" to="-0.02" begin="4700" duration="500" autoreverse="true" mode="Bump"/>
			<animation property="offsetY" to="-0.04" begin="4700" duration="500" autoreverse="true" mode="EaseInOut"/>
			
			<animation property="offsetX" to="0.07" begin="5700" duration="1800" autoreverse="true" mode="linear"/>
		</storyboard>
	</image>
	
	
	<image name="blood-splash1" extra="true">
		<visible>false</visible>
	</image>

	
	<image name="blood-splash2" extra="true">
		<visible>false</visible>
	</image>
	
	<image name="blood-drop0, blood-drop1, blood-drop2" extra="true">
		<visible>false</visible>
	</image>
	
	<image name="blood-final0, blood-final1, blood-final2" extra="true">
		<visible>false</visible>
	</image>
	
	<image name="shadow" extra="true">
		<visible>false</visible>
	</image>
	
	
	
</view>

</theme>
