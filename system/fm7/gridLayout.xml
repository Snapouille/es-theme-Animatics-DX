<!-- Fujitsu FM7 -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>									

			<storyboard repeat="forever">
				<animation property="scale" to="1.1" begin="" duration="4000" mode="EaseInOut"/>
				<animation property="scale" to="1" begin="16000" duration="4000" mode="EaseInOut"/>
				<animation property="opacity" to="1" begin="20200" duration="100" mode="linear"/>
			</storyboard>
		</image>
		
		
		
		<image name="avatar-stone" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.4598958 0.1842593</size>									
			<pos>0.7736979 1.2812037</pos>	
			<pos ifHelpPrompts="false">0.7736979 1.3012037</pos>
			<path>./avatar-stone.png</path>
			<zIndex>7</zIndex>
				<storyboard repeat="forever">
					<animation property="offsetY" to="-0.4" begin="" duration="4000" mode="EaseInOut"/>
					<animation property="offsetY" to="0.4"  begin="16000" duration="4000" mode="EaseInOut"/>
				</storyboard>
		</image>


		
		<image name="bg_mountain, avatar-mazinger-fly, avatar-mazinger-fly-flip, avatar-mazinger-stand, avatar-mazinger-stand-flip, avatar-punch, avatar-mazinger-fire, blast1, blast2">
			<origin>0.5 0.5</origin>	
			<linearSmooth>true</linearSmooth>
		</image>
		
		
		<image name="bg_mountain" extra="true">
			<path>./bg_mountain.png</path>
			<size>1.4270833 0.3481481</size>									
			<pos>0.5 0.9</pos>	
			<scale>1.1</scale>
			<zIndex>6</zIndex>
		
			<storyboard repeat="forever">
				<animation property="scale" to="1" begin="" duration="4000" mode="linear"/>
				<animation property="scale" to="1.1" begin="16000" duration="4000" mode="linear"/>
				<animation property="opacity" to="1" begin="20200" duration="100" mode="linear"/>
			</storyboard>
		</image>
		
		
		<image name="avatar-breebera-test" extra="true">
			<path>./avatar-breebera.gif</path>
			<size>0.3098958 0.2666667</size>	
			<flipX>true</flipX>
			<pos>1 0.7</pos>		
			<scale>0.1</scale>
			<zIndex>5</zIndex>

			<storyboard repeat="forever">				
				<animation property="pos" to="0.7 0.3" 		begin="" duration="1500" mode="EaseInOut"/>
				<animation property="scale" to="0.7" 		begin="" duration="1500" mode="EaseInOut"/>
