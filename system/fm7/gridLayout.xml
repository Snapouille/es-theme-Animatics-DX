			<flipX>true</flipX>
			<zIndex>22</zIndex>
			<opacity>0</opacity>
			<scale>0.9</scale>

			<storyboard repeat="forever">				
				<animation property="opacity" to="1" 		begin="13000" duration="100" mode="linear"/>
