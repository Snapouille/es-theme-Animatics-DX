				<animation property="scale" to="1" 			begin="3500" duration="1000" mode="EaseInOut"/>
				
				<animation property="opacity" to="0" begin="20200" duration="100" mode="linear"/>
			</storyboard>

		</image>
		
	
		<image name="avatar-mazinger-fly" extra="true">
			<path>./avatar-mazinger-fly.png</path>
			<size>0.4442708 0.7259259</size>									
			<pos>-0.05 -0.05</pos>
			<scale>0.1</scale>
			<zIndex>12</zIndex>

			<storyboard repeat="forever">				
				<animation property="pos" to="0.7617188 0.537963" 	begin="4000" duration="1500" mode="bump"/>
				<animation property="scale" to="1" 					begin="4500" duration="1000" mode="linear"/>
				<animation property="opacity" to="0" 				begin="5500" duration="100" mode="linear"/>
				
				<animation property="opacity" to="0" begin="20200" duration="100" mode="linear"/>
