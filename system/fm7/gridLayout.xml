			<path>./avatar-punch.gif</path>
			<size>0.1859375 0.1527778</size>									
			<pos>0.8005208 0.4055556</pos>									
			<opacity>0</opacity>
			<zIndex>22000</zIndex>
			<scale>0.59</scale>
			
			<storyboard repeat="forever">
				<animation property="opacity" to="1" 				begin="6000" duration="100" mode="linear"/>
				
