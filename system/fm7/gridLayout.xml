			<zIndex>21</zIndex>

			<storyboard repeat="forever">	
				<animation property="opacity" to="1" begin="5600" duration="100" mode="linear"/>
				<animation property="opacity" to="0" begin="6100" duration="10" mode="linear"/>
				<animation property="opacity" to="1" begin="11500" duration="10" mode="linear"/>
				<animation property="opacity" to="0" begin="13000" duration="100" mode="linear"/>
				
				<animation property="opacity" to="0" begin="20200" duration="100" mode="linear"/>
