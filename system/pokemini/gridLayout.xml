	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
		<image name="Pikachu03, Pikachu04" extra="static">
			<size>0.75 1.1222222</size>
			<scale>0.6</scale>
			<opacity>1</opacity>
			<linearSmooth>true</linearSmooth>
			<zIndex>1000</zIndex>
			<origin>0.5 0.5</origin>
			<pos>1.05 0.625</pos>
			<pos ifHelpPrompts="false">1.05 0.685</pos>	
		</image>
		
		<image name="Pikachu03" extra="static">
			<path>./Pikachu03.png</path>

			<storyboard repeatAt="1000">
				<animation property="offsetX" to="-0.2" begin="100" duration="500" mode="EaseOut"/>

				<animation property="opacity" to="0" begin="1400" duration="50" mode="linear"/>
				<animation property="opacity" to="1" begin="1850" duration="50" mode="linear"/>
				<animation property="opacity" to="0" begin="2200" duration="50" mode="linear"/>
				<animation property="opacity" to="1" begin="2650" duration="50" mode="linear"/>
				
				<animation property="opacity" to="1" begin="10000" duration="100" mode="linear"/>
			</storyboard>
		</image>
		
		
		<image name="Pikachu04" extra="static">
			<path>./Pikachu04.png</path>
			<opacity>0</opacity>
			
			<storyboard repeatAt="1000">
				<animation property="offsetX" to="-0.2" begin="100" duration="500" mode="EaseOut"/>

				<animation property="opacity" to="1" begin="1400" duration="50" mode="linear"/>
				<animation property="opacity" to="0" begin="1850" duration="50" mode="linear"/>
				<animation property="opacity" to="1" begin="2200" duration="50" mode="linear"/>
				<animation property="opacity" to="0" begin="2650" duration="50" mode="linear"/>
				
				<animation property="opacity" to="0" begin="10000" duration="100" mode="linear"/>
			</storyboard>
		</image>
		
		
	
	
