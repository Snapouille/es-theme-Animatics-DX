<!-- HB Mame  -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<size>0.2182292 0.787037</size>									
			<pos>1.05 0.55</pos>									
			<path>./avatar.png</path>

			<storyboard>
				<animation property="offsetX" to="-0.2" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.1"/>
				<animation property="offsetX" to="-0.2" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
		
		</image>
	</view>

</theme>


