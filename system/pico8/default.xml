<!-- Pico8 -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">

		<image name="avatar-celeste" extra="true">
			<origin>0 0</origin>									
			<size>0.2604167 0.575</size>									
			<pos>1 0.6</pos>
			<path>./avatar-celeste.png</path>
			<scale>0.9</scale>
			<linearSmooth>true</linearSmooth>
			<zIndex>19</zIndex>
			<storyboard repeat="forever">
				<animation property="x" to="0.2" begin="2000" duration="1000" mode="linear"/>
				<animation property="y" to="0.17" begin="2000" duration="1000" mode="bump"/>
				<animation property="y" to="0.18" begin="3000" duration="6000" mode="linear"/>
				<animation property="y" to="0.6" begin="9000" duration="1000" mode="linear"/>
				<animation property="opacity" to="0" begin="9500" duration="500" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar-fraise" extra="static">
			<origin>0 0</origin>									
			<size>0.2083333 0.2425926</size>									
			<path>./avatar-fraise.png</path>
			<pos>0.18 0.07</pos>
			<scale>0.9</scale>
			<zIndex>120</zIndex>
			<storyboard repeat="forever">
        		<animation property="scale"    to="1.005" begin="0"   	 autoreverse="true" duration="500" repeat="3" mode="linear"/>
        		<animation property="rotation" to="3" begin="0" 	 autoreverse="true" duration="500" repeat="3" mode="linear"/>
				<animation property="scale"    to="1.005" begin="3000"   autoreverse="true" duration="1000" repeat="3" mode="linear"/>
        		<animation property="rotation" to="3" begin="3000"   autoreverse="true" duration="1000" repeat="3" mode="linear"/>
				<animation property="scale"    to="1.005" begin="9000"   autoreverse="true" duration="500" mode="linear"/>
        		<animation property="rotation" to="3" begin="9000" 	autoreverse="true" duration="425" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>
