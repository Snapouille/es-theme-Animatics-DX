<!-- Atomiswave  -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		
		
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
		
		
		<image name="avatar" extra="static">
			<visible>false</visible>
		</image>
		
		
		<image name="avatar2" extra="static">
			<origin>0.5 0.5</origin>
			<size>0.3333333 0.9101852</size>									
			<scale>0.9</scale>
			<zIndex>19</zIndex>
			<flipX>true</flipX>
			<opacity>1</opacity>
			<path>./avatar.png</path>
			
			
			<pos>1.05 0.55</pos>									

			<storyboard>
				<animation property="offsetX" to="-0.215" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.1"/>
				<animation property="offsetX" to="-0.215" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>

		
		</image>
		
		
		<image name="avatar2-eyes" extra="static">
			<visible>false</visible>
		</image>
		
		
		
		
		<image name="sandstorm" extra="static">
			<origin>0 0</origin>
			<pos>0 0.2</pos>
			<size>0.3427083 0.2240741</size>									
			<flipX>true</flipX>
			<scale>4</scale>
			<zIndex>15</zIndex>
			<opacity>1</opacity>
			<path>./sandstorm.png</path>


			<storyboard repeat="forever">
				<animation property="x" from="0" to="-0.35" begin="" autoreverse="true" duration="20000" mode="linear"/>
				<animation property="y" from="0.2" to="0.203" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="scale" from="4" to="4.01" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="opacity" from="1" to="0.6" begin="" autoreverse="true" duration="1000" repeat="20" mode="linear"/>
			
			</storyboard>

		
		</image>
		
		
		
		
	</view>

</theme>
