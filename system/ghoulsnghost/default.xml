<!-- Ghouls N Ghost collection -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="avatar" extra="static">
			<origin>0.5 0.5</origin>	
			<size>0.2322917 0.7546296</size>									
			<pos>0.25 0.47</pos>	
			<scale>0.4</scale>
			<linearSmooth>true</linearSmooth>					
			<storyboard>
				
        		<animation property="x" to="0.51" begin="" duration="1000" mode="EaseInOut"/>
				<animation property="scale" to="1" begin="" duration="1000" mode="Bump"/>
        		<animation property="y" to="0.53" begin="" duration="1200" mode="EaseInOut"/>
				
			</storyboard>		

		</image>

		<image name="fog" extra="true">
			<origin>0 0</origin>
			<pos>0 0.2</pos>
			<size>0.3427083 0.2240741</size>	
			<scale>4</scale>
			<zIndex>15</zIndex>
			<opacity>1</opacity>								
			<path>./fog.png</path>
			<storyboard repeat="forever">
				<animation property="x" from="0" to="-0.35" begin="" autoreverse="true" duration="20000" mode="linear"/>
				<animation property="y" from="0.2" to="0.203" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="scale" from="4" to="4.01" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="opacity" from="1" to="0.6" begin="" autoreverse="true" duration="1000" repeat="20" mode="linear"/>
			</storyboard>
		</image>
		
	</view>
</theme>
