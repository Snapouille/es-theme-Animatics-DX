<!-- Sega 32X -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">
	
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
	
	

		
		<image name="avatar" extra="true">
			<origin>0 0</origin>
			<pos>0.35 1</pos>
			<size>0.375 0.275</size>									
			<scale>10</scale>
			<zIndex>17</zIndex>
			<opacity>1</opacity>
			
			<storyboard repeat="forever">
				<animation property="y" from="1" to="0.5" begin="100" duration="600" mode="Linear"/>
				<animation property="scale" from="10" to="1.1" begin="100" duration="600" mode="Linear"/>
				
				<animation property="x" to="0.47" begin="4000" duration="1000" mode="Linear"/>
				<animation property="y" to="0.42" begin="4000" duration="1000" mode="Linear"/>
				<animation property="scale" from="1" to="0.05" begin="4000" duration="1000" mode="Linear"/>

				<animation property="x" to="0.7" begin="5000" duration="1000" mode="Linear"/>
				<animation property="scale" from="0.05" to="0.03" begin="5000" duration="1000" mode="Linear"/>
				<animation property="opacity" from="1" to="0" begin="5900" duration="100" mode="linear"/>	

				<animation property="opacity" to="0" begin="13000" duration="10" mode="linear"/>
			</storyboard>			
		</image>







		<image name="avatar2" extra="static"> 
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./avatar2.png</path>
			<zIndex>1000</zIndex>
			<opacity>0</opacity>
		</image>



		<image name="avatar2" extra="true">
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="1000" duration="2000" mode="linear"/>		
				<animation property="scale" from="1" to="1.0007" begin="1000" duration="250" autoreverse="true" repeat="10" mode="linear"/>	
				<animation property="rotation" to="0.1" begin="1100" autoreverse="true" duration="300" repeat="5" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="5000" duration="3000" mode="linear"/>	
				
				<animation property="opacity" to="0" begin="13000" duration="10" mode="linear"/>
			</storyboard>			
		</image>
		
	</view>
</theme>
