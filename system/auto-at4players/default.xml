<!-- auto 4 Players -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
	
		<image name="avatar" extra="static">
			<origin>0 0</origin>									
			<size>0.29375 0.8027778</size>									
			<pos>0.2 0.3</pos>
			<scale>0.2</scale>
			<opacity>1</opacity>
			<linearSmooth>true</linearSmooth>
			<zIndex>20</zIndex>
		</image>

		<image name="avatar2" extra="static">
			<origin>0 0</origin>									
			<size>0.2 0.2546296</size>									
			<pos>-1 0</pos>
			<scale>0.4</scale>
			<path>./avatar2.png</path>
			<zIndex>19</zIndex>
		</image>
	
	
		<image name="avatar" extra="true">
			

			<storyboard>
						
				<animation property="scale" from="0.3" to="0.98" begin="" duration="1700" mode="Linear"/>
        		<animation property="x" from="0.2" to="0.15" begin="200" duration="1500" mode="EaseOut"/>
				<animation property="y" from="0.3" to="0.01" begin="200" duration="1500" mode="EaseOut"/>
				
				<animation property="scale" from="0.98" to="1" begin="1700" duration="4000" autoreverse="true" repeat="forever" mode="Linear"/>
				
        						
			</storyboard>

		
		</image>
		
		
		<image name="avatar2" extra="true">
			<storyboard repeat="forever">
				<animation property="x" from="-1" to="1" duration="5000" mode="easyIn"/>
				<animation property="y" to="0.3" begin="1000" duration="1000" mode="easyIn"/>
				<animation property="y" to="0.1" begin="2000" duration="1000" mode="easyIn"/>
				<animation property="y" to="0.3" begin="3000" duration="1000" mode="easyIn"/>
				<animation property="y" to="0" begin="4000" duration="1000" mode="easyIn"/>
				<animation property="x" from="1" to="1" duration="10000" mode="easyIn"/>
			</storyboard>			
		</image>
		
		
	</view>

</theme>
