<!-- Saturn -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		<image name="avatar-dragon" extra="static">
			<origin>0 0</origin>									
			<size>0.29375 0.9092593</size>									
			<pos>1.1 -0.3</pos>
			<scale>0.5</scale>
			<path>./avatar-dragon.png</path>
			<opacity>0</opacity>
			<rotation>0</rotation>
			<zIndex>19</zIndex>
			
			<storyboard repeat="forever">
			
				<animation property="opacity" to="1" begin="400" duration="200" mode="linear"/>
				<animation property="x" to="0.35" begin="500" duration="1000" mode="linear"/>
				<animation property="y" to="0.01" begin="500" duration="1000" mode="bump"/>
				<animation property="scale" to="0.9" begin="500" duration="1000" mode="linear"/>
				<animation property="rotation" to="-40" begin="500" duration="1000" mode="linear"/>
				
				<animation property="rotation" from="-40" to="-40.5" begin="1500" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" to="0.02" begin="1500" autoreverse="true" duration="400" repeat="14" mode="EaseOut"/>
				<animation property="x" to="0.345" begin="1500" autoreverse="true" duration="400" repeat="14" mode="EaseOut"/>
	
				<animation property="scale" to="3" begin="15000" duration="2500" mode="bump"/>
				<animation property="x" to="-1" begin="15000" duration="2500" mode="bump"/>
				<animation property="y" to="-1" begin="15000" duration="2500" mode="linear"/>
				
				<animation property="opacity" to="0" begin="17500" duration="500" mode="linear"/>
				
				
				
				<animation property="opacity" to="0" begin="20000" duration="1000" mode="linear"/>
			</storyboard>
		</image>
	</view>

</theme>
