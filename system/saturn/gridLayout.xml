<!-- Saturn -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	
			<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>
			<path>./background.jpg</path>
			<flipX>true</flipX>
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
	<!-- background Mask derriÃ¨re le Snap Legacy -->
	<image name="background-mask" extra="true">
		<visible>false</visible>
	</image>

	<image name="avatar-dragon" extra="static">
		<visible>false</visible>
	</image>
	
	
	<image name="avatar-dragon-static" extra="static">
		<origin>0.5 0.5</origin>									
		<size>0.5145833 1.0388889</size>									
		<pos>1.5 -0.5</pos>									
		<path>./avatar-dragon-static.gif</path>
		<linearSmooth>true</linearSmooth>
		<scale>0.1</scale>
		<zIndex>20000</zIndex>
		
		<storyboard repeat="forever">
			<animation property="pos" to="0.8 0.53" begin="500" duration="3500" mode="EaseInOut"/>
			<animation property="scale" to="0.7" begin="500" duration="3500" mode="Bump"/>
			
			<animation property="offsetX" to="-0.9" begin="10333" duration="2000" mode="EaseInOut"/>
			<animation property="offsetY" to="-0.85" begin="10333" duration="2000" mode="EaseInOut"/>
			<animation property="scale" to="0.5" begin="10333" duration="2000" mode="EaseInOut"/>
			
			<animation property="opacity" to="0" begin="20000" duration="1" mode="linear"/>
		</storyboard>
	</image>
	
	<image name="avatar-dragon2" extra="static">
		<visible>false</visible>
	</image>
	
</view>

</theme>
