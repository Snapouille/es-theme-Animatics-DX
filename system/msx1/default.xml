<!-- MSX -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="penguin" extra="static">
			<origin>0 0</origin>									
			<size>0.3182292 0.5509259</size>										
			<pos>1 0.34</pos>
			<scale>0.7</scale>
			<rotation>0</rotation>
			<zIndex>180</zIndex>
			<opacity>1</opacity>
			<path>./penguin.png</path>
		
		
		
			 <storyboard repeat="forever">
				
				<animation property="x" from="1" to="-0.01" begin="" duration="3000" mode="Easein"/>
						
                <animation property="x" to="0.1" begin="3000" duration="1000" mode="bump"/>
				<animation property="y" to="0.1" begin="3000" duration="1000" mode="bump"/>
                <animation property="rotation" to="-80" begin="3000" duration="1000" mode="bump"/>
				
				<animation property="y" to="0.37" begin="4000" duration="500" mode="EaseOut"/>
				
				<animation property="x" to="0.35" begin="4500" duration="1000" mode="bump"/>
				<animation property="rotation" from="-80" to="-20" begin="4500" duration="1000" mode="linear"/>
				<animation property="y" to="0.2" begin="4500" duration="1000" mode="bump"/>
                <animation property="scale" to="1" begin="4500" duration="1000" mode="easeIn"/>
				
				<animation property="scale" to="0.99" begin="5500" autoreverse="true" duration="500" repeat="9" mode="linear"/>
				<animation property="x" to="0.355" begin="5500" autoreverse="true" duration="500" repeat="9" mode="linear"/>
				<animation property="y" to="0.205" begin="5500" autoreverse="true" duration="500" repeat="9" mode="linear"/>
				<animation property="rotation" from="-20" to="-21" begin="5500" autoreverse="true" duration="500" repeat="9" mode="linear"/>
				
				<animation property="scale" from="1" to="7" begin="14800" duration="1500" mode="linear"/>
				<animation property="x" from="0.355" to="-0.6" begin="14800" duration="1500" mode="linear"/>
				<animation property="y" from="0.205" to="-0.5" begin="14800" duration="1500" mode="linear"/>
				<animation property="opacity" to="0" begin="14800" duration="1500" mode="linear"/>

            </storyboard>		
			
		</image>
		
		
		
		<image name="sky" extra="static">
			<origin>0 0</origin>									
			<size>0.5255208 0.2777778</size>									
			<pos>0.07 0.12</pos>
			<path>./sky.png</path>
			<opacity>1</opacity>
			<zIndex>30</zIndex>
			
			<storyboard repeat="forever">
						
					<animation property="opacity" from="1" to="0.8" begin="" autoreverse="true" duration="1500" repeat="30" mode="linear"/>
					<animation property="x" to="0.03" begin="" autoreverse="true" duration="46000" mode="linear"/>
					
			</storyboard>
		</image>
		
		
		
		
		
	</view>

</theme>
