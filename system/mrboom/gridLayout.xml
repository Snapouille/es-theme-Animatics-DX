<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
	
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>	
			<size>0.315625 0.6925926</size>									
			<pos>1.1 0.63</pos>	
			<scale>0.7</scale>
			<linearSmooth>true</linearSmooth>			

			<storyboard>
				<animation property="offsetX" to="-0.27" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.06"/>
				<animation property="offsetX" to="-0.27" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
		</image>
		
	</view>

</theme>


