        		<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar2" extra="static">
			<origin>0 0</origin>
			<pos>0.4 -0.245</pos>
			<maxSize>0.265 0.557</maxSize>
			<linearSmooth>true</linearSmooth>
			<path>./avatar-saw.png</path>
			<zIndex>20</zIndex>
			<storyboard>
				<animation property="y" from="-1" begin="0" duration="1000" mode="easyOut"/>
        		<animation property="rotation" to="360" begin="0" autoreverse="false" duration="800" repeat="forever" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>
