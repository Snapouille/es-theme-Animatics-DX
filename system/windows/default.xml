<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="static">
			<origin>0 0</origin>
			<pos>0.4 0.4</pos>
			<size>0.2911458 0.3759259</size>									
			<storyboard>
				<animation property="y" from="2" begin="0" duration="350" mode="easyOut"/>
