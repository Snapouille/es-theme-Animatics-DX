<!-- Trad FR -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="true">
			<origin>0 0</origin>
			<pos>0.68 -1</pos>
			<size>0.3125 0.4907407</size>									
			<scale>0.95</scale>
			<opacity>1</opacity>
			<path>./avatar.png</path>
			<zIndex>20</zIndex>
			
			<storyboard>
				<animation property="y" to="0.47" begin="100" duration="500" mode="linear"/>
				<animation property="y" to="0.45" begin="600" duration="200" mode="linear"/>
			</storyboard>
		</image>
		
		
		<image name="avatar-island" extra="static">
			<origin>0.5 0.5</origin>
			<pos>0.82 1.02</pos>
			<size>0.4161458 0.6648148</size>									
			<scale>1</scale>
			<opacity>1</opacity>
			<rotation>-5</rotation>
			<path>./avatar-island.png</path>
			<zIndex>13</zIndex>
			
			<storyboard>
				<animation property="y" to="1.04" begin="550" duration="50" mode="linear"/>
				<animation property="y" to="1.02" begin="600" duration="200" mode="linear"/>
			</storyboard>
		</image>
		
		
		
		<image name="avatar-island_left" extra="static">
			<origin>0 0</origin>
			<pos>0.05 0.17</pos>
			<size>0.1479167 0.2444444</size>									

			<scale>1</scale>
			<opacity>1</opacity>
			<rotation>20</rotation>
			<path>./avatar-island_left.png</path>
			<zIndex>14</zIndex>
			
			<storyboard repeat="forever">
				<animation property="x" to="0.07" begin="" duration="7000" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="rotation" from="20" to="10" begin="" duration="28000" autoreverse="true" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar-island_center" extra="static">
			<origin>0 0</origin>
			<pos>0.70 0.19</pos>
			<size>0.1557292 0.2416667</size>									

			<scale>0.7</scale>
			<opacity>1</opacity>
			<rotation>-10</rotation>
			<path>./avatar-island_center.png</path>
			<zIndex>13</zIndex>
			
			<storyboard repeat="forever">
				<animation property="x" to="0.96" begin="" duration="18000" repeat="2" autoreverse="true" mode="linear"/>
				<animation property="rotation" from="-10" to="20" begin="" duration="36000" autoreverse="true" mode="linear"/>
			</storyboard>
		</image>
		
		
		<image name="avatar-island_up" extra="static">
			<origin>0 0</origin>
			<pos>0.4 0</pos>
			<size>0.2567708 0.2166667</size>									

			<scale>1</scale>
			<opacity>1</opacity>
			<rotation>0</rotation>
			<path>./avatar-island_up.png</path>
			<zIndex>8</zIndex>
			
			<storyboard repeat="forever">
				<animation property="x" to="0.2" begin="" duration="40000" autoreverse="true" mode="linear"/>
				
			</storyboard>
		</image>
		
		
		
		
		
		
	</view>

</theme>
