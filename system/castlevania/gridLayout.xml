<!-- Castlevania collection -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<size>0.24 0.8796296</size>									
			<pos>1.11 0.55</pos>									
			<path>./avatar.png</path>
			<linearSmooth>true</linearSmooth>	
			<zIndex>11</zIndex>
			
			<storyboard>
				<animation property="offsetX" to="-0.27" begin="300" duration="1100" mode="EaseInOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.04"/>
				<animation property="offsetX" to="-0.27" begin="300" duration="1100" mode="EaseInOut"/>
			</storyboard>
		</image>
		
		
		<image name="avatar-stone" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.4598958 0.1842593</size>									
			<pos>0.7736979 1.2812037</pos>	
			<pos ifHelpPrompts="false">0.7736979 1.3412037</pos>
			<path>./avatar-stone.png</path>
			<zIndex>10</zIndex>
				<storyboard>
					<animation property="offsetY" to="-0.4" begin="" duration="600" mode="EaseOut"/>
				</storyboard>
		</image>
		
		<image name="fog-static" extra="true">
			<origin>0.5 0.5</origin>									
			<linearSmooth>true</linearSmooth>
			<size>0.6578125 0.1907407</size>									
			<pos>0.2747396 0.70</pos>									
			<scale>1</scale>
			<zIndex>12</zIndex>
			<opacity>0.9</opacity>								
			<path>./fog-static.png</path>
			<storyboard repeat="forever">
				<animation property="y" from="0.70" to="0.701" begin="" autoreverse="true" duration="500" repeat="10" mode="linear"/>
				<animation property="offsetX" to="0.005" begin="" autoreverse="true" duration="1000" repeat="5" mode="linear"/>
				<animation property="opacity" from="0.9" to="0.85" begin="" autoreverse="true" duration="1000" repeat="5" mode="linear"/>
			</storyboard>
		</image>



		<image name="fog-big" extra="true">
			<origin>0.5 0.5</origin>									
			<linearSmooth>true</linearSmooth>			
			<pos>0 0.75</pos>
			<size>0.6380208 0.3990741</size>									
			<scale>2</scale>
			<zIndex>14</zIndex>
			<opacity>0.8</opacity>								
			<path>./fog-big.png</path>
			<storyboard repeat="forever">
				<animation property="x" from="0.7" to="0.5" begin="" autoreverse="true" duration="20000" mode="linear"/>
				<animation property="y" from="0.75" to="0.753" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="scale" from="2" to="2.01" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="opacity" from="0.8" to="0.75" begin="" autoreverse="true" duration="1000" repeat="20" mode="linear"/>
			</storyboard>
		</image>			
		
		
	</view>
</theme>
