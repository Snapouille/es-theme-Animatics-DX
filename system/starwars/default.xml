<!-- Star Wars collection -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="avatar" extra="static">
			<origin>0.5 0.5</origin>	
			<size>0.259375 0.7314815</size>									
			<pos>-0.5 0.47</pos>	
			<scale>0.9</scale>
			<linearSmooth>true</linearSmooth>					
			<storyboard>
				
        		<animation property="x" to="0.55" begin="" duration="1500" mode="EaseInOut"/>
				<animation property="scale" to="1" begin="500" duration="1000" mode="Bump"/>
        		
			</storyboard>					

		</image>
		
		
		<image name="laser" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.1651042 0.3861111</size>									
			<pos>0.5132813 0.3106481</pos>									
			<opacity>0</opacity>
			<path>./laser.png</path>
			<zIndex>1600</zIndex>
				
			<storyboard repeat="forever">
				
				<animation property="opacity" from="0" to="1" begin="1500" duration="1000" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="6500" duration="100" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="6700" duration="200" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="7100" duration="500" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="8100" duration="200" autoreverse="true" repeat="2" mode="linear"/>
				
			</storyboard>
		
		</image>
		
		
		<image name="sandstorm" extra="static">
			<origin>0 0</origin>
			<pos>0 0.2</pos>
			<size>0.3427083 0.2240741</size>									

			<scale>4</scale>
			<zIndex>15</zIndex>
			<opacity>1</opacity>
			<path>./sandstorm.png</path>


			<storyboard repeat="forever">
				<animation property="x" from="0" to="-0.35" begin="" autoreverse="true" duration="20000" mode="linear"/>
				<animation property="y" from="0.2" to="0.203" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="scale" from="4" to="4.01" begin="" autoreverse="true" duration="500" repeat="40" mode="linear"/>
				<animation property="opacity" from="1" to="0.6" begin="" autoreverse="true" duration="1000" repeat="20" mode="linear"/>
			
			</storyboard>

		
		</image>
		
		
	</view>
</theme>
