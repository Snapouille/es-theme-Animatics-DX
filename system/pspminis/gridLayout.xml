<!-- pspminis  -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1</scale>
			<saturation>0.8</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="EaseInOut"/>
			  </storyboard>
		</image>
	
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<pos>-0.07 0.61</pos>
			<size>0.3265625 0.7407407</size>									
			<scale>0.8</scale>
			<path>./avatar.png</path>
			<flipX>false</flipX>
			<zIndex>110</zIndex>
			<storyboard repeatAt="600">
				<animation property="offsetX" to="0.9" begin="100" duration="500" mode="EaseOut"/>
				<animation property="offsetX" to="0.905" 	begin="600" duration="250" autoreverse="true" mode="linear"/>
				<animation property="offsetY" to="-0.005" 	begin="600" duration="200" autoreverse="true" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>


