<!-- Mortal Kombat collection -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="BG_snapLegacy" extra="true">
			<scale>1.2</scale>
			  <storyboard>
					<animation property="scale" to="1" begin="" duration="600" mode="linear"/>
			  </storyboard>
		</image>

		<image name="avatar" extra="static">
			<origin>0.5 0.5</origin>	
			<size>0.3390625 0.8046296</size>									
			<pos>0.41 0.47</pos>	
			<scale>0.55</scale>
			<linearSmooth>true</linearSmooth>
			<zIndex>21</zIndex>
			<saturation>0.8</saturation>
			
			<storyboard>
				<animation property="scale" to="0.9" begin="" duration="300" mode="bump"/>
				<animation property="saturation" to="1" begin="" duration="300" mode="linear"/>
        		<animation property="x" to="0.51" begin="" duration="300" mode="EaseInOut"/>
        		<animation property="y" to="0.43" begin="" duration="300" mode="EaseInOut"/>
			</storyboard>					

		</image>
		
		<image name="bluefire" extra="true">
			<origin>0.5 0.5</origin>									
			<size>0.053125 0.0972222</size>									
			<pos>0.5828125 0.3125</pos>									
			<path>./bluefire.png</path>
			<opacity>0</opacity>
			<zIndex>22</zIndex>
			<scale>1</scale>
			<linearSmooth>true</linearSmooth>
			<storyboard repeatAt="500">
				<animation property="opacity" to="0.7" begin="300" duration="300" mode="Linear"/>
				<animation property="rotation" from="720" to="-3600" begin="600" duration="30000" mode="EaseInOut"/>	
				<animation property="scale" to="0.95" begin="1300" duration="600" autoreverse="true" repeat="10" mode="EaseInOut"/>
				<animation property="opacity" from="0.7" to="0.3" begin="900" duration="2000" autoreverse="true" repeat="5" mode="EaseInOut"/>
			</storyboard>
		</image>
		
		
	</view>
</theme>
