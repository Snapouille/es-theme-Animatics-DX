<!-- Colecovision -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar, avatar2, avatar3, avatar3-flip, avatar-pow" extra="true">
			<origin>0 0</origin>
			<linearSmooth>true</linearSmooth>
			<opacity>0</opacity>
		</image>
		
		
		<image name="avatar2" extra="true">
			<pos>0.15 -1</pos>
			<size>0.1260417 0.2277778</size>									
			<scale>0.7</scale>
			<zIndex>17</zIndex>
			<path>./avatar2.gif</path>
		
			<storyboard repeat="forever">
			
				<animation property="opacity" to="1" begin="500" duration="10" mode="linear"/>
				<animation property="y" to="0.18" begin="" duration="800" mode="linear"/>
				<animation property="rotation" to="5" begin="" autoreverse="true" duration="650" repeat="5" mode="linear"/>
				<animation property="y" from="0.19" to="0.18" begin="" autoreverse="true" duration="400" repeat="8" mode="EaseOut"/>
			
				<animation property="x" to="-1.3" begin="5800" duration="400" mode="linear"/>
				<animation property="scale" to="10" begin="5800" duration="400" mode="linear"/>
				
				<animation property="opacity" to="0" begin="15900" duration="100" mode="linear"/>
				
			</storyboard>			
		</image>		
		
		<image name="avatar3" extra="true">
			<pos>0.10 0.55</pos>
			<size>0.1270833 0.1694444</size>									
			<scale>0.7</scale>
			<path>./avatar3.gif</path>
			<zIndex>14</zIndex>
			
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="4000" duration="10" mode="linear"/>
				<animation property="x" from="0.55" to="-0.2" begin="4000" duration="3000" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="7000" duration="10" mode="linear"/>
				
				<animation property="opacity" from="0" to="1" begin="13000" duration="400" mode="linear"/>
				<animation property="x" from="0.55" to="-0.2" begin="13000" duration="3000" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="16000" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="20000" duration="10" mode="linear"/>
			</storyboard>
		</image>

		
		<image name="avatar3-flip" extra="true">
			<pos>0.10 0.55</pos>
			<size>0.1270833 0.1694444</size>									
			<scale>0.7</scale>
			<path>./avatar3.gif</path>
			<flipX>true</flipX>
			<zIndex>19</zIndex>
			
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="10100" duration="400" mode="linear"/>
				<animation property="x" from="0" to="0.5" begin="10100" duration="2000" mode="linear"/>
				<animation property="rotation" to="720" begin="12100" autoreverse="false" duration="2000" mode="linear"/>
				<animation property="x" from="0.5" to="1" begin="12100" duration="2000" mode="linear"/>
				<animation property="y" from="0.47" to="-1" begin="12100" duration="1000" mode="linear"/>		
				<animation property="scale" from="0.5" to="10" begin="12100" duration="1000" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="13990" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="17000" duration="100" mode="linear"/>
			</storyboard>
			
		</image>
		
		
	<image name="avatar-pow" extra="true">
			<size>0.1739583 0.2361111</size>									
			<pos>0.1119792 0.1694444</pos>									
			<scale>1</scale>
			<rotation>-10</rotation>
			<path>./avatar-pow.png</path>
			<zIndex>20</zIndex>
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="5800" duration="30" mode="linear"/>
				<animation property="scale" to="1.1" begin="5800" duration="1300" mode="linear"/>
				<animation property="y" from="0.20" to="0.14" begin="5800" duration="1300" mode="easeOut"/>
				<animation property="x" to="0.06" begin="5800" duration="1300" mode="easeOut"/>
				<animation property="opacity" from="1" to="0" begin="6600" duration="500" mode="linear"/>
				
				<animation property="opacity" to="0" begin="15900" duration="100" mode="linear"/>
			</storyboard>			
		</image>


	
		<image name="avatar" extra="true">
			<pos>0.9 -0.15</pos>
			<size>0.1541667 0.7444444</size>									
			<scale>0.7</scale>
			<rotation>0</rotation>
			<zIndex>2000</zIndex>
			<opacity>1</opacity>
			<path>./avatar.png</path>
			
			 <storyboard repeat="forever">
			    <animation property="opacity" from="0" to="1" begin="" duration="200" mode="linear"/>
				<!-------------------------------------------------------------------------------------------------->
			    <animation property="rotation" to="30" duration="1000" mode="bump"/>
                <animation property="x" to="0.7" duration="1000" mode="bump"/>
                <animation property="rotation" from="30" to="-30" begin="1000" duration="1500" mode="bump"/>
                <animation property="x" from="0.7" to="0.95" begin="1000" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="2500" duration="200" mode="linear"/>
                <animation property="x" from="0.95" to="0.9" begin="2500" duration="200" mode="linear"/>
			    <!-------------------------------------------------------------------------------------------------->
			    <animation property="rotation" to="30" begin="2700" duration="1000" mode="bump"/>
                <animation property="x" to="0.5" begin="2700" duration="1000" mode="bump"/>
                <animation property="rotation" from="30" to="-30" begin="3700" duration="1500" mode="bump"/>
                <animation property="x" from="0.5" to="0.75" begin="3700" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="5200" duration="200" mode="linear"/>
                <animation property="x" from="0.75" to="0.7" begin="5200" duration="200" mode="linear"/>
				<!-------------------------------------------------------------------------------------------------->
                <animation property="rotation" to="30" begin="5400" duration="700" mode="bump"/>
                <animation property="x" to="0.3" begin="5400" duration="700" mode="bump"/>
                <animation property="rotation" from="30" to="-30" begin="6100" duration="1500" mode="bump"/>
                <animation property="x" from="0.3" to="0.55" begin="6100" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="7600" duration="200" mode="linear"/>
                <animation property="x" from="0.55" to="0.5" begin="7600" duration="200" mode="linear"/>
				<!-------------------------------------------------------------------------------------------------->
				<animation property="rotation" to="30" begin="7800" duration="1000" mode="bump"/>
                <animation property="x" to="0.1" begin="7800" duration="1000" mode="bump"/>
				<animation property="rotation" from="30" to="-30" begin="8800" duration="1500" mode="bump"/>
                <animation property="x" from="0.1" to="0.35" begin="8800" duration="1500" mode="bump"/>
                <animation property="y" from="-0.15" to="-0.07" begin="8800" duration="1800" mode="linear"/>
                <animation property="rotation" from="-30" to="0" begin="10300" duration="200" mode="linear"/>
                <animation property="x" from="0.35" to="0.3" begin="10300" duration="200" mode="linear"/>
				<!-------------------------------------------------------------------------------------------------->
				<animation property="rotation" to="30" begin="10500" duration="1000" mode="bump"/>
                <animation property="x" to="-0.1" begin="10500" duration="1000" mode="bump"/>
				<animation property="opacity" from="1" to="0" begin="10833" duration="20" mode="linear"/>
				
				<!-- Pause en dehors de l'Ã©cran -->
				<animation property="opacity" to="0" begin="15900" duration="100" mode="linear"/>
            </storyboard>		
		</image>
			
			
		
		
		
		
		
		
	</view>

</theme>
