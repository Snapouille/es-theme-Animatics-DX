<!-- Colecovision -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="static">
			<pos>0.9 -0.15</pos>
			<scale>0.7</scale>
			<rotation>0</rotation>
			<zIndex>18</zIndex>
			<opacity>1</opacity>
			<path>./avatar.png</path>
		</image>
		
		<image name="avatar2" extra="static">
			<pos>0.15 -1</pos>
			<scale>0.7</scale>
			<path>./avatar2.png</path>
			<opacity>1</opacity>
			<zIndex>17</zIndex>
		</image>
		
		<image name="avatar3" extra="static">
			<pos>0.10 0.55</pos>
			<scale>0.7</scale>
			<opacity>0</opacity>
			<path>./avatar3.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="avatar4" extra="static">
			<pos>0.10 0.55</pos>
			<scale>0.7</scale>
			<opacity>0</opacity>
			<path>./avatar4.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="avatar5" extra="static">
			<pos>0.11 0.20</pos>
			<scale>0.7</scale>
			<rotation>0</rotation>
			<path>./avatar5.png</path>
			<opacity>0</opacity>
			<zIndex>18</zIndex>
		</image>
		
		
		<image name="avatar" extra="true">
		
			 <storyboard repeat="forever">
			    <animation property="opacity" from="0" to="1" begin="" duration="200" mode="easyIn"/>
				<!-------------------------------------------------------------------------------------------------->
			    <animation property="rotation" to="30" duration="1000" mode="bump"/>
                <animation property="x" to="0.7" duration="1000" mode="bump"/>
                <animation property="rotation" from="30" to="-30" begin="1000" duration="1500" mode="bump"/>
                <animation property="x" from="0.7" to="0.95" begin="1000" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="2500" duration="200" mode="easyin"/>
                <animation property="x" from="0.95" to="0.9" begin="2500" duration="200" mode="easyin"/>
			    <!-------------------------------------------------------------------------------------------------->
			    <animation property="rotation" to="30" begin="2700" duration="1000" mode="bump"/>
                <animation property="x" to="0.5" begin="2700" duration="1000" mode="bump"/>
                <animation property="rotation" from="30" to="-30" begin="3700" duration="1500" mode="bump"/>
                <animation property="x" from="0.5" to="0.75" begin="3700" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="5200" duration="200" mode="easyin"/>
                <animation property="x" from="0.75" to="0.7" begin="5200" duration="200" mode="easyin"/>
				<!-------------------------------------------------------------------------------------------------->
                <animation property="rotation" to="30" begin="5400" duration="700" mode="bump"/>
                <animation property="x" to="0.3" begin="5400" duration="700" mode="bump"/>
                <animation property="rotation" from="30" to="-30" begin="6100" duration="1500" mode="bump"/>
                <animation property="x" from="0.3" to="0.55" begin="6100" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="7600" duration="200" mode="easyin"/>
                <animation property="x" from="0.55" to="0.5" begin="7600" duration="200" mode="easyin"/>
				<!-------------------------------------------------------------------------------------------------->
				<animation property="rotation" to="30" begin="7800" duration="1000" mode="bump"/>
                <animation property="x" to="0.1" begin="7800" duration="1000" mode="bump"/>
				<animation property="rotation" from="30" to="-30" begin="8800" duration="1500" mode="bump"/>
                <animation property="x" from="0.1" to="0.35" begin="8800" duration="1500" mode="bump"/>
                <animation property="rotation" from="-30" to="0" begin="10300" duration="200" mode="easyin"/>
                <animation property="x" from="0.35" to="0.3" begin="10300" duration="200" mode="easyin"/>
				<!-------------------------------------------------------------------------------------------------->
				<animation property="rotation" to="30" begin="10500" duration="1000" mode="bump"/>
                <animation property="x" to="-0.1" begin="10500" duration="1000" mode="bump"/>
				<animation property="opacity" from="1" to="0" begin="10833" duration="20" mode="easyIn"/>
				
				<!-- Pause en dehors de l'écran -->
				<animation property="x" from="0.1" to="-0.5" begin="13000" duration="3000" mode="bump"/>
				<!-------------------------------------------------------------------------------------------------->

            </storyboard>		
			
		</image>
		
		
		
		
		
		<image name="avatar2" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="y" from="-1" to="0.25" begin="" duration="800" mode="easeIn"/>
				<animation property="rotation" to="5" begin="" autoreverse="true" duration="650" repeat="4" mode="linear"/>
				<animation property="y" from="0.23" to="0.21" begin="800" autoreverse="true" duration="400" repeat="6" mode="easeOut"/>
				<animation property="x" to="-1.3" begin="5800" duration="400" mode="linear"/>
				<animation property="scale" to="10" begin="5800" duration="400" mode="linear"/>
				
				
				<animation property="y" to="-1" begin="8500" duration="7500" mode="easyOut"/>
				
				
			</storyboard>			
		</image>
		
		
		<image name="avatar5" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="opacity" from="0" to="1" begin="5800" duration="30" mode="linear"/>
				<animation property="scale" to="0.8" begin="5800" duration="1300" mode="linear"/>
				<animation property="y" from="0.20" to="0.15" begin="5800" duration="1300" mode="easyOut"/>
				<animation property="x" to="0.10" begin="5800" duration="1300" mode="easyOut"/>
				<animation property="opacity" from="1" to="0" begin="6600" duration="500" mode="linear"/>
				<animation property="opacity" to="0" begin="7100" duration="8900" mode="linear"/>
				
			</storyboard>			
		</image>
		
		
		<image name="avatar3" extra="true">
		
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="12100" duration="400" mode="easyIn"/>
				<animation property="x" from="0" to="0.55" begin="12100" duration="2000" mode="easyIn"/>
				<animation property="rotation" to="720" begin="14100" autoreverse="false" duration="2000" mode="linear"/>
				<animation property="x" from="0.5" to="1" begin="14100" duration="2000" mode="easyIn"/>
				<animation property="y" from="0.47" to="-1" begin="14100" duration="1000" mode="easyIn"/>		
				<animation property="scale" from="0.5" to="10" begin="14100" duration="1000" mode="easyIn"/>
				<animation property="opacity" from="1" to="0" begin="15990" duration="10" mode="easyIn"/>
				<!-- Pause en dehors de l'écran -->
				<animation property="x" to="1" begin="15600" duration="400" mode="easyIn"/>
			</storyboard>

		</image>
		
		
		
		<image name="avatar4" extra="true">
		
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="4000" duration="400" mode="easyIn"/>
				<animation property="x" from="0.55" to="-0.2" begin="4000" duration="2000" mode="easyIn"/>
				<animation property="opacity" from="1" to="0" begin="6000" duration="10" mode="easyIn"/>
				
				<animation property="opacity" from="0" to="1" begin="9000" duration="400" mode="easyIn"/>
				<animation property="x" from="0.55" to="-0.2" begin="9000" duration="2000" mode="easyIn"/>
				<animation property="opacity" from="1" to="0" begin="11000" duration="10" mode="easyIn"/>
				
				<!-- Pause en dehors de l'écran -->
				<animation property="x" to="-1" begin="11010" duration="4990" mode="easyIn"/>
				
			</storyboard>
		
		</image>
		
		
		
	</view>

</theme>
