<!-- PSP -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="kratos1" extra="static">
			<origin>0 0</origin>									
			<size>0.5020833 2.0935185</size>									
			<pos>0.16 0.183</pos>
			<scale>0.25</scale>
			
			<path>./kratos1.png</path>
			<opacity>1</opacity>
			<zIndex>18</zIndex>
						
			<storyboard repeat="forever">
			
					<animation property="x" to="0.18" begin="" duration="4000" mode="linear"/>
					
					<animation property="x" to="0.47" begin="4000" duration="200" mode="linear"/>
					<animation property="y" to="0.2" begin="4000" duration="200" mode="linear"/>
					<animation property="scale" to="0.35" begin="4000" duration="200" mode="bump"/>
					
					<animation property="x" to="0.48" begin="4200" duration="7800" mode="bump"/>
					<animation property="y" to="0.21" begin="4200" duration="7800" mode="EaseIn"/>
					
					
					<animation property="x" to="0.182" begin="12000" duration="300" mode="linear"/>
					<animation property="y" to="0.32" begin="12000" duration="300" mode="linear"/>
					<animation property="scale" to="1" begin="12000" duration="300" mode="linear"/>
					
					<animation property="opacity" to="0" begin="12300" duration="100" mode="linear"/>
					
					<animation property="opacity" to="0" begin="20000" duration="100" mode="linear"/>
					
			</storyboard>
		</image>
		
		
		<image name="kratos2" extra="static">
			<origin>0 0</origin>									
			<size>0.3583333 0.6944444</size>									
			
			<pos>0.38 0.325</pos>
			<scale>1</scale>
			<path>./kratos2.png</path>
			<opacity>0</opacity>
			<zIndex>19</zIndex>
						
			<storyboard repeat="forever">
					
					<animation property="opacity" to="1" begin="12300" duration="100" mode="linear"/>
					<animation property="x" to="0.35" begin="12400" duration="7000" mode="linear"/>
					
					
					<animation property="x" to="-0.1" begin="19400" duration="600" mode="linear"/>
					<animation property="y" to="-0.55" begin="19400" duration="600" mode="linear"/>
					<animation property="scale" to="5" begin="19400" duration="600" mode="linear"/>
					
					
					<animation property="opacity" to="0" begin="20000" duration="100" mode="linear"/>
			</storyboard>
		</image>
		
		
		
		<image name="fire" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.58125 0.6509259</size>									
			<pos>0.3177083 0.3856481</pos>				
			<opacity>1</opacity>
			<path>./fire.png</path>
			<zIndex>16</zIndex>
		</image>
		
		
		<image name="fire" extra="true">
		
			<storyboard repeat="forever">
				
				<animation property="opacity" from="0" to="1" begin="" duration="1000" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="5000" duration="100" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="5200" duration="200" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="5600" duration="500" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="7600" duration="200" autoreverse="true" repeat="2" mode="linear"/>
				
			</storyboard>
		
		</image>
		
		
	</view>
</theme>
