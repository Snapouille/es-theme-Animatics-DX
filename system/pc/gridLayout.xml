<!-- PC MsDOS -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
		
		
		<image name="background-city" extra="true">
			<origin>0.5 0.5</origin>									
			<linearSmooth>true</linearSmooth>
			<size>1 0.1203704</size>									
			<pos>0.5 0.2222222</pos>
			<path>./background-city.gif</path>
			<zIndex>5</zIndex>
			
			<storyboard repeat="forever">
				<animation property="scale" to="1.05" begin="13000" duration="5000" mode="linear"/>
				<animation property="scale" to="1" begin="20000" duration="1500" mode="linear"/>
			</storyboard>
		</image>
		
		
		
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<size>0.4828125 0.9175926</size>									
			<pos>1.05 0.57</pos>									
			<scale>0.51</scale>
			<opacity>1</opacity>
			<path>./avatar.gif</path>
			<zIndex>3000</zIndex>
			
			<storyboard repeatAt="20500">
				<animation property="offsetX" to="-0.215" begin="100" duration="500" mode="EaseOut"/>

				<animation property="rotation" to="1" begin="5000" autoreverse="true" duration="150"   mode="linear"/>
				<animation property="offsetY" to="-0.005" begin="5000" autoreverse="true" duration="150"   mode="bump"/>
				
				<animation property="rotation" to="-1" begin="13000" autoreverse="true" duration="150"   mode="linear"/>
				<animation property="offsetY" to="-0.005" begin="13000" autoreverse="true" duration="150"   mode="bump"/>
				
				<animation property="rotation" to="15" begin="20400" autoreverse="true" duration="100" mode="linear"/>
        		<animation property="scale" to="1" begin="20400" duration="100" autoreverse="true" mode="Linear"/>			
			
				<animation property="rotation" to="1" begin="28000" autoreverse="true" duration="150"   mode="linear"/>
				<animation property="offsetY" to="-0.005" begin="28000" autoreverse="true" duration="150"   mode="bump"/>
				
				<animation property="rotation" to="-1" begin="39000" autoreverse="true" duration="150"   mode="linear"/>
				<animation property="offsetY" to="-0.005" begin="39000" autoreverse="true" duration="150"   mode="bump"/>
			</storyboard>
		</image>
		
		
		
		
		<image name="cow" extra="true">
			<origin>0.5 0.5</origin>									
			<linearSmooth>true</linearSmooth>
			<size>0.2583333 0.2583333</size>									
			<pos>1.15 0.81</pos>									
			<path>./cow.gif</path>
			<zIndex>3000</zIndex>
			
			<storyboard>
				<animation property="offsetX" to="-0.35" begin="14500" duration="6000" mode="linear"/>
				<animation property="scale" to="10" begin="20500" duration="500" mode="linear"/>
				<animation property="rotation" to="30" begin="20500" duration="500" mode="linear"/>
				<animation property="offsetY" to="-0.35" begin="20500" duration="500" mode="linear"/>
				<animation property="opacity" to="0" begin="20800" duration="200" mode="linear"/>
			</storyboard>
		</image>
		
		
		<image name="Blood1, Blood2" extra="static">	
			<origin>0 0</origin>	
			<scale>0.7</scale>
			<opacity>0</opacity>
			<zIndex>5000</zIndex>
			<rotation>10</rotation>
		</image>		
		
		<image name="Blood1" extra="static">	
			<size>0.1567708 0.2592593</size>									
			<pos>0.6364583 0.5681481</pos>									
			<path>./blood1.png</path>
			<flipX>true</flipX>
			
			<storyboard>
				<animation property="opacity" from="0" to="1" 	begin="20500" duration="100" mode="linear"/>
				<animation property="offsetY" from="0" to="0.05" begin="20500" duration="100" mode="Linear"/>				
				<animation property="scale" to="1" 				begin="20500" duration="100" mode="linear"/>
				<animation property="opacity" to="0" 			begin="27500" duration="800" mode="linear"/>
			</storyboard>			
		</image>
	
		<image name="Blood2" extra="static">	
			<size>0.3265625 0.3805556</size>									
			<pos>0.51 0.41</pos>																							
			<path>./blood2.png</path>
			<flipX>true</flipX>
			
			<storyboard>
					<animation property="opacity" from="0" to="1" 	begin="20600" duration="100" mode="linear"/>
					<animation property="offsetY" from="0" to="0.05" begin="20600" duration="100" mode="Linear"/>				
					<animation property="scale" to="1" 				begin="20600" duration="100" mode="linear"/>
					<animation property="opacity" to="0" 			begin="27300" duration="800" mode="linear"/>
			</storyboard>
		</image>		
		
		
	</view>
	

</theme>
