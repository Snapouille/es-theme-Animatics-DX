<!-- FB Neo -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		
		<image name="avatar-punisher" extra="static">
			<pos>0.2 0.167</pos>
			<scale>0.7</scale>
			<zIndex>16</zIndex>
			<opacity>1</opacity>
			<path>./avatar-punisher.png</path>
			<storyboard>
				<animation property="x" to="0.25" begin="500" duration="1500" mode="EaseOut"/>
			</storyboard>
		</image>
		
	</view>
	
	
	<view name="system" ifSubset="systemview:horizontal" extra="static">
		
		<image name="avatar-punisher" >
			<pos>-0.25 0.2</pos>
			<scale>0.8</scale>
			<zIndex>16</zIndex>
			<opacity>1</opacity>
			<path>./avatar-punisher.png</path>
			
			<storyboard repeat="forever">
			
			
				<animation property="x" to="0.01" begin="" duration="200" mode="EaseOut"/>
				<animation property="x" to="0.13" begin="200" duration="1800" mode="EaseOut"/>
				<animation property="x" to="0.08" begin="2800" duration="2000" mode="EaseOut"/>
				
				<animation property="x" from="0.08" to="0.13" begin="6000" duration="3000" autoreverse="true" mode="EaseInOut"/>
				
				<animation property="x" from="0.08" to="0.13" begin="13000" duration="3000" autoreverse="true" mode="EaseOutCubic"/>
				
				<animation property="x" to="-0.25" begin="22000" duration="1000" mode="EaseOut"/>
				
				<animation property="opacity" to="0" begin="23000" duration="1000" mode="EaseOut"/>
				
			</storyboard>
		</image>
		
		
		<image name="bulletfire1" extra="static">
			<pos>0.184 0.279</pos>
			<scale>0.5</scale>
			<zIndex>18</zIndex>
			<opacity>0</opacity>
			<path>./bulletfire.png</path>
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="2500" duration="60" autoreverse="true" repeat="3" mode="linear"/>
				
				<animation property="opacity" to="0" begin="23000" duration="1000" mode="EaseOut"/>
			</storyboard>
		</image>
		
		<image name="background-color" extra="static">
			<pos>0 0</pos>
			<scale>1</scale>
			<zIndex>17</zIndex>
			<opacity>0</opacity>
			<path>./background-color.png</path>
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="2500" duration="60" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="2740" duration="60" mode="linear"/>

				<animation property="opacity" to="0" begin="23000" duration="1000" mode="EaseOut"/>
				
			</storyboard>
		</image>
		
		<image name="bulletfire2" extra="static">
			<pos>0.134 0.279</pos>
			<scale>0.5</scale>
			<zIndex>18</zIndex>
			<opacity>0</opacity>
			<path>./bulletfire.png</path>
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="5000" duration="60" autoreverse="true" repeat="3" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="12000" duration="60" autoreverse="true" repeat="3" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="19000" duration="60" autoreverse="true" repeat="3" mode="linear"/>
				<animation property="opacity" to="0" begin="23000" duration="1000" mode="EaseOut"/>
			</storyboard>
		</image>
		
		
		<image name="avatar-glass" extra="static">
			<pos>0.055 0.13</pos>
			<scale>0.4</scale>
			<zIndex>18</zIndex>
			<opacity>0</opacity>
			<path>./avatar-glass.png</path>
			<storyboard repeat="forever">
				<animation property="opacity" from="0" to="1" begin="19000" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="23500" duration="500" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>
