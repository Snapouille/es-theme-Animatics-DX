			<pos>1.1320313 0.539</pos>									
			<scale>0.9</scale>
			<opacity>1</opacity>
			<path>./avatar2.png</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>170</zIndex>
			<saturation>0.9</saturation>
			
			<storyboard>
				<animation property="offsetX" to="-0.295" begin="100" duration="600" mode="EaseInOut"/>
