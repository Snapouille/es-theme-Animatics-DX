<!-- PS2 -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<visible>false</visible>
		</image>
	
	
		<image name="background1" extra="static">
			<origin>0.5 0.5</origin>									
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1</scale>	
			<opacity>1</opacity>
			<path>./background.jpg</path>
			<zIndex>5</zIndex>
			
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
		<image name="background2" extra="static">
			<origin>0.5 0.5</origin>									
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1</scale>	
			<opacity>0</opacity>
			<path>./background2.jpg</path>
			<zIndex>6</zIndex>
			
			<storyboard repeat="forever">
				<animation property="opacity" to="1" begin="4000" duration="15800" mode="linear"/>	
