			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.06"/>
				<animation property="offsetX" to="-0.295" begin="100" duration="600" mode="EaseInOut"/>
			</storyboard>
			
		</image>
		
		
