<!-- SGB  -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		<image name="avatar" extra="static">
			<size>0.4416667 0.6916667</size>									
			<scale>0.7</scale>
			<rotation>0</rotation>
			
			<origin>0.5 0.5</origin>
			<pos>0.52 1.12</pos>									
			<path>./avatar.png</path>

			<storyboard>
				<animation property="offsetY" to="-0.7" begin="100" duration="500" mode="Bump"/>
				<animation property="rotation" to="-20" begin="100" duration="500" mode="Bump"/>
			</storyboard>

		</image>
		
		
		<image name="laser" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.7755208 0.5601852</size>									
			<pos>0.0861979 0.5699074</pos>									
			<zIndex>16000</zIndex>
			<opacity>0</opacity>
			<path>./laser.png</path>
			

			<storyboard repeat="forever">
				<animation property="opacity" to="0.8" begin="1000" duration="100" mode="linear"/>
				<animation property="opacity" to="0" begin="1300" duration="200" mode="linear"/>
				
				<animation property="opacity" to="0.8" begin="1500" duration="100" mode="linear"/>
				<animation property="opacity" to="0" begin="1800" duration="200" mode="linear"/>
				
				<animation property="opacity" to="0.8" begin="2000" duration="100" mode="linear"/>
				<animation property="opacity" to="0" begin="2300" duration="200" mode="linear"/>
				
				
				<animation property="opacity" to="0" begin="12100" duration="200" mode="linear"/>
			</storyboard>

		</image>
		
		
	
	</view>

</theme>


