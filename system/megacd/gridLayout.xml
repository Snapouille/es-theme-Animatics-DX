<!-- SEGA CD -->


<theme>
	<formatVersion>7</formatVersion>



	<view name="system">
	
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
	
	
		<image name="avatar" extra="static">
			<origin>0 0</origin>									
			<size>0.625 0.637963</size>									
			<pos>0.04 0.17</pos>
			<scale>0.1</scale>
			<rotation>0</rotation>
			<zIndex>14</zIndex>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			
			<storyboard repeat="forever">
					
					<animation property="rotation" from="" to="10" 		begin="2000" duration="10" 		mode="Linear"/>
					<animation property="opacity" from="0" to="1" 		begin="2700" duration="1500" 	mode="linear"/>
					<animation property="scale" from="0.1" to="1.5" 	begin="2000" duration="21500" 	mode="EaseIn"/>
					<animation property="x" to="1" 						begin="2000" duration="21500" 	mode="EaseIn"/>
					<animation property="y" to="0.2" 					begin="2000" duration="21500" 	mode="EaseIn"/>
					<animation property="rotation" from="10" to="5" 	begin="2000" duration="11500" 	mode="Linear"/>
					
					<animation property="scale" to="0" begin="35000" duration="10" mode="Linear"/>
					
			</storyboard>
		</image>
		
		
		
		
	<image name="avatar2" extra="static">
			<origin>0 0</origin>									
			<size>0.1270833 0.1546296</size>									
			<flipX>true</flipX>
			<pos>0.8 0.35</pos>
			<scale>0.1</scale>
			<path>./avatar2.png</path>
			<opacity>1</opacity>
			<zIndex>14</zIndex>
			
			<storyboard repeat="forever">
					<animation property="offsetX" from="0.15" begin="" duration="2000" mode="EaseOut"/>
					<animation property="scale" from="0" to="1.2" begin="" duration="2000" mode="EaseOut"/>
					<animation property="scale" from="1.2" to="7" begin="2000" duration="2000" mode="Linear"/>
					<animation property="rotation" to="-30" begin="2000" duration="1000" mode="Linear"/>
					<animation property="y" to="1.2" begin="2000" duration="2000" mode="EaseOut"/>
					<animation property="offsetX" to="-0.4" begin="2000" duration="2000" mode="EaseOut"/>
					<animation property="scale" to="0" begin="35000" duration="10" mode="Linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>





		