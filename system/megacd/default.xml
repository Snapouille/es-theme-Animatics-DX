<!-- SEGA CD -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="static">
			<origin>0 0</origin>									
			<size>0.625 0.637963</size>									
			<pos>0.04 0.17</pos>
			<scale>0.1</scale>
			<rotation>0</rotation>
			<opacity>0</opacity>
		</image>	
	
	
	<image name="avatar2" extra="static">
			<origin>0 0</origin>									
			<size>0.1270833 0.1546296</size>									

			<pos>0.1 0.35</pos>
			<scale>0.1</scale>
			<path>./avatar2.png</path>
			<opacity>1</opacity>
			<zIndex>18</zIndex>
		</image>
	
	
		<image name="avatar" extra="true">	
		
			<storyboard repeat="forever">
					
					<animation property="rotation" from="" to="10" begin="5000" duration="10" mode="Linear"/>
					<animation property="opacity" from="0" to="1" begin="5700" duration="1500" mode="linear"/>
					<animation property="scale" from="0.1" to="0.75" begin="5000" duration="11500" mode="EaseIn"/>
					<animation property="x" to="0.09" begin="5000" duration="11500" mode="EaseIn"/>
					<animation property="y" to="0.148" begin="5000" duration="11500" mode="EaseIn"/>
					<animation property="rotation" from="10" to="5" begin="5000" duration="11500" mode="Linear"/>
					
					<animation property="x" from="0.09" to="0.10" begin="16500" duration="1500" mode="EaseOut"/>
					<animation property="scale" from="0.75" to="0.85" begin="16500" duration="2000" mode="Linear"/>
					
					
					<animation property="x" from="0.10" to="0.06" begin="18500" duration="14500" mode="Linear"/>
					<animation property="y" from="0.148" to="0.158" begin="18500" duration="14500" mode="Linear"/>
					<animation property="scale" from="0.85" to="0.95" begin="18500" duration="14500" mode="Linear"/>
					
					<animation property="scale" to="10" begin="33000" duration="500" mode="EaseIn"/>
					<animation property="x" to="1" begin="33000" duration="2000" mode="EaseOut"/>
					
					
			</storyboard>
		</image>
		
		
		<image name="avatar2" extra="true">	
			<storyboard repeat="forever">
					
					<animation property="scale" from="0" to="1" begin="" duration="2000" mode="Linear"/>
					<animation property="scale" from="1" to="1.2" begin="2000" duration="4000" mode="Linear"/>
					<animation property="scale" from="1.2" to="7" begin="6000" duration="2000" mode="Linear"/>
					<animation property="rotation" to="30" begin="6000" duration="1000" mode="Linear"/>
					<animation property="y" to="1.2" begin="6000" duration="2000" mode="EaseOut"/>
					<animation property="scale" to="0" begin="8000" duration="27000" mode="Linear"/>
					
			</storyboard>
		</image>
		
		
		
		
	</view>

</theme>





		