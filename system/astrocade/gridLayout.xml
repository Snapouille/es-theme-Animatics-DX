<!-- Astrocade -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>


		<image name="avatar" extra="true">
			<scale>0.85</scale>
			<linearSmooth>true</linearSmooth>
			<size>0.2604167 0.7935185</size>									
			<pos>1 0.2416667</pos>									
			<path>./avatar.png</path>

			<storyboard>
				<animation property="offsetX" to="-0.3" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.05"/>
				<animation property="offsetX" to="-0.3" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
		
		</image>
		
		
	</view>
</theme>
