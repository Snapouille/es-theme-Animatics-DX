<!-- Sega Master System -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.51875 0.2509259</pos>									
			  <storyboard>
					<animation property="x" to="0.09" begin="" duration="4000" mode="linear"/>
					<animation property="size" to="0.6567708 0.6564815" begin="4300" duration="500" mode="EaseInOut"/>
					<animation property="pos" to="0.2861979 0.3875" begin="4300" duration="500" mode="EaseInOut"/>
			  </storyboard>
		</image>
		
		
		<image name="avatar, momie, pow, oiseau, alex-anim, alex-danse">
			<origin>0.5 0.5</origin>
			<linearSmooth>true</linearSmooth>
			<zIndex>280</zIndex>
		</image>
		
		
		<image name="avatar" extra="true">
			<pos>1.1 0.5</pos>
			<size>0.2083333 0.35</size>									

			<scale>0.7</scale>
			<rotation>0</rotation>
			<path>./avatar.png</path>
			
			 <storyboard>
				<animation property="x" to="0.45" 		begin="2900" duration="400" mode="linear"/>
						
			    <animation property="rotation" to="2" 			begin="3300" duration="1000" mode="bump"/>
                <animation property="x" to="0.4" 				begin="3300" duration="1000" mode="bump"/>
				
                <animation property="rotation" from="10" to="-2" begin="4300" duration="1000" mode="bump"/>
				<animation property="x"  to="0.485" 			begin="4300" duration="1000" mode="bump"/>
				<animation property="y"  to="0.55" 				begin="4300" duration="1000" mode="bump"/>
                <animation property="scale" to="1" 				begin="4300" duration="1000" mode="bump"/>
				
				<animation property="opacity" to="0" begin="5400" duration="170" mode="linear"/>
            </storyboard>		
			
			
		</image>
		
		
		
		
		
		<image name="momie" extra="true">
			<pos>0.10 0.628</pos>
			<size>0.1526042 0.2277778</size>									
			<scale>0.7</scale>
			<opacity>0</opacity>
			<path>./momie.gif</path>
			<zIndex>14</zIndex>
			
			<storyboard>
				
				<animation property="x" from="0" to="0.4" 		begin="200" duration="3200" mode="linear"/>
				<animation property="opacity" from="0" to="1" 	begin="300" duration="400" mode="linear"/>
				
				<animation property="x" to="0.4" 				begin="3300" duration="100" mode="linear"/>
				
				<animation property="rotation" to="-20" 		begin="3400" autoreverse="false" duration="2000" mode="linear"/>
				<animation property="x" from="0.34" to="-1" 	begin="3400" duration="1000" mode="linear"/>
				<animation property="y" from="0.55" to="0.45" 	begin="3400" duration="500" mode="linear"/>		
				<animation property="scale" from="0.5" to="2" 	begin="3400" duration="500" mode="linear"/>
				<animation property="opacity" from="1" to="0" 	begin="4790" duration="10" mode="linear"/>
				
				
			</storyboard>
			
		</image>
		
		
		<image name="pow" extra="true">
			<pos>0.34 0.55</pos>
			<size>0.2015625 0.2740741</size>									
			<scale>0.6</scale>
			<rotation>-20</rotation>
			<path>./pow.png</path>
			<opacity>0</opacity>
			<zIndex>18</zIndex>
			
		
			<storyboard>
			
				<animation property="opacity" from="0" to="1" 	begin="3400" duration="30" mode="linear"/>
				<animation property="scale" to="0.8" 			begin="3400" duration="1300" mode="linear"/>
				<animation property="y" from="0.55" to="0.42" 	begin="3400" duration="1300" mode="easeOut"/>
				<animation property="x" to="0.31" 				begin="3400" duration="1300" mode="easeOut"/>
				<animation property="opacity" from="1" to="0" 	begin="4200" duration="500" mode="linear"/>
				<animation property="opacity" from="0" to="0" 	begin="4700" duration="11200" mode="linear"/>
				
			</storyboard>			
		</image>

			
			
			
			
		<image name="alex-anim" extra="true">
			<path>./alex-anim.gif</path>
			<opacity>0</opacity>
			<size>0.1755208 0.4287037</size>									
			<pos>0.5 0.58</pos>									
		
			<storyboard repeatAt="5600">
				<animation property="opacity" to="1" 			begin="5400" duration="170" mode="linear"/>
				
				<animation property="opacity" to="0" 			begin="9000" duration="10" mode="linear"/>
				<animation property="opacity" to="1" 			begin="17600" duration="10" mode="linear"/>
				<animation property="opacity" to="0" 			begin="27000" duration="10" mode="linear"/>
				<animation property="opacity" to="1" 			begin="41000" duration="10" mode="linear"/>
				
            </storyboard>		
		</image>
		
		
		<image name="alex-danse" extra="true">
			<path>./alex-danse.gif</path>
			<opacity>0</opacity>
			<size>0.1755208 0.4287037</size>									
			<pos>0.5 0.58</pos>									
		
			<storyboard repeatAt="5600">
				
				<animation property="opacity" to="1" 			begin="9000" duration="10" mode="linear"/>
				<animation property="opacity" to="0" 			begin="17600" duration="10" mode="linear"/>
				<animation property="opacity" to="1" 			begin="27000" duration="10" mode="linear"/>
				<animation property="opacity" to="0" 			begin="41000" duration="10" mode="linear"/>
				
            </storyboard>		
		</image>
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
		
		
		
		
		
		
		<image name="oiseau" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.3 -0.3</pos>
			<size>0.1161458 0.1768519</size>									
			<scale>0.6</scale>
			<opacity>1</opacity>
			<path>./oiseau.gif</path>
			<linearSmooth>true</linearSmooth>
			<zIndex>170</zIndex>
			
			<storyboard repeat="forever">
	
				<animation property="y" from="-0.3" to="0.20" 	begin="10000" duration="2000" mode="bump"/>
				<animation property="x" from="0.45" to="0.3" 	begin="10000" duration="2000" mode="easeIn"/>
				<animation property="rotation" to="3" 			begin="10000" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" from="0.20" to="0.21" 	begin="10800" autoreverse="true" duration="400" repeat="16" mode="easeOut"/>
				
				<animation property="x" to="0.25" 				begin="12000" duration="6000" autoreverse="true" mode="easeInOut"/>
				
				<animation property="x" to="-0.2" 				begin="25000" duration="2500" mode="easeIn"/>
				<animation property="y" to="-0.2" 				begin="25000" duration="2500" mode="easeIn"/>
				<animation property="scale" to="3" 				begin="25000" duration="2500" mode="easeIn"/>
				<animation property="opacity" to="0" 			begin="28000" duration="500" mode="linear"/>
	
			</storyboard>
			
		</image>
		
		
		
		
	</view>

</theme>
