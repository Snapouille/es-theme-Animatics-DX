<!-- Sega Master System -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="static">
			<pos>1 0.4</pos>
			<scale>0.7</scale>
			<rotation>0</rotation>
			<zIndex>18</zIndex>
			<opacity>0</opacity>
			<path>./avatar.png</path>
		</image>
		
		<image name="avatar2" extra="static">
			<pos>0.10 0.55</pos>
			<scale>0.7</scale>
			<opacity>0</opacity>
			<path>./avatar2.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="avatar3" extra="static">
			<pos>0.09 -1</pos>
			<scale>0.7</scale>
			<opacity>1</opacity>
			<path>./avatar3.png</path>
			<zIndex>17</zIndex>
		</image>
		
		<image name="avatar4" extra="static">
			<pos>0.34 0.55</pos>
			<scale>0.6</scale>
			<rotation>-20</rotation>
			<path>./avatar4.png</path>
			<opacity>0</opacity>
			<zIndex>18</zIndex>
		</image>
		
		<image name="nuage0" extra="static">
			<pos>0.27 0.08</pos>
			<scale>0.52</scale>
			<rotation>0</rotation>
			<opacity>0.95</opacity>
			<path>./nuage0.png</path>
			<zIndex>16</zIndex>
		</image>
		
		<image name="nuage1" extra="static">
			<pos>0.01 0.12</pos>
			<scale>0.52</scale>
			<rotation>5</rotation>
			<opacity>0</opacity>
			<path>./nuage1.png</path>
			<zIndex>16</zIndex>
		</image>
		
		<image name="nuage2" extra="static">
			<pos>0.18 0.1</pos>
			<scale>0.5</scale>
			<rotation>0</rotation>
			<opacity>0</opacity>
			<path>./nuage2.png</path>
			<zIndex>16</zIndex>
		</image>
		
		<image name="nuage3" extra="static">
			<pos>0.35 0.11</pos>
			<scale>0.58</scale>
			<opacity>0</opacity>
			<path>./nuage3.png</path>
			<zIndex>16</zIndex>
		</image>
		
		<image name="nuage4" extra="static">
			<pos>0.01 0.15</pos>
			<scale>0.7</scale>
			<rotation>0</rotation>
			<opacity>0</opacity>
			<path>./nuage1.png</path>
			<zIndex>16</zIndex>
		</image>
		
		
		
		
		
		<image name="nuage0" extra="true">
		
			<storyboard>
				<animation property="x" from="0.27" to="0.55" begin="" duration="25000" mode="easyOut"/>
				<animation property="opacity" from="0.95" to="0" begin="24000" duration="1000" mode="linear"/>
			</storyboard>			
		</image>
		
		
		
		<image name="nuage2" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="opacity" from="0" to="0.95" begin="" duration="1000" mode="linear"/>
				<animation property="x" from="0.01" to="0.55" begin="" duration="35000" mode="easyOut"/>
				<animation property="opacity" from="0.95" to="0" begin="33000" duration="1000" mode="linear"/>
				<animation property="opacity" from="0" to="0" begin="34000" duration="3500" mode="linear"/>
				
			</storyboard>			
		</image>
		
		<image name="nuage1" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="opacity" from="0" to="0.9" begin="10000" duration="4000" mode="linear"/>
				<animation property="x" from="-0.1" to="0.55" begin="10000" duration="34000" mode="easyOut"/>
				<animation property="opacity" from="0.9" to="0" begin="43000" duration="1000" mode="linear"/>
				<animation property="opacity" from="0" to="0" begin="44000" duration="5500" mode="linear"/>
				
			</storyboard>			
		</image>
		
		<image name="nuage3" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="opacity" from="0" to="0.92" begin="18000" duration="4000" mode="linear"/>
				<animation property="x" from="-0.1" to="0.55" begin="18000" duration="35000" mode="easyOut"/>
				<animation property="opacity" from="0.92" to="0" begin="51000" duration="1000" mode="linear"/>
				<animation property="opacity" from="0" to="0" begin="52000" duration="5500" mode="linear"/>
				
			</storyboard>			
		</image>
		
		
		<image name="nuage4" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="opacity" from="0" to="0.88" begin="27000" duration="4000" mode="linear"/>
				<animation property="x" from="-0.1" to="0.55" begin="27000" duration="36000" mode="easyOut"/>
				<animation property="opacity" from="0.88" to="0" begin="62000" duration="1000" mode="linear"/>
				<animation property="opacity" from="0" to="0" begin="63000" duration="6000" mode="linear"/>
				
			</storyboard>			
		</image>
		
		
		
		
		<image name="avatar" extra="true">
		
			 <storyboard repeat="forever">
			    <animation property="opacity" from="0" to="1" begin="3900" duration="200" mode="easeIn"/>
				<animation property="x" from="1" to="0.45" begin="3900" duration="400" mode="linear"/>
						
			    <animation property="rotation" to="2" begin="4300" duration="1000" mode="bump"/>
                <animation property="x" to="0.4" begin="4300" duration="1000" mode="bump"/>
                <animation property="rotation" from="2" to="-2" begin="5300" duration="1000" mode="bump"/>
                
				<animation property="x" from="0.4" to="0.30" begin="5300" duration="1000" mode="bump"/>
				<animation property="y" from="0.4" to="0.23" begin="5300" duration="1000" mode="bump"/>
    
                <animation property="scale" from="0.7" to="1" begin="5300" duration="1000" mode="easeIn"/>
				
				<animation property="rotation" to="0.5" begin="6300" autoreverse="true" duration="650" repeat="7" mode="linear"/>
				<animation property="y" from="0.23" to="0.235" begin="6300" autoreverse="true" duration="400" repeat="1" mode="easeOut"/>
				
				<animation property="scale" to="7" begin="15400" duration="1500" mode="Linear"/>
				<animation property="x" to="-1" begin="15400" duration="1500" mode="linear"/>
				<animation property="y" to="-0.4" begin="15400" duration="1500" mode="linear"/>
				<animation property="opacity" to="0" begin="15400" duration="1500" mode="linear"/>
            </storyboard>		
			
		</image>
		
				
		
		<image name="avatar2" extra="true">
		
			<storyboard repeat="forever">
				
				<animation property="x" from="0" to="0.34" begin="1200" duration="3200" mode="linear"/>
				<animation property="opacity" from="0" to="1" begin="1300" duration="400" mode="linear"/>
				
				<animation property="x" to="0.34" begin="4300" duration="100" mode="linear"/>
				
				<animation property="rotation" to="-20" begin="4400" autoreverse="false" duration="2000" mode="linear"/>
				<animation property="x" from="0.34" to="-1" begin="4400" duration="1000" mode="linear"/>
				<animation property="y" from="0.55" to="0.45" begin="4400" duration="500" mode="linear"/>		
				<animation property="scale" from="0.5" to="2" begin="4400" duration="500" mode="linear"/>
				<animation property="opacity" from="1" to="0" begin="5790" duration="10" mode="linear"/>
				<!-- Pause en dehors de l'Ã©cran -->
				<animation property="x" to="1" begin="5800" duration="11100" mode="linear"/>
				
				
				
			</storyboard>

		</image>
		
		
		<image name="avatar4" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="opacity" from="0" to="1" begin="4400" duration="30" mode="linear"/>
				<animation property="scale" to="0.8" begin="4400" duration="1300" mode="linear"/>
				<animation property="y" from="0.55" to="0.42" begin="4400" duration="1300" mode="easeOut"/>
				<animation property="x" to="0.31" begin="4400" duration="1300" mode="easeOut"/>
				<animation property="opacity" from="1" to="0" begin="5200" duration="500" mode="linear"/>
				<animation property="opacity" from="0" to="0" begin="5700" duration="11200" mode="linear"/>
				
				
				
			</storyboard>			
		</image>
		
		
		
		<image name="avatar3" extra="true">
		
			<storyboard repeat="forever">
			
				<animation property="y" from="-1" to="0.20" begin="" duration="1000" mode="easeIn"/>
				<animation property="rotation" to="3" begin="" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="y" from="0.20" to="0.21" begin="800" autoreverse="true" duration="400" repeat="16" mode="easeOut"/>

				<animation property="scale" to="1.3" begin="15000" duration="2500" mode="Linear"/>
				<animation property="x" to="-0.2" begin="15000" duration="2500" mode="easeIn"/>
				<animation property="y" to="-0.2" begin="15000" duration="2500" mode="easeIn"/>
				<animation property="opacity" to="0" begin="18000" duration="500" mode="linear"/>
				
				
			</storyboard>
		
		</image>
		
		
		
	</view>

</theme>
