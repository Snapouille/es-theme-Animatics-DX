		<image name="cloud8" extra="true">
			<origin>0.5 0.5</origin>									
			<size>0.18125 0.1074074</size>									
			<pos>-0.1 0.1296296</pos>									
			<path>./cloud4.png</path>
			<storyboard repeat="forever">
				<animation property="x" to="1.1" begin="99000" duration="90000" mode="linear"/>
			</storyboard>
		</image>
		
		
	</view>

</theme>
