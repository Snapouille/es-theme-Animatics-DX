<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="duke1" extra="static">
			<origin>0.5 0.5</origin>									
<size>0.3875 0.7009259</size>									
<pos>0.4645833 0.3763889</pos>									
			<path>./duke1.png</path>
			<opacity>0</opacity>
			<zIndex>18</zIndex>
			<linearSmooth>true</linearSmooth>
			
