<!-- Sufami Turbo -->

<theme>
	<formatVersion>7</formatVersion>
	
	<view name="system">

		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	<scale>1</scale>	
			<scale>1.1</scale>
			  <storyboard>
				<animation property="scale" to="1" begin="" duration="600" mode="linear"/>
			  </storyboard>
		</image>

		<image name="avatar" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.2885417 0.2694444</size>									
			<pos>1.03 0.7</pos>									
			<path>./avatar.gif</path>
		    <flipX>true</flipX>
			<scale>1.8</scale>

			<storyboard>
				<animation property="scale" to="1" begin="100" duration="600" mode="Linear"/>
				<animation property="offsetY" to="-0.2" begin="100" duration="600" mode="Bump"/>
				<animation property="offsetX" to="-0.2" begin="100" duration="550" mode="EaseInOut"/>
				<animation property="offsetY" to="-0.25" begin="700" duration="1000" mode="linear"/>
				<animation property="offsetY" to="-0.31" begin="2000" duration="3550" autoreverse="true" repeat="forever" mode="EaseInOut"/>
			</storyboard>
					
		</image>
		
	</view>
</theme>
