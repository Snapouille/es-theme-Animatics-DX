<theme>
	<formatVersion>7</formatVersion>

	<view name="system">

		<image name="avatar, avatar2, avatar3, avatar4, avatar5, avatar5_ghost1, avatar5_ghost2" extra="static">
			<origin>0 0</origin>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
		</image>

		<image name="avatar" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.5010417 0.7518519</size>									
			<pos>0.8322917 0.6592593</pos>									
			<zIndex>10</zIndex>
			<storyboard>
					<animation property="y" from="1" begin="0" duration="350" mode="easeOut"/>
					<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar2" extra="static">
			<pos>0 0</pos>
			<size>0.51 0.9061</size>
			<path>./avatar-light.png</path>
			<zIndex>11</zIndex>
			<storyboard repeatAt="400">
        		<animation property="scale" to="1.2" begin="350"  duration="6000" mode="easyIn"/>
				<animation property="scale" to="1"   begin="6350" duration="6000" mode="easyIn"/>
				
        		<animation property="opacity" begin="3800"  from="0.8" to="0.6" duration="10" autoreverse="true" repeat="5" mode="linear"/>
        		<animation property="opacity" begin="4500"  from="0.8" to="0.6" duration="5"  autoreverse="true" repeat="3" mode="linear"/>
        		<animation property="opacity" begin="6500"  from="0.8" to="0.6" duration="7"  autoreverse="true" repeat="2" mode="linear"/>
        		<animation property="opacity" begin="7000"  from="0.8" to="0.6" duration="5"  autoreverse="true" repeat="4" mode="linear"/>
        		<animation property="opacity" begin="12000" from="0.8" to="0.6" duration="10" autoreverse="true" repeat="5" mode="linear"/>

				<animation property="opacity" from="0" to="0.8" duration="350" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar3" extra="static">
			<pos>0.185 0.365</pos>
			<maxSize>0.2969 0.9067</maxSize>
			<rotationOrigin>0 0</rotationOrigin>
			<rotation>-60</rotation>
			<path>./avatar-lensflare.png</path>
			<zIndex>10</zIndex>
			<storyboard repeatAt="400">
        		<animation property="scale" to="1.05" begin="350"  duration="6000" mode="easyIn"/>
				<animation property="scale" to="1"    begin="6350" duration="6000" mode="easyIn"/>

        		<animation property="rotation" from="-60" to="-55" begin="0"    duration="3150" mode="ease"/>
        		<animation property="rotation" from="-55" to="-60" begin="3750" duration="2750" mode="ease"/>
        		<animation property="rotation" from="-60" to="-65" begin="6500" duration="2950" mode="ease"/>
        		<animation property="rotation" from="-65" to="-60" begin="9250" duration="3250" mode="ease"/>

				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>

		<image name="avatar4" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.04375 0.1453704</size>									
			<pos>0.809375 0.6263889</pos>									
			<path>./avatar-water.png</path>
			<zIndex>11</zIndex>
			<storyboard repeatAt="1">
				<animation property="opacity" from="0" to="0.8" begin="3000" duration="350" mode="linear"/>
				<animation property="origin" to="0 -0.6"        begin="3350" duration="2000" mode="linear"/>
				<animation property="opacity" from="0.8" to="0" begin="5000" duration="350" mode="linear"/>
				<animation property="origin" to="0 0"           begin="5350" duration="5000" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar5, avatar5_ghost1, avatar5_ghost2" extra="static">
			<origin>0.5 0.5</origin>									
			<size>0.1140625 0.1037037</size>									
			<pos>0.6757813 0.6833333</pos>									
			<path>./avatar-trivia.png</path>
			<zIndex>11</zIndex>
		</image>
		
		<image name="avatar5_ghost2" extra="true">
			<color>5050ff</color>
			<storyboard>
					<animation property="y" from="1" begin="0" duration="350" mode="linear"/>
					<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
			</storyboard>
		</image>

		<image name="avatar5_ghost1" extra="true">
			<color>50ff50</color>
			<storyboard repeatAt="3000">
				<animation property="y" from="1" begin="0" duration="350" mode="linear"/>
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
				<animation property="offsetX" to="0.005"  begin="3000" duration="" mode="linear"/>
				<animation property="offsetX" to="0 0" 	  begin="3100" duration="150" mode="linear"/>		
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
				<animation property="offsetX" to="0.005"  begin="5000" duration="" mode="linear"/>
				<animation property="offsetX" to="0 0" 	  begin="5050" duration="50" mode="linear"/>						
				<animation property="offsetX" to="0.008" begin="5150" duration="" mode="linear"/>
				<animation property="offsetX" to="0 0" 	  begin="5200" duration="50" mode="linear"/>	
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
				<animation property="offsetX" to="0.005"  begin="9000" duration="" mode="linear"/>
				<animation property="offsetX" to="0 0" 	  begin="9050" duration="50" mode="linear"/>						
				<animation property="offsetX" to="0.008" begin="9150" duration="" mode="linear"/>
				<animation property="offsetX" to="0 0" 	  begin="9200" duration="50" mode="linear"/>	
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
				<animation property="offsetX" to="0.005"  begin="9500" duration="" mode="linear"/>
				<animation property="offsetX" to="0 0" 	  begin="9550" duration="50" mode="linear"/>						
				<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
				<animation property="offsetX" from="0 0" to="0 0" begin="9700" duration="5000" mode="linear"/>	
			</storyboard>
		</image>

		
	</view>

</theme>
