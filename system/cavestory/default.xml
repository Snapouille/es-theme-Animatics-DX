<!-- Ports et Cave Story  -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		
		<image name="avatar1, avatar2, cloud1, cloud2, cloud3, cloud4, stars1, stars2, stars3">
			<origin>0.5 0.5</origin>									
			<linearSmooth>true</linearSmooth>
			<opacity>0</opacity>
			<scale>0.6</scale>
		</image>
		
	
		<image name="avatar1" extra="true">
			<path>./avatar1.png</path>
			<size>0.1708333 0.3</size>									
			<pos>-0.1 0.9925926</pos>	
			<opacity>1</opacity>
			<zIndex>10</zIndex>
			<scale>1</scale>

			<storyboard>
				<animation property="offsetX" to="0.51" begin="700" duration="500" mode="EaseOut"/>
				<animation property="offsetY" to="-0.6" begin="700" duration="500" mode="Bump"/>
				<animation property="rotation" from="40" to="0" 	begin="700" duration="500" mode="Bump"/>
			</storyboard>
			
		</image>
		
		<image name="avatar2" extra="true">
			<path>./avatar2.png</path>
			<size>0.1671875 0.262037</size>									
			<pos>0.99 1.15</pos>									
			<opacity>1</opacity>
			<zIndex>1000</zIndex>
			<scale>1</scale>

			<storyboard>
				<animation property="offsetX" to="-0.4" 			begin="500" duration="500" mode="EaseOut"/>
				<animation property="offsetY" to="-0.5" 			begin="500" duration="500" mode="Bump"/>
				<animation property="rotation" from="-40" to="0" 	begin="500" duration="500" mode="Bump"/>
			</storyboard>
			
		</image>
		
		
		
		<image name="cloud1" extra="true">
			<path>./cloud1.png</path>
			<size>1 0.1472222</size>									
			<pos>0.3 0.6563889</pos>	
			<zIndex>7</zIndex>
			
			<storyboard repeatAt="1100">
				<animation property="opacity" to="1" 			begin="100"  duration="10" mode="linear"/>
				<animation property="scale" from="1.5" to="1" 	begin="100"  duration="300" mode="EaseOut"/>
				<animation property="offsetY" from="0.2" to="0" begin="100"  duration="300" mode="EaseOut"/>
				<animation property="scale" to="1.015" 			begin="1100" duration="3000" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetY" to="-0.0025" 		begin="1100" duration="3000" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetX" to="0.006" 		begin="1100" duration="3000" autoreverse="true" mode="easeInOut"/>
			</storyboard>
		</image>
		
		<image name="cloud2" extra="true">
			<path>./cloud2.png</path>
			<size>1 0.2231481</size>									
			<pos>0.3 0.6165741</pos>
			<zIndex>6</zIndex>
			
			<storyboard repeatAt="700">
				<animation property="opacity" to="1" 			begin="200"  duration="10" mode="linear"/>
				<animation property="scale" from="1.7" to="1" 	begin="200"  duration="300" mode="EaseOut"/>
				<animation property="offsetY" from="0.2" to="0" begin="200"  duration="300" mode="EaseOut"/>
				<animation property="scale" to="1.01" 			begin="710" duration="2800" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetY" to="0.0025" 		begin="710" duration="2800" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetX" to="0.005" 		begin="710" duration="2800" autoreverse="true" mode="easeInOut"/>
			</storyboard>
		</image>
		
		<image name="cloud3" extra="true">
			<path>./cloud3.png</path>
			<size>1 0.2842593</size>									
			<pos>0.3 0.5878704</pos>									
			<zIndex>5</zIndex>
			
			<storyboard repeatAt="700">
				<animation property="opacity" to="1" 			begin="300"  duration="10" mode="linear"/>
				<animation property="scale" from="1.9" to="1" 	begin="300"  duration="300" mode="EaseOut"/>
				<animation property="offsetY" from="0.2" to="0" begin="300"  duration="300" mode="EaseOut"/>
				<animation property="scale" to="1.01" 			begin="710" duration="2600" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetY" to="-0.0025" 		begin="710" duration="2600" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetX" to="-0.005" 		begin="710" duration="2600" autoreverse="true" mode="easeInOut"/>
			</storyboard>
		</image>
		
		<image name="cloud4" extra="true">
			<path>./cloud4.png</path>
			<size>1 0.3611111</size>									
			<pos>0.3 0.5494444</pos>									
			<zIndex>4</zIndex>
			
			<storyboard repeatAt="700">
				<animation property="opacity" to="1" 			begin="400"  duration="10" mode="linear"/>
				<animation property="scale" from="2.1" to="1" 	begin="400"  duration="300" mode="EaseOut"/>
				<animation property="offsetY" from="0.2" to="0" begin="400"  duration="300" mode="EaseOut"/>
				<animation property="scale" to="1.01" 			begin="710" duration="2400" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetY" to="0.0025" 		begin="710" duration="2400" autoreverse="true" mode="easeInOut"/>
				<animation property="offsetX" to="0.005" 		begin="710" duration="2400" autoreverse="true" mode="easeInOut"/>
			</storyboard>
		</image>
		
		
		<image name="stars1" extra="true">
			<path>./stars.png</path>
			<size>1 1</size>									
			<pos>0.3 0.4</pos>	
			<opacity>1</opacity>
			<zIndex>3</zIndex>
			
			<storyboard>
				<animation property="offsetY" to="-1" 		begin="0" duration="35000" mode="linear"/>
			</storyboard>
		</image>

		<image name="stars2" extra="true">
			<path>./stars.png</path>
			<size>1 1</size>									
			<pos>0.3 1.1</pos>	
			<opacity>1</opacity>
			<zIndex>3</zIndex>
			
			<storyboard repeat="forever">
				<animation property="offsetY" to="-2.2" 		begin="" duration="70000" mode="linear"/>
			</storyboard>
		</image>


		<image name="stars3" extra="true">
			<path>./stars.png</path>
			<size>1 1</size>									
			<pos>0.3 1.1</pos>	
			<opacity>1</opacity>
			<zIndex>3</zIndex>
			
			<storyboard repeat="forever">
				<animation property="offsetY" to="-2.2" 		begin="20000" duration="70000" mode="linear"/>
			</storyboard>
		</image>



	</view>

</theme>


