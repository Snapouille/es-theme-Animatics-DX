<!-- Sega SG 1000 -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	
			<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	

	
	
	<image name="bat" extra="true">
			<origin>0.5 0.5</origin>									
			<size>0.1979167 0.2777778</size>									
			<pos>1.06 -0.21</pos>
			<scale>0.15</scale>
			<rotation>-5</rotation>
			<zIndex>10500</zIndex>
			<linearSmooth>true</linearSmooth>
			<path>./bat.gif</path>
			
			<storyboard repeat="forever">
				<animation property="offsetY" 	to="0.4" 		begin="100" duration="600" mode="EaseInOut"/>
				<animation property="offsetX" 	to="-0.1" 		begin="100" duration="600" mode="EaseInOut"/>
				<animation property="scale" 	to="0.35" 		begin="100" duration="600" mode="Bump"/>

				<animation property="rotation" to="-2" 					begin="1000" autoreverse="true" duration="650" repeat="14" mode="linear"/>
				<animation property="offsetY" from="0.4" to="0.405" 	begin="1000" autoreverse="true" duration="400" repeat="16" mode="EaseOut"/>

				<animation property="scale" to="0.5" 			begin="16000" duration="2500" mode="Linear"/>
				<animation property="x" to="0.4" 				begin="16000" duration="2500" mode="EaseIn"/>
				<animation property="y" to="-0.7" 				begin="16000" duration="2500" mode="EaseIn"/>
				<animation property="opacity" to="0"		    begin="25000" duration="10" mode="linear"/>
			</storyboard>
	</image>
	
	
	<image name="skate.gif" extra="true">
		<origin>0.5 0.5</origin>									
		<size>0.1177083 0.06</size>									
		<pos>-0.2 0.8490741</pos>									
		<zIndex>8</zIndex>
		<linearSmooth>true</linearSmooth>
		<path>./skate.gif</path>
		
		<storyboard repeat="forever">
			<animation property="x" 		to="0.737" 	begin="100"  duration="4000" mode="linear"/>
			<animation property="rotation" 	to="-20" 	begin="4100" duration="50" mode="linear"/>
			<animation property="y" 		to="0.837" 	begin="4100" duration="50" mode="linear"/>
			
			<animation property="x" 		to="1.137" 	begin="4150" duration="1500" mode="linear"/>
			<animation property="y" 		to="0.637" 	begin="4150" duration="1500" mode="bump"/>
			<animation property="rotation"	to="-10" 	begin="4650" duration="1000" mode="bump"/>
			
			
			
			<animation property="opacity" to="0" begin="10000" duration="10" mode="linear"/>
		</storyboard>
	</image>
	
	
	<image name="wboySkate.gif" extra="true">
		<origin>0.5 0.5</origin>									
		<size>0.0911458 0.17</size>									
		<pos>-0.2 0.750463</pos>									
		<zIndex>8</zIndex>
		<linearSmooth>true</linearSmooth>
		<path>./wboySkate.gif</path>
		
		<storyboard repeat="forever">
			<animation property="x" 		to="0.737" 	begin="100" duration="4000" mode="linear"/>
			<animation property="rotation" 	to="-20" 	begin="4100" duration="50" mode="linear"/>
			<animation property="x" 		to="0.71" 	begin="4100" duration="50" mode="linear"/>
			<animation property="y" 		to="0.751" 	begin="4100" duration="50" mode="linear"/>
			
			<animation property="x" 		to="1.14" 	begin="4150" duration="1500" mode="linear"/>
			<animation property="y" 		to="0.551" 	begin="4150" duration="1500" mode="bump"/>
			<animation property="rotation"	to="-10" 	begin="4650" duration="1000" mode="bump"/>
			
			
			
			<animation property="opacity" to="0" begin="10000" duration="10" mode="linear"/>
		</storyboard>
	</image>
	
	
		<image name="banane" extra="true">
			<origin>0 0</origin>									
			<size>0.0416667 0.0694444</size>									
			<pos>0.87 0.45</pos>
			<scale>0.8</scale>
			<opacity>0</opacity>
			<path>./banane.png</path>
			<zIndex>17</zIndex>
		
			<storyboard>
				<animation property="scale" from="0.8" to="0.9" begin="6000" duration="350" mode="linear"/>
				<animation property="opacity" from="0" to="1" 	begin="6000" duration="350" mode="linear"/>
				
				<animation property="opacity" from="1" to="0" begin="14800" duration="100" mode="linear"/>
				<animation property="scale" 		   to="2" begin="14750" duration="100" mode="linear"/>
				<animation property="rotation" 		   to="90" begin="14750" duration="100" mode="linear"/>
			</storyboard>
		</image>
		
		
		
	
		
		<image name="WBwheelBack" extra="static">
		<visible>false</visible>
		</image>	
		
		
		<image name="WBwheelFront" extra="static">
		<visible>false</visible>
		</image>	
		
		<image name="WBskate" extra="static">
		<visible>false</visible>
		</image>	
		
		
		

		
	
	
	
	
	
	
	
	
	
	
	<image name="chute" extra="true">
		<visible>false</visible>
		</image>
		
	
	
	<image name="WBboy0, WBboy1, WBboy2, WBboy3, WBboy4">
		<visible>false</visible>
	</image>
	
	
	
	
	
	
	
	
	
	</view>
</theme>
