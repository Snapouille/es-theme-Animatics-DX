<!-- Solarus -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.5</pos>	
			<scale>1</scale>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
	
		
		<image name="avatar-light" extra="static">
			<origin>0 0</origin>									
			<pos>0 0</pos>
			<size>0.51 0.9061</size>
			<path>./avatar-light.png</path>
			<zIndex>14</zIndex>
			<storyboard>
				<animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
        		<animation property="scale" to="1.3" begin="350" duration="7000" mode="EaseIn"/>
				<animation property="scale" to="1" begin="7350" duration="6000" autoreverse="true" repeat="10" mode="EaseIn"/>
        		<animation property="opacity" begin="3800" from="1" to="0.8" duration="10" autoreverse="true" repeat="5" mode="linear"/>
        		<animation property="opacity" begin="4500" from="1" to="0.8" duration="5" autoreverse="true" repeat="3" mode="linear"/>
        		<animation property="opacity" begin="6500" from="1" to="0.8" duration="7" autoreverse="true" repeat="2" mode="linear"/>
        		<animation property="opacity" begin="7000" from="1" to="0.8" duration="5" autoreverse="true" repeat="4" mode="linear"/>
        		<animation property="opacity" begin="12000" from="1" to="0.8" duration="10" autoreverse="true" repeat="10" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar" extra="static">
			<origin>0 0</origin>
			<pos>0.66 0.225</pos>
			<opacity>0</opacity>
			<maxSize>0.6 0.7</maxSize>
			<zIndex>13</zIndex>
			<storyboard>
				<animation property="opacity" from="0" to="1" begin="2000" duration="350" mode="linear"/>
				<animation property="y" from="-2" begin="2000" duration="350" mode="linear"/>
			</storyboard>
		</image>
		
		<image name="avatar-shadow" extra="static">
			<origin>0 0</origin>
			<pos>0 0.225</pos>
			<maxSize>0.6 0.7</maxSize>
			<opacity>0</opacity>
			<scale>0.1</scale>
			<path>./avatar-shadow.png</path>
			<zIndex>12</zIndex>
			<storyboard>
				
				<animation property="opacity" from="0" to="1" begin="" duration="1350" mode="linear"/>
				<animation property="x" to="0.66" begin="" duration="1950" mode="EaseOut"/>
				<animation property="scale" from="0.1" to="1" begin="" duration="1950" mode="EaseOut"/>
        		<animation property="scale" to="0.98" begin="1950" duration="5400" autoreverse="true" repeat="10" mode="EaseIn"/>
				<animation property="scale" to="1" begin="7350" duration="6000" autoreverse="true" repeat="10" mode="EaseIn"/>
        		<animation property="opacity" begin="4800" from="1" to="0.8" duration="10" autoreverse="true" repeat="5" mode="linear"/>
        		<animation property="opacity" begin="5500" from="1" to="0.8" duration="5" autoreverse="true" repeat="3" mode="linear"/>
        		<animation property="opacity" begin="7500" from="1" to="0.8" duration="7" autoreverse="true" repeat="2" mode="linear"/>
        		<animation property="opacity" begin="8000" from="1" to="0.8" duration="5" autoreverse="true" repeat="4" mode="linear"/>
        		<animation property="opacity" begin="13000" from="1" to="0.8" duration="10" autoreverse="true" repeat="10" mode="linear"/>
			</storyboard>
		</image>
		
	</view>

</theme>
