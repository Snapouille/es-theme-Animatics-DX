			<scale>1</scale>
			<zIndex>14</zIndex>
			<opacity>1</opacity>
			<path>./ball.png</path>

		
			<storyboard repeat="forever">
				
				<animation property="x" to="0.7" begin="1400" duration="700" mode="linear"/>
				<animation property="y" to="0.55" begin="1400" duration="700" mode="linear"/>
				<animation property="x" to="-0.3" begin="2100" duration="400" mode="linear"/>
				<animation property="y" to="0.3" begin="2100" duration="400" mode="linear"/>
				
				<animation property="y" to="0.1" begin="2600" duration="10" mode="linear"/>
				
