		</image>
		
		
		
		
		
		
		<image name="snoopy3" extra="static">
			<origin>0 0</origin>
			<pos>0.707 0.39</pos>
			<size>0.3083333 0.575</size>									

			<scale>0.63</scale>
			<zIndex>21</zIndex>
			<opacity>0</opacity>
			<path>./snoopy3.png</path>

		
			<storyboard repeat="forever">
				<animation property="opacity" to="1" begin="5800" duration="10" mode="linear"/>
					
