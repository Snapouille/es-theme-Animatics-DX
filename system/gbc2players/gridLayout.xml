				<animation property="opacity" to="0" begin="5000" duration="300" mode="linear"/>
				<animation property="opacity" to="1" begin="5400" duration="300" mode="linear"/>
				
				
				<animation property="opacity" to="0" begin="5800" duration="10" mode="linear"/>
				
				<animation property="opacity" to="0" begin="13000" duration="1" mode="linear"/>
				
				
			</storyboard>

		</image>
		
