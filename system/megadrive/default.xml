<!-- Megadrive -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
		
		<image name="avatar" extra="static">
			<origin>0 0</origin>									
			<size>0.265625 0.8361111</size>									
			<pos>0.17 0.21</pos>
			<scale>0.55</scale>
			<opacity>0</opacity>
		</image>	
	
	
		<image name="avatar2" extra="static">
				<origin>0 0</origin>									
				<size>0.3671875 0.8481481</size>									
				<pos>0.43 0.15</pos>
				<scale>1</scale>
				<path>./avatar2.png</path>
				<opacity>0</opacity>
				<zIndex>18</zIndex>
		</image>
		
		<image name="avatar3" extra="static">
			<origin>0 0</origin>									
			<size>0.3671875 0.8481481</size>									
			<pos>0.35 0.01</pos>
			<scale>1</scale>
			<path>./avatar3.png</path>
			<opacity>0</opacity>
			<zIndex>18</zIndex>
	</image>
	
	
		<image name="avatar" extra="true">	
		
			<storyboard repeat="forever">
					
					<animation property="opacity" from="0" to="1" begin="" duration="100" mode="linear"/>
					<animation property="x" to="0.27" begin="100" duration="3700" mode="EaseOut"/>
					<animation property="scale" from="0.55" to="0.8" begin="4000" duration="350" mode="bump"/>
					<animation property="x" from="0.17" to="0.40" begin="4000" duration="375" mode="EaseOut"/>
					<animation property="y" from="0.17" to="0.03" begin="4000" duration="375" mode="EaseOut"/>

					<animation property="x" from="0.38" to="0.35" begin="5100" duration="300" mode="bump"/>
					<animation property="y" from="0.03" to="-0.03" begin="5100" duration="300" mode="bump"/>
					<animation property="rotation" from="0" to="-3" begin="5100" autoreverse="true" duration="300" mode="easyin"/>

					<animation property="rotation" from="0" to="-20" begin="6200" autoreverse="true" duration="200" mode="easyin"/>
					<animation property="y" from="0.03" to="-1" begin="6300" duration="300" mode="bump"/>
					
					<animation property="rotation" from="0" to="-50" begin="10000" duration="300" mode="easyin"/>
					<animation property="x" from="0.35" to="0.1" begin="10000" duration="300" mode="bump"/>
					<animation property="y" from="-1" to="1" begin="10500" duration="1000" mode="bump"/>

					
					<animation property="opacity" to="0" begin="16000" duration="1000" mode="linear"/>
					
			</storyboard>
		</image>
		
		
		<image name="avatar2" extra="true">	
			<storyboard repeat="forever">
					
					<animation property="opacity" from="0" to="1" begin="5000" duration="10" mode="linear"/>
					<animation property="rotation" from="1" to="-1" begin="5000" autoreverse="true" duration="300" repeat="2" mode="easyin"/>
					<animation property="y" from="0.15" to="0.149" begin="5000" autoreverse="true" duration="300" repeat="2" mode="easyin"/>
					
					<animation property="rotation" from="1" to="-1" begin="6100" autoreverse="true" duration="100" mode="easyin"/>
					<animation property="x" from="0.40" to="0.35" begin="6100" duration="200" mode="bump"/>
					<animation property="y" from="0.12" to="0.01" begin="6100" duration="200" mode="bump"/>
					
					
					<animation property="opacity" begin="6300" from="1" to="0" duration="10" autoreverse="true" repeat="14" mode="linear"/>
					<animation property="opacity" begin="6780" from="1" to="0" duration="20" mode="linear"/>
										
					
					<animation property="opacity" from="0" to="0" begin="6800" duration="10200" mode="linear"/>
					
			</storyboard>
		</image>
		
		
		
		<image name="avatar3" extra="true">	
			<storyboard repeat="forever">
				<!-- <animation property="opacity" from="0" to="0" begin="" duration="6100" mode="linear"/> -->
				<animation property="opacity" from="0" to="1" begin="6100" duration="400" mode="linear"/>
				
				<animation property="scale" from="1" to="5" begin="16000" duration="1000" mode="linear"/>
				<animation property="x" to="-0.5" begin="16000" duration="1000" mode="linear"/>
				<animation property="y" to="-1" begin="16000" duration="1000" mode="linear"/>
				<animation property="opacity" to="0" begin="16000" duration="1000" mode="linear"/>
				
				<!-- <animation property="opacity" from="1" to="1" begin="9100" duration="15200" mode="linear"/> -->
				
				
				
			</storyboard>
		</image>
		
		
	</view>

</theme>
