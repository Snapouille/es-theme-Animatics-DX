<!-- Megadrive -->


<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		<image name="avatar" extra="true">	
			<origin>0 0</origin>									
			<size>0.265625 0.8361111</size>									
			<pos>1.05 0.24</pos>		
			<pos ifHelpPrompts="false">1.05 0.3</pos>	
			<scale>0.8</scale>
			<opacity>1</opacity>
			<zIndex>1901</zIndex>
			
			<storyboard>
					<animation property="offsetX" to="-0.30" begin="100" duration="500" mode="EaseOut"/>
				
