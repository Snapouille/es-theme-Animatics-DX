<!-- Naomi -->


<theme>
	<formatVersion>7</formatVersion>



	<view name="system">
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	
			<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<flipX>true</flipX>
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
		
	
		<image name="avatar" extra="true">
			<origin>0.5 0.5</origin>
			<size>0.1760417 1.0055556</size>									
			<pos>1.05 0.515</pos>			
			<scale>0.815</scale>
			<path>./avatar.png</path>
			<opacity>1</opacity>

			<storyboard>
				<animation property="offsetX" to="-0.25" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
			
			<storyboard ifHelpPrompts="false">
				<animation property="offsetY"  to="0.06"/>
				<animation property="offsetX" to="-0.25" begin="100" duration="500" mode="EaseOut"/>
			</storyboard>
		
		</image>

	
	
		<image name="avatar2" extra="static">
			<origin>0 0</origin>									
			<size>0.0338542 0.1</size>									
			<pos>0.757 0.217</pos>
			<pos ifHelpPrompts="false">0.757 0.277</pos>	
			<scale>1</scale>
			<path>./avatar2.png</path>
			<opacity>0</opacity>
			<zIndex>1000</zIndex>
			<linearSmooth>true</linearSmooth>
	
			<storyboard repeat="forever">
					<animation property="opacity" from="0" to="1" begin="1000" duration="10" mode="linear"/>
					<animation property="rotation" from="1" to="-1" begin="1375" autoreverse="true" duration="400" repeat="10" mode="linear"/>
					<animation property="offsetY" from="0" to="0.00015" begin="1375" autoreverse="true" duration="400" repeat="10" mode="linear"/>
					<animation property="opacity" from="1" to="0" begin="9790" duration="10" mode="linear"/>
					<animation property="opacity" from="0" to="0" begin="9800" duration="1500" mode="linear"/>
			</storyboard>
			
			
			
		</image>
		
		
		
		
	</view>

</theme>
