<!-- Game Gear -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
	
		<image name="BG_snapLegacy" extra="true">
			<size>1 1</size>									
			<pos>0.5 0.44</pos>	<scale>1</scale>	
			<pos ifHelpPrompts="false">0.5 0.5</pos>	
			<saturation>0.7</saturation>
			  <storyboard>
				<animation property="saturation" to="1" begin="" duration="500" mode="linear"/>
			  </storyboard>
		</image>
	
	
		<image name="moon" extra="static">
			<origin>0 0</origin>									
			<pos>0.11 0.14</pos>
			<size>0.18125 0.3222222</size>									
			<scale>0.35</scale>
			<path>./moon.png</path>
			<opacity>1</opacity>
			<zIndex>14</zIndex>
			<linearSmooth>true</linearSmooth>
		</image>	
	
		
		<image name="sorciere" extra="static">
			<origin>0 0</origin>
			<pos>1.1 0.07</pos>
			<size>0.084375 0.1574074</size>									
			<scale>0.55</scale>
			<rotation>-10</rotation>
			<flipX>true</flipX>
			<path>./sorciere.png</path>
			<opacity>1</opacity>
			<zIndex>10</zIndex>
			<linearSmooth>true</linearSmooth>
		</image>	
		
		<image name="sorciere2" extra="static">
			<origin>0 0</origin>
			<pos>-1 0.13</pos>
