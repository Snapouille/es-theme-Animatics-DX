<!-- Super Acan -->

<theme>
	<formatVersion>7</formatVersion>

	<view name="system">
	
		
		<image name="mountain" extra="true">
			<linearSmooth>true</linearSmooth>
			<origin>0.5 0.5</origin>									
			<size>1 0.3138889</size>									
			<pos>0.5 0.85</pos>	
			<path>./mountain.gif</path>
			<zIndex>10</zIndex>		
			<scale>1</scale>
			
			<storyboard repeatAt="13000">
				<animation property="scale" to="1.1" begin="13000" duration="4000" mode="EaseInOut"/>
				<animation property="offsetY" to="0.02" begin="13000" duration="4000" mode="linear"/>
			</storyboard>

		</image>
		
		

		<image name="arcenciel" extra="static">
			<origin>0 0</origin>									
			<size>0.9364583 0.5398148</size>									
			<pos>-0.2 0</pos>
			<opacity>1</opacity>
			<path>./arcenciel.png</path>
			<zIndex>5</zIndex>
			<opacity>0</opacity>
		
			<storyboard repeatAt="7000">
				<animation property="opacity" from="0" to="1" begin="1000" duration="2000" mode="linear"/>
				<animation property="opacity" from="0.8" to="1" begin="3000" duration="1000" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0.8" to="1" begin="8000" duration="100" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0.8" to="1" begin="8200" duration="200" autoreverse="true" repeat="1" mode="linear"/>
				<animation property="opacity" from="0.8" to="1" begin="8600" duration="500" autoreverse="true" repeat="2" mode="linear"/>
				<animation property="opacity" from="0.8" to="1" begin="10600" duration="200" autoreverse="true" repeat="2" mode="linear"/>
			</storyboard>
		
		</image>
		
		<image name="avatar-mini" extra="static">
		<visible>false</visible>
		</image>
		
	
		<image name="avatar" extra="static">
			<origin>0 0</origin>									
			<size>0.3854167 0.6518519</size>									
			<pos>-1 -0.2</pos>
			<scale>0.2</scale>
			<opacity>1</opacity>
			<flipX>true</flipX>
			<path>./avatar.gif</path>
			<zIndex>20000</zIndex>

			<storyboard>
					<animation property="pos" to="0.67 0.21" begin="" duration="1500" mode="EaseInOut"/>
					<animation property="scale" to="0.8" begin="" duration="1500" mode="Bump"/>
					<animation property="y" to="0.208" begin="1500" duration="455" autoreverse="true" mode="EaseInOut"/>
			</storyboard>
		</image>


		

		
	</view>

</theme>
