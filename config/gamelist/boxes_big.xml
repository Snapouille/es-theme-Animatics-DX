		<text name="md_name">
         <size>0.327 0.08</size>
         <pos>0.011 0.44</pos>
         <fontSize>0.025</fontSize>
      </text>
	  
	  <text name="md_genre">
         <pos>0.011 0.48</pos>
         <size>0.41 0.033</size>
