<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<view name="gamecarousel">
	<gamecarousel name="gamecarousel">
		<itemTemplate>
			<container>
				<image name="fond">
					<pos>0.5</pos>
					<origin>0.5</origin>
					<maxSize>1</maxSize>
					<path>${themePath}/art/wheel/ovalcarb.png</path>
					<opacity>1</opacity>
					<zIndex>99</zIndex>
				</image>
				<image name="marquee">
					<pos>0.5</pos>
					<origin>0.5</origin>
					<maxSize>0.68 0.3</maxSize>
					<path>{game:marquee}</path>
					<zIndex>100</zIndex>
					<linearSmooth>true</linearSmooth>
				</image>
				<image name="favorite">
					<visible>{game:favorite}</visible>
					<path>${themePath}/art/divers/heart.png</path>
					<pos>0.76 0.625</pos>
					<zIndex>101</zIndex>
					<maxSize>0.07 0.07</maxSize>
				</image>
				<text name="gamename">
					<visible>!exists({game:marquee})</visible>
					<text>{game:name}</text>
					<fontPath>${themePath}/art/fonts/charge-vector.otf</fontPath>
					<color>FFFFFF</color>
					<alignment>center</alignment>
					<fontSize>0.027</fontSize>
					<lineSpacing>1</lineSpacing>
					<size>0.75 0.5</size>
					<pos>0.115 0.25</pos>
					<glowColor>00000066</glowColor>
					<glowSize>2</glowSize>
					<zIndex>400</zIndex>
					<multiLine>true</multiLine>
				</text>
			</container>
		</itemTemplate>
	</gamecarousel>
</view>
</theme>














