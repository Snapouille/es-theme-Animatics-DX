<theme defaultView="detailed">
  <formatVersion>7</formatVersion>
  

    
<customView name="boxes_medium" inherits="boxes_big" displayName="${mediumboxesview}">
	
	
	
	
    <imagegrid name="gamegrid">
      <pos>0.333333 0.01</pos>
      <size>0.6666667 0.914814814</size>
	  <margin>0 0</margin>
      <padding>0.004 0 0.004 0</padding>
      <zIndex>10</zIndex>
      <autoLayout>5 3</autoLayout>
	  <autoLayout if="{system.theme} == 'amigacdtv' || {system.theme} == 'amigacd32' || {system.theme} == 'gx4000' || {system.theme} == 'dreamcast' || {system.theme} == 'gb' || {system.theme} == 'gbc'  || {system.theme} == 'gb2players'  || {system.theme} == 'gbc2players' || {system.theme} == 'gba' || {system.theme} == 'gba2players' || {system.theme} == 'neogeocd' || {system.theme} == 'ngp' || {system.theme} == 'ngpc' || {system.theme} == 'nds' || {system.theme} == 'fds' || {system.theme} == 'pcengine' || {system.theme} == 'pce-cd' || {system.theme} == 'psx' || {system.theme} == 'pokemini' || {system.theme} == 'solarus' || {system.theme} == 'sgb' || {system.theme} == 'snes-msu1' || {system.theme} == 'virtualboy'">4 3</autoLayout>
	  <autoLayout if="{system.theme} == '3ds' || {system.theme} == 'gameandwatch' || {system.theme} == 'megaduck' || {system.theme} == 'n64' || {system.theme} == 'snes' || {system.theme} == 'virtualboy'">4 4</autoLayout>
	  <autoLayout if="{system.theme} == '3do' || {system.theme} == 'model2' || {system.theme} == 'psp' || {system.theme} == 'pv1000' || {system.theme} == 'switch'">6 3</autoLayout>
	  <autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
      <animateSelection>false</animateSelection>
      <centerSelection>false</centerSelection>
	  <scrollLoop>true</scrollLoop>
	  <scrollSound>./../../art/sounds/scroll.wav</scrollSound>
	  <scrollDirection>vertical</scrollDirection>
	</imagegrid>
	
 </customView>
  
  
  
  
</theme>
