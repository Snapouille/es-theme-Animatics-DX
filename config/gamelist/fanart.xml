	  <scrollLoop>true</scrollLoop>
	  
	  <gameImage>./../../art/divers/nologo.png</gameImage>
	  
      <zIndex>50</zIndex>
	  
	  <storyboard>
				<animation property="scale" to="1.1" begin="" duration="500" autoreverse="true" mode="EaseOut"/>
      </storyboard>
	  
	</imagegrid>
	
    <gridtile name="default">
      <padding>0 0</padding>
      <backgroundCenterColor>44444400</backgroundCenterColor>
	  <backgroundEdgeColor>66666600</backgroundEdgeColor>
	  <selectionMode>image</selectionMode>
      <imageSizeMode>maxSize</imageSizeMode>
	  <imageColor>505050FF</imageColor>
    </gridtile>
	
    <gridtile name="selected">
      <backgroundCenterColor>88000000</backgroundCenterColor>
      <backgroundEdgeColor>DD000000</backgroundEdgeColor>
	  <backgroundCornerSize>8 8</backgroundCornerSize>
	  <imageColor>FFFFFFFF</imageColor>
      <padding>0 0</padding>
    </gridtile>
	
	<ninepatch name="gridtile.background:selected">
	  <animateColor>AA660000</animateColor>
    </ninepatch>

     <image name="gridtile.marquee">
         <pos>0.5 0.5</pos>
         <origin>0.5 0.5</origin>
         <size>0 0</size>
		 
		 
      </image>
	  
      <image name="gridtile.marquee:selected">
	     <pos>0.5 0.70</pos>
         <color>FFFFFFFF</color>
         <size>0 0</size>
		 
      </image>
	  
	   <image name="gridtile.favorite">
         <pos>0.914 0</pos>
         <maxSize>0.5 0.5</maxSize>
		 
		<storyboard repeatAt="forever">
			<animation property="rotation" to="1080" begin="3000" duration="2000" autoreverse="true" mode="easeInOut"/>
			<animation property="scale" to="0" begin="15000" duration="1000" autoreverse="true" mode="easeInOut"/>
			<animation property="scale" to="0" begin="30000" duration="1000" autoreverse="true" mode="easeInOut"/>
		</storyboard>
      </image>
	  
 
	  
	  

	<!-- on passe juste la couleur de selection de fond en transparent -->
	<ninepatch name="gridtile.background:selected">
		<color>FFFFFF00</color>
    </ninepatch>




      <image name="md_fanart">
		<default>./../../art/divers/bg.jpg</default>
	  	<linearSmooth>true</linearSmooth>
        <pos>0 0</pos>
        <origin>0 0</origin>
        <size>1 1</size>
        <zIndex>3</zIndex>
		<color>FFFFFFFF</color>
		<colorEnd>000000FF</colorEnd>
        <gradientType>vertical</gradientType>
		<scale>1.1</scale>
		<saturation>0</saturation>
			<storyboard event="open">
				<animation property="saturation" from="0" to="1" mode="linear" duration="2200" begin="0"/>
				<animation property="scale" from="1" to="1.1" mode="EaseInOut" duration="20000" autoreverse="true" repeat="forever" begin="0"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="saturation" from="0" to="1" mode="linear" duration="2200" begin=""/>
				<animation property="scale" from="1" to="1.1" mode="EaseInOut" duration="20000" autoreverse="true" repeat="forever" begin="0"/>
			</storyboard>
			<storyboard event="activatePrev">
