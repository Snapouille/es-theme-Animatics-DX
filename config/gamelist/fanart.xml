				<animation property="scale" from="1" to="1.1" mode="EaseInOut" duration="20000" autoreverse="true" repeat="forever" begin="0"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="saturation" from="1" to="0" mode="linear" duration="1"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="saturation" from="1" to="0" mode="linear" duration="1"/>
			</storyboard>	
      </image>
	  
	  
		
     

      


     
