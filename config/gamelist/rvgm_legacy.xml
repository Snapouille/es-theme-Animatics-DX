<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<customView name="rvgm_legacy" inherits="rvgm_the_new_order" displayName="RVGM - Legacy">

	
	<image name="overlay_fixe" extra="true">
			<path>./../../art/divers/overlay_fixe_rvgm_legacy.png</path>
	</image>
	
	<!-- <image name="overlay_cadreTV" extra="true"> -->
			<!-- <path>./../../art/divers/overlay_cadreTV_rvgm_legacy.png</path> -->
	<!-- </image> -->
	
	<image name="overlay_fanart" extra="true">
		<visible>false</visible>
	</image>
	
	<image name="md_fanart">>
		<!-- <saturation ifSubset="fanartDisplay:Show">1</saturation> -->
		
		<storyboard event="activate">
			<animation property="saturation" from="0.3" to="1" begin="" duration="1000" mode="linear"/>
		</storyboard>
		
	</image>
	
	<text name="md_developer, md_publisher,md_playcount, md_gametime, md_players">
		<color>000000</color>
	</text>

	<text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_playcount, 
			md_lbl_description, md_lbl_players, md_lbl_rating, md_lbl_gametime
			md_lbl_releasedate, md_lbl_lastplayed, md_lbl_gametime">
			<color>144ca7</color>
	</text>

	<datetime name="md_releasedate, md_lastplayed">
		<color>000000</color>
	</datetime>
	
	<text name="md_genre">
		<fontPath>./../../art/fonts/ubuntu-bold.ttf</fontPath>
		<color>${baseColor}</color>
	</text>
	
	<rating name="md_rating">
		<color>dbe217</color>
	</rating>

	<text name="md_description">
		<color>${backgroundColor}</color>
	</text>
	
</customView>

</theme>
