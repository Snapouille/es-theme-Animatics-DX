<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<customView name="rvgm_legacy" inherits="video" displayName="RVGM Legacy">


	<image name="cadre, iconsLine" extra="true">
			<visible>false</visible>
	</image>

	
	<image name="bg_overlay" extra="true">
		<path>./../../art/divers/bg-rvgm-legacy.png</path>
	</image>
	
	
	<image name="md_fanart">>
		<pos>0 0</pos>
		<origin>0 0</origin>
		<size>1 1</size>
		<zIndex>3</zIndex>
		<visible ifSubset="fanartDisplay:Hide">false</visible>
	</image>



	<!-- On masque le cadre de l'aide -->
	<image name="up_BottomFrame, down_BottomFrame, left_BottomFrame, right_BottomFrame, black_BottomFrame" extra="true">
		<visible>false</visible>
	</image>


	<helpsystem name="help">
		<iconColor>FFFFFF</iconColor>
		<iconColor>${baseColor}</iconColor>
		<fontSize>0.022</fontSize>
		<pos>0.008 0.974</pos>
		<fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
	</helpsystem>
	
	


	<image name="md_thumbnail, md_boxback"> 
		<origin>0 0</origin>
		<pos>0.0255 0.0639</pos>
		<maxSize>0.34 0.6689</maxSize>
		<linearSmooth>true</linearSmooth>
		<zIndex>30</zIndex> 
	</image>
	
	
	
	<image name="md_boxback">
		<opacity>0</opacity>
		<zIndex>31</zIndex>
		<storyboard event="activateNext">        
			<animation property="opacity" from="0" to="1" begin="5000" duration="400" mode="linear"/>
		</storyboard>
		<storyboard event="activatePrev">        
			<animation property="opacity" from="0" to="1" begin="5000" duration="400" mode="linear"/>
		</storyboard>      
		<storyboard event="deactivateNext">
			<animation property="opacity" to="0" duration="400" mode="linear"/>
		</storyboard>
		<storyboard event="deactivatePrev">
			<animation property="opacity" to="0" duration="400" mode="linear"/>
		</storyboard>
	</image>
	




	


	<video name="md_video">
		<pos>0.55 0.45</pos>
		<size>0.334 0.445</size>
		<snapshotSource>image</snapshotSource>
		<origin>0.5 0.5</origin>
		<snapshotSource>image</snapshotSource>
		<showSnapshotNoVideo>true</showSnapshotNoVideo> 
		<showSnapshotDelay>true</showSnapshotDelay>
		<loops>2</loops>
		<delay>0.5</delay> 
		<effect>none</effect>
		<zIndex>51</zIndex> 
		
	</video>

	
		<!-- Affichage du controller2 -->
	<image name="console-collection" extra="true">
		<tile>false</tile>
		<origin>0.5 0.5</origin>									
		<pos>0.4408854 0.1305556</pos>									
		<maxSize>0.1182292 0.15</maxSize>									
		<zIndex>99</zIndex>
		<linearSmooth>true</linearSmooth>
		<horizontalAlignment>center</horizontalAlignment>
			<path>./../../art/controllers2/default.png</path>
			<path>./../../art/controllers2/${system.theme}.png</path>
			<path ifSubset="artworkregion:US">./../../art/controllers2/US/${system.theme}.png</path>
			<path ifSubset="artworkregion:JP">./../../art/controllers2/JP/${system.theme}.png</path>
			<!-- si COLLECTION on affiche le systeme au lieu de la manette -->
			<!-- CASSER avec le nouveau ES en attente d'instructions f.caruso -->
			<path if="${system.manufacturer} == 'Collections'">./../../art/consoles/{game:system}.png</path>
		<opacity>0</opacity>
		<scale>0</scale>

		<storyboard event="open">
			<animation property="opacity" to="1" begin="" duration="300" mode="Linear"/>
			<animation property="scale" to="1" begin="" duration="300" mode="Linear"/>
		</storyboard>
		
		<storyboard event="activate">
			<animation property="opacity" to="1" begin="" duration="1" mode="Linear"/>
			<animation property="scale" to="1" begin="" duration="1" mode="Linear"/>
			<animation property="offsetY" to="0.002" begin="200" duration="150" autoreverse="true" mode="Linear"/>
		</storyboard>
		
		<storyboard event="deactivate">
		   <animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
		
    </image>

	

	
	<image name="md_marquee">
		<origin>0.5 0.5</origin>									
		<pos>0.615625 0.1305556</pos>									
		<maxSize>0.2072917 0.15</maxSize>									
		<linearSmooth>true</linearSmooth>
		<zIndex>900</zIndex> 
	</image>


	<text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_playcount, 
				md_lbl_description, md_lbl_players, md_lbl_rating, md_lbl_gametime
				md_lbl_releasedate, md_lbl_lastplayed, md_lbl_gametime,
				md_developer, md_publisher, md_genre, md_playcount,	md_gametime">
		<origin>0 0</origin>
		<pos>2 2</pos>
		<size>0.15 0.015</size>
		<verticalAlignment>top</verticalAlignment> 
		<color>000000</color>
		<fontSize>0.020</fontSize>
		<lineSpacing>1.3</lineSpacing>
		<forceUppercase>0</forceUppercase>
		<fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
		<alignment>right</alignment>			
		<zIndex>40</zIndex>  
	</text>

	<text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_playcount, 
			md_lbl_description, md_lbl_players, md_lbl_rating, md_lbl_gametime
			md_lbl_releasedate, md_lbl_lastplayed, md_lbl_gametime">
			<color>0e3d63</color>
			<fontSize>0.019</fontSize>
	</text>

	<text name="md_developer, md_publisher, md_genre, md_playcount, md_gametime">
		<alignment>left</alignment>
	</text>

	<datetime name="md_releasedate, md_lastplayed">
		<origin>0 0</origin>
		<pos>2 2</pos>
		<size>0.15 0.015</size>
		<color>000000</color>
		<fontSize>0.020</fontSize>
		<forceUppercase>0</forceUppercase>
		<fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
		<alignment>left</alignment>
		<zIndex>40</zIndex>
	</datetime>
	
	

	<text name="md_players">
		<fontPath>./../../art/fonts/players.ttf</fontPath>
		<alignment>left</alignment>
		<fontSize>0.062</fontSize>
		<color>4c5058</color>
		<linearSmooth>true</linearSmooth>
		<zIndex>55</zIndex>
	</text>


	<text name="md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_releasedate">
		<size>0.09 0.03</size>
	</text>
	<text name="md_lbl_developer">
		<pos>0.015 0.745</pos>
	</text>
	<text name="md_lbl_publisher">
		<pos>0.015 0.780</pos>
	</text>
	<text name="md_lbl_genre">
		<pos>0.015 0.815</pos>
	</text>
	<text name="md_lbl_releasedate">
		<pos>0.015 0.850</pos>
	</text>
	<text name="md_developer, md_publisher, md_genre">
		<size>0.197 0.03</size>
	</text>
	<text name="md_developer">
		<pos>0.106 0.745</pos>
	</text>
	<text name="md_publisher">
		<pos>0.106 0.780</pos>
	</text>
	<text name="md_genre">
		<pos>0.106 0.815</pos>
		<color>${baseColor}</color>
	</text>
	<datetime name="md_releasedate">
		<pos>0.106 0.8468</pos>
		<size>0.210 0.03</size>
		<rotation>0</rotation>
	</datetime>
	<text name="md_lbl_playcount, md_lbl_lastplayed, md_lbl_gametime">
		<size>0.115 0.03</size>
	</text>
	<text name="md_lbl_playcount">
		<pos>0.396 0.695</pos>
	</text>
	<text name="md_lbl_lastplayed">
		<pos>0.520 0.698</pos>
	</text>
	<text name="md_lbl_gametime">
		<pos>0.520 0.73</pos>
	</text>
	<text name="md_playcount">
		<pos>0.512 0.695</pos>
		<size>0.024 0.03</size>
	</text>
	<datetime name="md_lastplayed">
		<pos>0.636 0.695</pos>
		<size>0.09 0.03</size>
	</datetime>
	<text name="md_gametime">
		<pos>0.636 0.73</pos>
		<size>0.09 0.03</size>
	</text>
	<text name="md_players">
		<pos>0.0537 0.877</pos>
		<size>0.18 0.079</size>
	</text>
	<rating name="md_rating">
		<pos>0.44 0.725</pos>
		<size>0.16 0.032</size>
	</rating>
	
	
	



	<image name="md_flag">
		<origin>0.5 0.5</origin>									
		<pos>0.765625 0.9296296</pos>									
		<maxSize>0.025 0.0296296</maxSize>																
	</image>





	
	
	
	
	
	
	
</customView>

</theme>
