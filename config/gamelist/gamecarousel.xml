		<image name="ghost_savestate" extra="true">
			  <pos>0.976 0.55</pos>
		</image>
		
		<image name="md_kidgame, md_notkidgame"> 
			<pos>0.976 0.60</pos>
		</image>
		
		<image name="ghost_kidgame" extra="true"> 
			<pos>0.976 0.60</pos>
		</image>
		
		<image name="md_cheevos,md_notcheevos">
			<pos>0.976 0.65</pos>
		</image>
		
		<image name="ghost_cheevos" extra="true">
			<pos>0.976 0.65</pos>
		</image>
    
		<image name="md_hidden">
