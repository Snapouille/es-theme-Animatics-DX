	  <fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
	  <size>0.31 0.025</size>
	  <alignment>left</alignment>
	  <pos>0.18 0.151</pos>
	</text>

	<text name="md_description">
      <origin>0 0</origin>
	  <color>928e94D0</color>
	  <fontSize>0.021</fontSize>
	  <fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
	  <size>0.31 0.21</size>
	  <alignment>left</alignment>
	  <pos>0.18 0.201</pos>
   </text>
	
	
	
	
		<rating name="md_rating">
