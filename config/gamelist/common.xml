<theme defaultView="detailed">

  <view name="detailed, gamecarousel, grid">
  
		<!-- La barre en bas Helpsystem -->
			<helpsystem name="help">
				<size>0.01 0.01</size>
				<maxSize>0.1 0.025</maxSize>
				<pos>0.01 0.955</pos>
				<fontSize>0.0313</fontSize>
				<glowColor>00000080</glowColor>
				<glowSize>1</glowSize>
				<glowOffset>1</glowOffset>
			</helpsystem>


<!-- Cadre du cartouche de l'aide en bas -->
	
	<image name="up_BottomFrame, down_BottomFrame, left_BottomFrame, right_BottomFrame, black_BottomFrame" extra="true">
		<path>./../../art/divers/white.png</path>
		<color>${baseColor}</color>
		<zIndex>3000</zIndex>
		<origin>0.5 0.5</origin>
	</image>
	
	<!-- barre cadre haut -->
	<image name="up_BottomFrame" extra="true">
		<size>1 0.0046296</size>									
		<pos>0.5 0.9375</pos>
		
		<pos ifHelpPrompts="false">2 2</pos>
	</image>
		
	<!-- barre cadre bas -->
	<image name="down_BottomFrame" extra="true">
		<size>1 0.0046296</size>									
		<pos>0.5 0.9976852</pos>										  
	</image>
	
	<!-- barre cadre gauche -->
	<image name="left_BottomFrame" extra="true">
		<size>0.0026042 0.0555556</size>									
		<pos>0.0013021 0.9675926</pos>	
		
		<pos ifHelpPrompts="false">2 2</pos>
	</image>
	
	<!-- barre cadre droit -->
	<image name="right_BottomFrame" extra="true">
		<size>0.0026042 0.0601852</size>									
		<pos>0.9986979 0.9652778</pos>		
		<pos ifHelpPrompts="false">2 2</pos>
	</image>
	
	<!-- fond noir de l'encadrement de l'aide -->
	<image name="black_BottomFrame" extra="true">
		<path>./../../art/divers/black.png</path>
		<zIndex>2999</zIndex>
		<size>1 0.0657407</size>									
		<pos>0.5 0.9680556</pos>	

		<pos ifHelpPrompts="false">2 2</pos>
	</image>
  
		
	<!-- Position et affichage des logos des systèmes en haut à droite dans les gamelist views -->
		<image name="logo">
			  <path>./../../art/logos/${system.theme}.png</path>
			  <path>./../../art/logos/${system.theme}-${lang}.png</path>
			  <path ifSubset="artworkregion:us">./../../art/logos/us/${system.theme}.png</path>
			  <path ifSubset="artworkregion:jp">./../../art/logos/jp/${system.theme}.png</path>
			  
			  <pos>0.88 0.08</pos>
			  <scale>0</scale>
			  <maxSize>0.20 0.11</maxSize>
			  <origin>0.5 0.5</origin>
			  <linearSmooth>true</linearSmooth>
			  <alignment>right</alignment>
			  <zIndex>200</zIndex>
			  
			  <storyboard>
				<animation property="offsetX" from="0.5" to="0" begin="" duration="800" mode="EaseInOut"/>
			  </storyboard>
		</image>
		
		
		
		
		
		
		
		
		
		
		
		

		   
    <text name="folderpath">
		  <pos>0.05 0.132</pos>
		  <size>0.90 0.02</size>  
		  <color>B0B0B0</color>  
		  <alignment>center</alignment>
		  <fontSize>0.016</fontSize>
		  <fontPath>./../../art/divers/fonts/ubuntu-Bold.ttf</fontPath>
		  <forceUppercase>true</forceUppercase>
		  <zIndex>200</zIndex>
    </text>  
	

  <!-- FIN DU FICHIER COMMON.XML -->

	  
	  
  </view>
  
 
 
 
</theme>