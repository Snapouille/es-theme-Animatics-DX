<!-- View : VERTICAL -->
<view name="system" ifSubset="SystemView:vertical">
	<!-- petite barre coté droit du menu qui restait afficher -->
	<image name="right_BottomFrame">
		<visible>false</visible>
	</image>

	<video name="backgroundvideo" extra="true">
		<origin>0 1</origin>
		<maxSize>0.3 0.25</maxSize>									
		<pos>0.027 0.72</pos>
	</video>
</view>


<!-- View : HORIZONTAL -->
<view name="system" ifSubset="SystemView:horizontal">
	<video name="backgroundvideo" extra="true">
		<origin>0 1</origin>
		<maxSize>0.3 0.25</maxSize>									
		<pos>0.025 0.76</pos>
		<pos ifHelpPrompts="false">0.025 0.82</pos>
	</video>
</view>


<!-- View : GRILLE -->
<view name="system" ifSubset="SystemView:grid">
	<image name="barre_Haut" extra="true">
		<visible>false</visible>
	</image>
	
	<video name="backgroundvideo" extra="true">
		<origin>1 1</origin>
		<maxSize>0.3 0.25</maxSize>									
		<pos>0.9895 0.9</pos>
		<pos ifHelpPrompts="false">0.9895 0.93</pos>
	</video>
</view>


<!-- View : FIGURINES -->
<view name="system" ifSubset="SystemView:figurines">
	<image name="barre_Haut">
		<visible>false</visible>
	</image>
	
	<video name="backgroundvideo" extra="true">
		<maxSize>0.3 0.25</maxSize>									
		<pos>0.9895 0.37</pos>
		<pos ifHelpPrompts="false">0.9895 0.38</pos>
		<maxSize ifHelpPrompts="false">0.32 0.28</maxSize>									
	</video>
	
</view>
  
</theme>
