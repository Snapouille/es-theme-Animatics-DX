<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>4</formatVersion>
  <view name="system">
  
	<carousel name="systemcarousel">
      <defaultTransition>fade &amp; slide</defaultTransition> <!-- slide / fade / instant -->
    </carousel>
	
	<image name="background, bgsky">
		  <visible>false</visible>
	</image>
	
	<!-- On modifie l'arrivée des statistiques sur l'écran si affichage différent que Snap Legacy -->
	  <text name="systemInfoEx" ifSubset="SystemView:wheel" extra="true">
        <alignment>left</alignment>
		<pos>0.07 0.68</pos>
		<pos ifHelpPrompts="false">0.07 0.72</pos>
		<zIndex>30</zIndex>
		<storyboard>
			
				<animation property="offsetX" to="0.1" begin="1000" duration="500" mode="easeOutCubic"/>
			
		</storyboard>
		
      </text>
	  
	<!-- On masque la barre des stats -->
	<image name="BarAndRound" ifSubset="SystemView:wheel" extra="static">
			<visible>false</visible>	
	</image>
	
	

	<image name="background-cut" extra="static">
		  <tile>false</tile>
		  <size>1 1</size>
		  <pos>0 0</pos>
		  <origin>0 0</origin>
		  <path>./../../../art/divers/bg-cut.png</path>
		  <color>${backgroundColor}</color>
		  <zIndex>11</zIndex>
	</image>
	
	<image name="background-frame" extra="static">
		  <tile>false</tile>
			<size>0.6010417 0.7361111</size>									
			<pos>0.0229167 0.0527778</pos>									
		  <origin>0 0</origin>
		  <path>./../../../art/divers/bg-frame.png</path>
		  <zIndex>12</zIndex>
	</image>
	
	
	
	
	
	
    <video name="backgroundvideo" extra="true">
		<path>{random}</path>
		<default>./../../../art/divers/mediamissing2.png</default>
		<pos>0.32 0.38</pos>									
		<minSize>0.85 0.93</minSize>									
		<maxSize>0.85 0.93</maxSize>		
		<origin>0.5 0.5</origin>
		<delay>0</delay>
		<color>FFFFFFA0</color>
		<effect>none</effect>
		<zIndex>9</zIndex>
		
		
    </video>
    
    <image name="ControllerOverlay" extra="true">
      <visible>false</visible>
    </image>
     
  </view>
</theme>
