			<storyboard>
				<animation property="opacity" from="0" to="1" begin="" duration="1" mode="Linear"/>
			</storyboard>
	</text>
		
		
		
		
	<!-- si on Affichage toutes les stats avec animation (Nombre de jeux, jeux joués, favoris et 2ème ligne jeu le plus joué)	 -->
    <text name="systemInfoEx, systemInfoEx2,systemInfoExNull" ifSubset="InfoCustomView:detailed" extra="true">
		<fontPath>./../../../art/fonts/charge-vector.otf</fontPath>
		<fontSize>0.025</fontSize>
		<zIndex>2001</zIndex>
		<color>6cffa3</color>
