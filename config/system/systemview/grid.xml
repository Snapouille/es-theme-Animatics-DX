	</text>
		
	
	<!-- si on affiche juste le total des jeux par système -->
    <text name="systemInfo" ifSubset="InfoCustomView:total">
		<fontPath>./../../../art/fonts/charge-vector.otf</fontPath>
		<fontSize>0.025</fontSize>
		<zIndex>2001</zIndex>
		<color>6cffa3</color>
