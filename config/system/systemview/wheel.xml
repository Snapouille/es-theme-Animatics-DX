<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	
	<!-- <include>./../extendedinfo.xml</include> -->
	
  	
	<!-- HOUR / PAD position -------------------------- -->
