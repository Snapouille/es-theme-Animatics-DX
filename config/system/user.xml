<theme>
  <formatVersion>7</formatVersion>
	
	<view name="system">
   
		<image name="encadrement" extra="true">
			<path>./../../art/divers/white.png</path>
			<color>fdde0b</color>
			<zIndex>97</zIndex>
			<origin>0 0</origin>									
			<size>0.0489583 0.0851852</size>									
			<pos>0.1016667 0.0388889</pos>
			<visible ifSubset="user-logo:none">false</visible>		
			
		<storyboard>
			<animation property="offsetX" to="0.13" begin="6000" duration="200" mode="easeInOut"/>
			<animation property="offsetX" to="0" begin="6200" duration="1500" mode="easeInCubic"/>
		  </storyboard>
			
		</image>
   
		<image name="fond-encadrement" extra="true">
         <origin>0 0</origin>
		 <size>0.0458333 0.0796296</size>									
		 <pos>0.1032292 0.0416667</pos>									
         <tile>true</tile>
         <path>./../../art/divers/bg_square.png</path>
		 <visible ifSubset="user-logo:none">false</visible>
         <zIndex>98</zIndex>
		 
		 <storyboard>
			<animation property="offsetX" to="0.13" begin="6000" duration="200" mode="easeInOut"/>
			<animation property="offsetX" to="0" begin="6200" duration="1500" mode="easeInCubic"/>
		  </storyboard>
		 
      </image>
  
	  <image name="logo-user" extra="static">
		 <path>./../../art/logo-user/${image.logo}</path>
		 <path ifSubset="user-logo:custom">./../../your-logo.png</path>
		 <pos>0.1053125 0.0444444</pos>									
		 <maxSize>0.0416667 0.0740741</maxSize>									
		 <zIndex>99</zIndex>
		 <linearSmooth>true</linearSmooth>
		 <visible ifSubset="user-logo:none">false</visible>
		 
		 <storyboard>
			<animation property="offsetX" to="0.13" begin="6000" duration="200" mode="easeInOut"/>
			<animation property="offsetX" to="0" begin="6200" duration="1500" mode="easeInCubic"/>
		  </storyboard>
		 
	  </image>

	  <text name="nickname" extra="true">
		 <text>${text.nick}</text>
		 <text ifSubset="user-username:custom">${custom.nick}</text>
		 <pos>0.157 0.05</pos>
		 <size>0.165 0.035</size>
		 <color>${baseColor}</color>
		 <fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
		 <fontSize>0.028</fontSize>
		 <alignment>left</alignment>
		 <glowColor>00000035</glowColor>
		 <glowSize>1</glowSize>
		 <glowOffset>3 2</glowOffset>
		 <zIndex>99</zIndex>
		 <singleLineScroll>true</singleLineScroll>
		 <backgroundColor>ff000000</backgroundColor>
		 <visible ifSubset="user-username:none">false</visible>
		 
		  <storyboard>
			<animation property="offsetX" to="0.13" begin="6000" duration="200" mode="easeInOut"/>
			<animation property="offsetX" to="0" begin="6200" duration="1500" mode="easeInCubic"/>
			
			<animation property="color" to="FFFF00" begin="6200" duration="1500" autoreverse="true" mode="linear"/>
			<animation property="offsetY" to="-0.005" begin="6200" duration="100" autoreverse="true" mode="linear"/>
			
		  </storyboard>
		 
	  </text>
	  
	  
	  
	  <image name="ca-tourne" extra="true">
			<path>./../../art/divers/white.png</path>
			<color>FFFF00</color>
			<zIndex>1001</zIndex>
			<origin>0 0</origin>									
			<size>0.003125 0.0055556</size>									
			<pos>0.0619792 0.7583333</pos>									
			<opacity>0</opacity>			
			<visible ifSubset="user-logo:none">false</visible>		
			
		<storyboard repeat="forever">
			<animation property="opacity" to="1" begin="2990" duration="10" mode="linear"/>
			
			
			<animation property="pos" to="0.0348958 0.7583333" begin="3000" duration="150" mode="linear"/>
			<animation property="pos" to="0.0348958 0.9" 	   begin="3150" duration="400" mode="linear"/>
			<animation property="pos" to="0.1348958 0.9" 	   begin="3550" duration="400" mode="linear"/>			
			<animation property="pos" to="0.1348958 0.7583333" begin="3950" duration="400" mode="linear"/>
			<animation property="pos" to="0.1083333 0.7583333" begin="4350" duration="150" mode="linear"/>
			
			
			

			
			
			
			<animation property="opacity" to="0" begin="4500" duration="10" mode="linear"/>
			
			<animation property="opacity" from="0" to="0" begin="8000" duration="10" mode="linear"/>
			
		</storyboard>
			
		</image>
	  
	  
	  
	  
	  
   
   </view>
   
  
</theme>