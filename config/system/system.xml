<view name="system" ifSubset="SystemView:wheel">
	
	
	<image name="controllers2" extra="true">
	
		<origin>0.5 0.5</origin>									
		<pos>1.1817708 0.2101852</pos>									
		<maxSize>0.3 0.3</maxSize>									
	
		<horizontalAlignment>center</horizontalAlignment>
		<verticalAlignment>center</verticalAlignment>
		
		
		<!-- Rotation normale à 20000 -->
		<storyboard>
			<animation property="offsetX" to="-0.34375" begin="6500" duration="1500" mode="EaseOutCubic"/>
			
			<animation property="scale" to="0.9" begin="14000" duration="250" autoreverse="true" mode="bump"/>
			
			<animation property="rotation" to="360" begin="20000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="20000" duration="150" mode="linear"/>
			<animation property="scale" to="1" begin="20250" duration="350" mode="linear"/>
			
		</storyboard>
		
		<!-- Rotation à -90° avec Zoom - -->
		<storyboard if="{system.theme} == 'astrocade' || {system.theme} == 'channelf' || {system.theme} == 'wonderswan' || {system.theme} == 'wonderswancolor'">
		
			<animation property="offsetX" to="-0.34375" begin="6500" duration="1500" mode="EaseOutCubic"/>
			
			<animation property="rotation" to="-90" begin="14000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="14000" duration="250" mode="linear"/>
			<animation property="scale" to="0.6" begin="14250" duration="250" mode="linear"/>
			
			<animation property="rotation" to="360" begin="20000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="20000" duration="150" mode="linear"/>
			<animation property="scale" to="1" begin="20250" duration="350" mode="linear"/>
		</storyboard>
		
		<!-- Rotation à 90° avec Zoom - -->
		<storyboard if="{system.theme} == 'wiiu' || {system.theme} == 'wii' || {system.theme} == 'vc4000' || {system.theme} == 'colecovision' || {system.theme} == 'intellivision' || {system.theme} == 'retrobat' || {system.theme} == 'setup' || {system.theme} == 'sg-1000'">
		
			<animation property="offsetX" to="-0.34375" begin="6500" duration="1500" mode="EaseOutCubic"/>
			
			<animation property="rotation" to="90" begin="14000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="14000" duration="250" mode="linear"/>
			<animation property="scale" to="0.6" begin="14250" duration="250" mode="linear"/>
			
			<animation property="rotation" to="360" begin="20000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="20000" duration="150" mode="linear"/>
			<animation property="scale" to="1" begin="20250" duration="350" mode="linear"/>
		</storyboard>
		
		
		<!-- Rotation à -90° avec Zoom + -->
		<storyboard if="{system.theme} == 'videopac' ||  {system.theme} == 'videopacplus' ||  {system.theme} == 'supervision' ||  {system.theme} == 'scv' ||  {system.theme} == 'scummvm' ||  {system.theme} == 'pv1000' ||  {system.theme} == 'pokemini' ||  {system.theme} == 'odyssey2' ||  {system.theme} == 'megaduck' ||  {system.theme} == 'gbc' || {system.theme} == 'atari5200' || {system.theme} == 'apfm1000' || {system.theme} == 'arcadia' || {system.theme} == 'arduboy' || {system.theme} == 'gb'">
		
			<animation property="offsetX" to="-0.34375" begin="6500" duration="1500" mode="EaseOutCubic"/>
			
			<animation property="rotation" to="-90" begin="14000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="14000" duration="250" mode="linear"/>
			<animation property="scale" to="1.5" begin="14250" duration="250" mode="linear"/>
			
			<animation property="rotation" to="360" begin="20000" duration="500" mode="linear"/>
			<animation property="scale" to="0.5" begin="20000" duration="150" mode="linear"/>
			<animation property="scale" to="1" begin="20250" duration="350" mode="linear"/>
