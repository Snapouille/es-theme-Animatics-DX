		<visible>false</visible>
	</text>
  
	<image name="md_manual,md_nomanual, ghost_manual, 
	             md_savestate,md_nosavestate,ghost_savestate
				 md_kidgame, md_notkidgame, ghost_kidgame
				 md_map, md_nomap, ghost_md_map
