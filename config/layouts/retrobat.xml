	</image>
  	
	<image name="md_thumbnail">
		<visible>false</visible>
		
	<rating name="md_rating">
		<visible>false</visible>
	</rating>
		
		
		
	</image>
	
	<video name="md_video">
	  <maxSize>0.35 0.3</maxSize>
	  <pos>0.668 0.3897</pos>
	  
		<storyboard event="open">
			<animation property="offsetX" to="0" begin="1200" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="activate">
				<animation property="offsetX" to="0" begin="1200" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="deactivate">
				<animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
	 </video>
	 
	 
	 
	 
	<!-- fond noir de l'écran de TV -->
	<image name="black_bg" extra="true">
	    <size>0.38 0.38</size>
		<pos>0.6677604 0.3884259</pos>	
		
		<storyboard event="open">
			<animation property="offsetX" to="0" begin="1200" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="activate">
				<animation property="offsetX" to="0" begin="1200" duration="200" mode="linear"/>
		</storyboard>
			
