<theme>


<view name="gamecarousel">
  
	<image name="ecran_console" extra="static">
		<origin>0.5 0.5</origin>
		<path>./../../system/thomson/ecran_console2.png</path>

		<size>0.4671875 0.6481481</size>									
		<pos>0.5002604 0.6003704</pos>									
