			<storyboard event="activate">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="deactivate">
					<animation property="opacity" to="0" duration="1" mode="linear"/>
			</storyboard>
	</image>
  
  
	<video name="md_video">
		<origin>0.5 0.5</origin>									

		<size>0.2088542 0.2814815</size>									
		<pos>0.5809896 0.4781481</pos>									
		<pos ifHelpPrompts="false">0.5809896 0.5381481</pos>
		<zIndex>30</zIndex>

	  
			<storyboard event="open">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="activate">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="deactivate">
