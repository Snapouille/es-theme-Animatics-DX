<theme>
 
  
   <view name="basic, detailed">
  <!-- Affichage de la jaquette <maxSize>x y</maxSize> x=largeur y=hauteur -->
  <image name="md_thumbnail">
		<origin>0.40 0.50</origin>
		<pos>0.4 0.39</pos> 
		<maxSize>0.23 0.44</maxSize>
		
		
		<scale>0.6</scale>
		<zIndex>100</zIndex>
		<!-- <visible>false</visible> -->
		<roundCorners>0.01</roundCorners>
		
		
		<storyboard event="open">
                <animation property="x" to="0.44" begin="1000" duration="200" mode="linear"/>
				<animation property="y" to="0.32" begin="1000" duration="200" mode="linear"/>
				<animation property="scale" to="1" begin="1000" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="activate">
                <animation property="x" to="0.44" begin="1000" duration="200" mode="linear"/>
				<animation property="y" to="0.32" begin="1000" duration="200" mode="linear"/>
				<animation property="scale" to="1" begin="1000" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="deactivate">
			   <animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
		
		
	</image>
	
	
		
   </view>
  
  
</theme>
