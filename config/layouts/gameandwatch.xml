<theme>
  
<view name="gamecarousel">

	<image name="ecran_console, ecran_console_defaut, black_bg" extra="static">
			<visible>false</visible>
	</image>

	<video name="md_video">
		<visible>false</visible>
	</video>

	<image name="bureau" extra="static">
			<visible>true</visible>
	</image>
	
	<video name="game_video" extra="true">
		<path>{game:video}</path>
		<origin>0.5 0.5</origin>
		<pos>0.52 0.63</pos>
		<pos ifHelpPrompts="false">0.52 0.67</pos>
		<h>0.53</h>	
		<maxSize>0.33 0.53</maxSize>	
		<linearSmooth>true</linearSmooth>
		<zIndex>15</zIndex> 
	</video>

</view>
  
  
  
<customView name="legendary">
  
	
	<image name="ecran_console" extra="static">
			<visible>false</visible>
	</image>
	<!-- fond noir de l'écran -->
	<image name="black_bg">
	  <visible>false</visible>
	</image>

	
	
	
		<video name="md_video">
			<visible>false</visible>
		</video>
		
		
		<video name="game_video" extra="true">
			<path>{game:video}</path>
			<origin>0.5 0.5</origin>
			
			<pos>0.7726563 0.415</pos>									
			
			<h>0.45</h>	
			<maxSize>0.3 0.45</maxSize>	
			<linearSmooth>true</linearSmooth>
			<zIndex>15</zIndex> 
		</video>
  
	
	
	
	
	<image name="md_thumbnail">
		<origin>0.50 0.50</origin>
		<zIndex>100</zIndex>
		<roundCorners>0.01</roundCorners>
		<pos>0.3808 0.275</pos>	
		<maxSize>0.27 0.43</maxSize>
		<scale>0.45</scale>
		
		<storyboard event="open">
                <animation property="x" to="0.455" begin="1200"  duration="200" mode="linear"/>
				<animation property="y" to="0.27" begin="1200"  duration="200" mode="linear"/>
				<animation property="scale" to="0.85" begin="1200"  duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="activate">
                <animation property="x" to="0.455" begin="1200"  duration="200" mode="linear"/>
				<animation property="y" to="0.27" begin="1200"  duration="200" mode="linear"/>
				<animation property="scale" to="0.85" begin="1200"  duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="deactivate">
			    <animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
		
	</image>
	
	
	
	<text name="md_description">
		<pos>0.70 0.78</pos>		
	</text>
	
	
	
	
	<!-- Ligne du haut à pousser vers la droite -->
	<image name="topLineRight" extra="true">
      <pos>0.313 0.155</pos>
      <size>1 0.005</size>
	  
		<storyboard event="open">
			<animation property="pos" to="0.63 0.155" begin="1000" duration="500" mode="Linear"/>
			<animation property="pos" to="0.617 0.155" begin="1500" duration="500" mode="EaseOut"/>
		</storyboard>
		
		<storyboard event="activate">
			<animation property="pos" to="0.63 0.155" begin="1000" duration="500" mode="Linear"/>
			<animation property="pos" to="0.617 0.155" begin="1500" duration="500" mode="EaseOut"/>
		</storyboard>
		
		<storyboard event="deactivate">
		   <animation property="pos" to="0.340 0.155" duration="100" mode="linear"/>
		</storyboard>
	  
    </image>
	
	<!-- Square jaune qui se balade -->
	<image name="yellowSquare" extra="true">
		<origin>0.5 0.5</origin>									
		<size>0.0026042 0.0046296</size>									
		<pos>0.3445313 0.1569444</pos>									
		<color>fdde0b</color>
		<opacity>0</opacity>
	  
		<storyboard event="open">
			<animation property="opacity" to="1" begin="1000" duration="10" mode="Linear"/>
			<animation property="pos" to="0.7386979 0.1569444" begin="1000" duration="500" mode="Linear"/>
			<animation property="pos" to="0.6167396 0.1569444" begin="1500" duration="500" mode="EaseOut"/>
			
			<animation property="pos" to="0.6167396 0.1523148" begin="2000" duration="25" mode="Linear"/>
			<animation property="pos" to="0.6115313 0.1523148" begin="2025" duration="55" mode="Linear"/>
			<animation property="pos" to="0.6115313 0.1625" begin="2080" duration="50" mode="Linear"/>
			<animation property="pos" to="0.6167396 0.1625" begin="2130" duration="50" mode="Linear"/>
			<animation property="pos" to="0.6167396 0.1569444" begin="2180" duration="50" mode="Linear"/>
			
			<animation property="size" to="0.0088542 0.0157407" begin="2180" duration="50" mode="Linear"/>
			
			<animation property="pos" to="0.9515625 0.1569444" begin="2230" duration="1070" mode="EaseInOut"/>
			
			<animation property="size" to="0.0026042 0.0046296" begin="2400" duration="2000" autoreverse="true" repeat="4" mode="Linear"/>
			
			<animation property="pos" to="0.9515625 0.9365741" begin="3300" duration="3000" mode="EaseInOut"/>
			<animation property="pos" to="0.3116667 0.9365741" begin="6300" duration="4000" mode="EaseInOut"/>
			<animation property="pos" to="0.3116667 0.1569444" begin="10300" duration="3000" mode="EaseInOut"/>
			<animation property="pos" to="-0.007 0.1569444" begin="13300" duration="2000" mode="EaseInOut"/>
		</storyboard>
		
		<storyboard event="activate">
			<animation property="opacity" to="1" begin="1000" duration="10" mode="Linear"/>
			<animation property="pos" to="0.7386979 0.1569444" begin="1000" duration="500" mode="Linear"/>
			<animation property="pos" to="0.6197396 0.1569444" begin="1500" duration="500" mode="EaseOut"/>
			
			<animation property="pos" to="0.6197396 0.1523148" begin="2000" duration="25" mode="Linear"/>
			<animation property="pos" to="0.6145313 0.1523148" begin="2025" duration="55" mode="Linear"/>
			<animation property="pos" to="0.6145313 0.1625" begin="2080" duration="50" mode="Linear"/>
			<animation property="pos" to="0.6197396 0.1625" begin="2130" duration="50" mode="Linear"/>
			<animation property="pos" to="0.6197396 0.1569444" begin="2180" duration="50" mode="Linear"/>
			
			<animation property="size" to="0.0088542 0.0157407" begin="2180" duration="50" mode="Linear"/>
			
			<animation property="pos" to="0.9515625 0.1569444" begin="2230" duration="1070" mode="EaseInOut"/>
			
			<animation property="size" to="0.0026042 0.0046296" begin="2400" duration="2000" autoreverse="true" repeat="4" mode="Linear"/>
			
			<animation property="pos" to="0.9515625 0.9365741" begin="3300" duration="3000" mode="EaseInOut"/>
			<animation property="pos" to="0.3116667 0.9365741" begin="6300" duration="4000" mode="EaseInOut"/>
			<animation property="pos" to="0.3116667 0.1569444" begin="10300" duration="3000" mode="EaseInOut"/>
			<animation property="pos" to="-0.007 0.1569444" begin="13300" duration="2000" mode="EaseInOut"/>
		</storyboard>
		
		<storyboard event="deactivate">
		   <animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
	  
    </image>
	
	<!-- Square qui se forme -->
	<image name="topSquare" extra="true">
      <pos>0.610 0.15</pos>
      <size>0.008 0.015</size>
	  <opacity>0</opacity>
	  
		<storyboard event="open">
			<animation property="opacity" to="1" begin="2100" duration="100" mode="linear"/>
		</storyboard>
		
		<storyboard event="activate">
			<animation property="opacity" to="1" begin="2100" duration="100" mode="linear"/>
		</storyboard>
		
		<storyboard event="deactivate">
		   <animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
	  
    </image>
	
	
	
	
	
	<!-- Special agencement pour box SNES et N64 -->
	<!-- Animation LOGO des systèmes  -->	
	<image name="logo">
			<storyboard>
				<animation property="scale" from="0" to="0.9" begin="" duration="300" mode="Linear"/>
				<animation property="offsetX" from="0.5" to="0" begin="" duration="500" mode="EaseOut"/>
				<animation property="x" to="0.9" begin="" duration="10" mode="Linear"/>
				<animation property="y" to="0.093" begin="" duration="10" mode="Linear"/>
			</storyboard>
			
	</image>	
	
	
	<!-- encadrement du controller ou de la console-collection en haut à droite	 -->
	
	<image name="console-collection-top" extra="true">
		<pos>0.7108854 0.0060185</pos>
    </image>
	<image name="console-collection-left" extra="true">
		<pos>0.6314583 0.0791667</pos>	
    </image>
	<image name="console-collection-right" extra="true">
		<pos>0.7923958 0.0791667</pos>		
    </image>

	
	<!-- Affichage du controller2 -->
	<image name="controller2" extra="true">
		<pos>0.7119271 0.0819444</pos>
    </image>
	
	
	
	
	
	
		
</customView>
  
  
  
</theme>
