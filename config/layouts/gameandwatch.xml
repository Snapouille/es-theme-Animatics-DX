<theme>
 
  
  
  <view name="gamecarousel">
  
	<image name="ecran_console" extra="static">
		<visible>false</visible>
	</image>
  </view>
  
  
  
  
  
  <view name="detailed">
  
	
	<image name="ecran_console" extra="static">
			<visible>false</visible>
	</image>
	
	
	
	
	
	
	<video name="md_video">
		  <pos>0.707 0.36</pos>
		  <!-- <size>0.225 0.31</size> -->
		  <maxSize>0.34 0.36</maxSize>
		  
				<storyboard event="open">
					<animation property="x" to="0.77" begin="1200" duration="200" mode="linear"/>
				</storyboard>
					
				<storyboard event="activate">
						<animation property="x" to="0.77" begin="1200" duration="200" mode="linear"/>
				</storyboard>
					
				<storyboard event="deactivate">
						<animation property="opacity" to="0" duration="1" mode="linear"/>
				</storyboard>
		  
		</video>
  
	<!-- fond noir de l'écran -->
		<image name="black_bg">
		  <visible>false</visible>
		</image>
	
	
	
	
	<image name="md_thumbnail">
		<origin>0.50 0.50</origin>
		<zIndex>100</zIndex>
		<roundCorners>0.01</roundCorners>
		<pos>0.3808 0.33</pos>									
		<minSize>0.1239583 0.437963</minSize>
		
		<storyboard event="open">
				<animation property="maxSize" to="0.30 0.43" begin="1200"  duration="200" mode="linear"/>
                <animation property="x" to="0.455" begin="1200"  duration="200" mode="linear"/>
				<animation property="y" to="0.22" begin="1200"  duration="200" mode="linear"/>
				<animation property="scale" to="0.9" begin="1200"  duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="activate">
				<animation property="maxSize" to="0.30 0.43" begin="1200"  duration="200" mode="linear"/>
                <animation property="x" to="0.455" begin="1200"  duration="200" mode="linear"/>
				<animation property="y" to="0.22" begin="1200"  duration="200" mode="linear"/>
				<animation property="scale" to="0.9" begin="1200"  duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="deactivate">
			    <animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
		
	</image>
	
	
	
	<text name="md_description">
		<pos>0.70 0.78</pos>		
	</text>
	
	
	
	
	<!-- Ligne du haut à pousser vers la droite -->
	<image name="topLineRight" extra="true">
      <pos>0.313 0.155</pos>
      <size>1 0.005</size>
	  
		<storyboard event="open">
			<animation property="pos" to="0.95 0.155" begin="1000" duration="500" mode="Linear"/>
			<animation property="pos" to="0.7 0.155" begin="1500" duration="500" mode="EaseOut"/>
		</storyboard>
		
		<storyboard event="activate">
			<animation property="pos" to="0.95 0.155" begin="1000" duration="500" mode="Linear"/>
			<animation property="pos" to="0.7 0.155" begin="1500" duration="500" mode="EaseOut"/>
		</storyboard>
		
		<storyboard event="deactivate">
		   <animation property="pos" to="0.343 0.155" duration="100" mode="linear"/>
		</storyboard>
	  
    </image>
	
	<!-- Square jaune qui se balade -->
