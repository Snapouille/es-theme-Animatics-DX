<theme>


<view name="gamecarousel">

	<!-- je décale en dehors de l'écran car il s'affichait toujours, même avec un visible=false ... -->
	<video name="md_video">
		<pos>-2 -1</pos>
	</video>


	<image name="ecran_console" extra="static">
		<path>${themePath}/art/screen/lightgun_cab.png</path>
		<origin>0.5 0.5</origin>									
		<size>0.4010417 0.6787037</size>									
		<pos>0.5036458 0.5976852</pos>		
		<size ifHelpPrompts="false">0.4010417 0.6787037</size>									
		<pos ifHelpPrompts="false">0.5036458 0.6560185</pos>									
		<color>FFFFFF</color>
		<flipY>false</flipY>
		<zIndex>31</zIndex>
			<storyboard event="open">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="activate">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="deactivate">
					<animation property="opacity" to="0" duration="1" mode="linear"/>
			</storyboard>
	</image>
	
	
	
	<!-- Marquee BLACK si jamais il n'y a ni borne officielle / ni marquee-->
	<image name="marquee_black" extra="true">
		<path>${themePath}/art/divers/white.png</path>
		<color>000000</color>
		<zIndex>28</zIndex>
		<origin>0 0</origin>									
		<size>0.2979167 0.1453704</size>									
		<pos>0.3479167 0.2592593</pos>									
		<pos ifHelpPrompts="false">0.3479167 0.3175926</pos>
	</image>

	<!-- Logo du jeu dans le Marquee BLACK si jamais il n'y a ni borne officielle / ni marquee-->
	<image name="marquee_logosjeux" extra="true">
		<path>{game:marquee}</path>
		<origin>0.5 0.5</origin>									
		<pos>0.4955729 0.3342593</pos>
		<pos ifHelpPrompts="false">0.4955729 0.3925926</pos>
		<maxSize>0.2161458 0.1092593</maxSize>									
		<zIndex>29</zIndex> 
	</image>
	
	
	
	
	
	
	<image name="game_imagepreview" extra="true">
		<path>{game:image}</path>
		<linearSmooth>true</linearSmooth>
		<zIndex>17</zIndex> 
		<origin>0.5 0.5</origin>
		
		<pos>0.4973958 0.6236111</pos>									
		<h>0.3305556</h>	
		<maxSize>0.2458333 0.3305556</maxSize>

		<pos ifHelpPrompts="false">0.4973958 0.6819444</pos>									
		<h ifHelpPrompts="false">0.3305556</h>	
		<maxSize ifHelpPrompts="false">0.2458333 0.3305556</maxSize>									
		
		<storyboard event="open">
			<animation enabled="exists({game:video})" property="opacity" to="0" begin="1000" duration="250" mode="linear"/>
		</storyboard>
		<storyboard event="activate">
			<animation enabled="exists({game:video})" property="opacity" to="0" begin="1000" duration="250" mode="linear"/>
		</storyboard>
		<storyboard event="deactivate">
			<animation property="opacity" to="0" begin="" duration="" mode="linear"/>
		</storyboard>
	</image>
	
	
	
	
	<image name="game_imagepreview_blackscreen" extra="true">
		<origin>0.5 0.5</origin>
		<visible>!empty({game:image})</visible>
		<zIndex>16</zIndex>
		<path>./../../art/divers/white.png</path>
		<color>000000</color>
		<origin>0.5 0.5</origin>
		
		<pos>0.4973958 0.6236111</pos>									
		<size>0.2458333 0.3305556</size>	
		
		<size ifHelpPrompts="false">0.2458333 0.3305556</size>									
		<pos ifHelpPrompts="false">0.4973958 0.6819444</pos>									
		
		<storyboard event="open">
			<animation property="opacity" to="0" begin="1000" duration="250" mode="linear"/>
		</storyboard>
		<storyboard event="activate">
			<animation property="opacity" to="0" begin="1000" duration="250" mode="linear"/>
		</storyboard>
		<storyboard event="deactivate">
			<animation property="opacity" to="0" begin="" duration="" mode="linear"/>
		</storyboard>
	</image>
	
	
	
	
	<video name="game_video" extra="true">
		<path>{game:video}</path>
		<linearSmooth>true</linearSmooth>
		<zIndex>15</zIndex> 
		<origin>0.5 0.5</origin>
		
		<pos>0.4973958 0.6236111</pos>									
		<h>0.3305556</h>	
		<maxSize>0.2458333 0.3305556</maxSize>	
		
		<pos ifHelpPrompts="false">0.4973958 0.6819444</pos>									
		<h ifHelpPrompts="false">0.3305556</h>	
		<maxSize ifHelpPrompts="false">0.2458333 0.3305556</maxSize>									
	</video>
	
	
  
	<!-- fond noir de l'écran -->
	<image name="black_bg" extra="true">
		<path>./../../art/divers/white.png</path>
		<color>000000</color>
		<origin>0.5 0.5</origin>
		<zIndex>14</zIndex>
		
		<size>0.265625 0.3638889</size>									
		<pos>0.4979167 0.6236111</pos>									
		
		<size ifHelpPrompts="false">0.2458333 0.3305556</size>									
		<pos ifHelpPrompts="false">0.4973958 0.6819444</pos>									
			<storyboard event="open">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="activate">
				<animation property="opacity" to="1" begin="" duration="200" mode="linear"/>
			</storyboard>
				
			<storyboard event="deactivate">
					<animation property="opacity" to="0" duration="1" mode="linear"/>
			</storyboard>
	</image>
		
	
</view>




</theme>
