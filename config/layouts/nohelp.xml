<theme>
  <view name="system" ifSubset="SystemView:vertical|wheel">
		<image name="BottomBar" extra="true">
		  <visible>false</visible>
		</image>
		
		<image name="BottomBar-shadow" extra="true">
		  <visible>false</visible>
		</image>
		
		<text name="systemInfoEx">
			<pos>0.07 0.725</pos>
			<alignment>left</alignment>
		</text>
		
		<text name="system_description" ifSubset="system-description:Show">
			<pos>1.082 0.67</pos>
		</text>
		
		
  </view>
  
  <view name="system" ifSubset="SystemView:simple">
		<image name="BottomBar" extra="true">
		  <visible>false</visible>
		</image>
		
		<image name="BottomBar-shadow" extra="true">
		  <visible>false</visible>
		</image>
		
		<!-- On repositionne les stats  -->
		<text name="systemInfoEx">
			<pos>0.03 0.713</pos>
			<!-- <alignment>left</alignment> -->
		</text>
		
		<text name="system_description" ifSubset="system-description:Show">
			<!-- <pos>0.071 0.513</pos> -->
			<pos>0.071 -0.487</pos>
			<color>FFFFFF00</color>
			<opacity>0</opacity>
			<zIndex>10</zIndex>
			
			<storyboard>
				<animation property="offsetY" to="1" begin="100" duration="100" mode="linear"/>

				<animation property="opacity" from="0" to="1" begin="310" duration="10" mode="Linear"/>
				<animation property="color" to="FFFF00" begin="300" duration="10" mode="Linear"/>	
				<animation property="offsetY" to="1.25" begin="300" duration="700" mode="easeInOut"/>
							
				<animation property="zIndex" to="30000" begin="800"/>
			</storyboard>
			
		</text>
		
		
  </view>
  
  
  
  
  
  <!-- On repositionne la barre en bas pour la mettre tout en bas de l'écran-->
	<view name="basic, detailed, grid, video">
		<image name="bottom" extra="true">
			  <visible>true</visible>
			  <pos>0 1.06</pos>
		</image>
    </view>
	
  
  <view name="video">
    <!-- <image name="bottom-shadow" extra="true"> -->
      <!-- <pos>0 0.96</pos> -->
    <!-- </image> -->

    <textlist name="gamelist">
      <size>0.35 0.83</size>
	  <lines>19</lines>
    </textlist>
	
	<image name="iconsLine" extra="true">
		<size>0.003 0.90</size>
	</image>
	
	<image name="md_flag">
		<pos>0.976 0.95</pos>
	</image>
	
	<datetime name="md_releasedate">
		<pos>0.976 0.85</pos>
	</datetime>
		
  </view>
  
  
  
  <view name="detailed">
    <!-- <image name="bottom-shadow" extra="true"> -->
      <!-- <pos>0 0.96</pos> -->
    <!-- </image> -->

    <textlist name="gamelist">
      <size>0.321 0.817</size>
	  <lines>19</lines>
    </textlist>
	
		<text name="md_lbl_playcount">
			<pos>0.36 0.70</pos>
		</text>
		<text name="md_playcount">
			<pos>0.355 0.73</pos>
		</text>
		
		<text name="md_lbl_lastplayed">
			<pos>0.36 0.77</pos>
		</text>
		<datetime name="md_lastplayed">
			<pos>0.355 0.80</pos>
		</datetime>
	
		<text name="md_lbl_gametime">
			<pos>0.36 0.85</pos>
		</text>
		<text name="md_gametime">
		<pos>0.355 0.88</pos>	
		</text>
		
		<text name="md_players">
		<pos>0.373 0.955</pos>
		</text>
		
	
	<text name="md_lbl_genre">
		<size>0.115 0.03</size>
		<pos>0.48 0.926</pos>
		<color>C0C0C0</color>
		<alignment>right</alignment>
		<fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
		<fontSize>0.022</fontSize>
    </text>
	
	<text name="md_genre">
		<pos>0.598 0.9238</pos>
		<alignment>left</alignment>
		<color>${baseColor}</color>
		<fontPath>./../../art/fonts/ubuntu-bold.ttf</fontPath>
	</text>
	
	<text name="md_lbl_developer">
		<size>0.115 0.03</size>
		<pos>0.48 0.962</pos>
		<color>C0C0C0</color>
		<alignment>right</alignment>
		<fontPath>./../../art/fonts/ubuntu.ttf</fontPath>
		<fontSize>0.022</fontSize>
    </text>
	
	<text name="md_developer">
	  <pos>0.598 0.952</pos>
	  <alignment>left</alignment>
	  <color>${baseColor}</color>
    </text>
	
		<image name="iconsLine2" extra="true">
			<path>./../../art/divers/white.png</path>
			<color>${baseColor}</color>
			<origin>0 0</origin>
			<pos>0.481 0.915</pos>
			<size>0.52 0.005</size>
			<zIndex>14</zIndex>
		</image>  
  </view>
  
  
  
  <view name="grid" ifSubset="SystemView:grid">
  
	<imagegrid name="gamegrid">
		 <pos>0.025 0.495</pos>
		 <size>0.950 0.47</size>
		 <margin>0.005 0.006</margin>
		 <padding>0.008 0.05</padding>
		<autoLayout>5 1</autoLayout>
		  <autoLayoutSelectedZoom>1.4</autoLayoutSelectedZoom>
    </imagegrid>
  
  </view>
  
  
  
  
   <customView name="boxes_big, boxes_medium, boxes_small">
  
	  <imagegrid name="gamegrid">
		  <pos>0.333333 0.05</pos>
		</imagegrid>
	  
		
		
		<text name="md_description">
			 <size>0.3 0.42</size>
		</text>
		
		<text name="md_developer">
			 <pos>0.011 0.921</pos>
		  </text>
		
		<datetime name="md_releasedate">
			 <pos>0.01 0.951</pos>
		</datetime>

		<image name="md_flag">
			<pos>0.073 0.976</pos>
		</image>
	
  </customView>
  
  <customView name="fanart">
  
		<imagegrid name="gamegrid">
		  <pos>0 0.37</pos>
		  <size>1 1</size>
		  <margin>0.0772 0</margin>
		</imagegrid>
		
		<text name="md_description">
			 <size>0.3 0.42</size>
		</text>
		
		<text name="md_developer">
			 <pos>0.011 0.921</pos>
		  </text>
		
		<datetime name="md_releasedate">
			 <pos>0.01 0.951</pos>
		</datetime>

		<image name="md_flag">
			<pos>0.073 0.976</pos>
		</image>
	
  </customView>
  
  
</theme>
