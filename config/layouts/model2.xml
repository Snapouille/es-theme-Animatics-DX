<theme>
  
  
  
  
  
  
  <view name="basic, detailed">
  
		<!-- On masque le logo et le cadre du logo car on la deja dans le MARQUEE du bartop 
		     On repositionne aussi un peu les logos des jeux à l'aparition avant le slide vers la gauche -->
		<image name="logo">
			<visible>false</visible>
		</image>
		 
		<image name="cadre" extra="true">
			<visible>false</visible>
		</image>
		
		<image name="md_marquee">
			<pos>0.7 0.09</pos>
		</image>
  	
		
		<image name="ecran_console" extra="true">
			<pos>0.44 0.05</pos>
			<scale>1</scale>
			<path>./../art/background/model2/ecran_console.png</path>
			<opacity>1</opacity>
			<color>FFFFFF</color>
			<zIndex>61</zIndex>
			
				<storyboard event="open">
					<animation property="x" to="0.49" begin="1000" duration="200" mode="linear"/>
				</storyboard>
					
				<storyboard event="activate">
						<animation property="x" to="0.49" begin="1000" duration="200" mode="linear"/>
				</storyboard>
					
				<storyboard event="deactivate">
						<animation property="opacity" to="0" duration="1" mode="linear"/>
				</storyboard>
			
		</image>
  
		
		<video name="md_video">
		  <pos>0.721 0.36</pos>
		  <size>0.211 0.236</size>
		  <!-- <maxSize>0.13 0.17</maxSize> -->
		  <roundCorners>0</roundCorners>
		  
		  
				<storyboard event="open">
					<animation property="x" to="0.771" begin="1000" duration="200" mode="linear"/>
				</storyboard>
					
				<storyboard event="activate">
						<animation property="x" to="0.771" begin="1000" duration="200" mode="linear"/>
				</storyboard>
					
				<storyboard event="deactivate">
						<animation property="opacity" to="0" duration="1" mode="linear"/>
				</storyboard>
		  
		</video>
  
  
	<image name="md_thumbnail">
		<origin>0.40 0.50</origin>
		<pos>0.398 0.38</pos> 
		<maxSize>0.23 0.54</maxSize>
		<scale>0.56</scale>
		<zIndex>100</zIndex>
		<!-- <visible>false</visible> -->
		<roundCorners>0.01</roundCorners>
		
		
		<storyboard event="open">
                <animation property="x" to="0.443" begin="1000" duration="200" mode="linear"/>
				<animation property="y" to="0.34" begin="1000" duration="200" mode="linear"/>
				<animation property="scale" to="1" begin="1000" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="activate">
                <animation property="x" to="0.443" begin="1000" duration="200" mode="linear"/>
				<animation property="y" to="0.34" begin="1000" duration="200" mode="linear"/>
				<animation property="scale" to="1" begin="1000" duration="200" mode="linear"/>
		</storyboard>
			
		<storyboard event="deactivate">
				<animation property="opacity" to="0" duration="1" mode="linear"/>
		</storyboard>
		
		
		
		
		
	</image>
	
	<text name="md_description">
		  <origin>0.11 0.03</origin>
		  
		  <pos>0.55 0.695</pos>
		  <size>0.43 0.186</size>
		  
	</text>
	
	
	
		
   </view>
  
</theme>
