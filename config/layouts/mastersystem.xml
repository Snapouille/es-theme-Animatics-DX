<theme>
  
  
<view name="gamecarousel">
  
	
	<image name="Consoles" extra="static">
		<visible>true</visible>
		<pos>0.71 0.82</pos>	
		<pos ifHelpPrompts="false">0.711 0.87</pos>
		<rotation>1</rotation>
    </image>
	
	<image name="gun_game" extra="static">
		<visible>{game:gunGame} ? 1 : 0</visible>
		<linearSmooth>true</linearSmooth>
		<origin>0.5 0.5</origin>									
		<path>./../../art/gun/gun_mastersystem.png</path>
		<size>0.08 0.105</size>									
		<pos>0.7 0.688</pos>									
		<pos ifHelpPrompts="false">0.715 0.746</pos>
		<opacity>0</opacity>
		<zIndex>12</zIndex>
			<storyboard event="open" repeatAt="4000">
				<animation property="opacity" to="1" begin="300" duration="200" mode="linear"/>
				<animation property="offsetX" to="-0.008" begin="500" duration="100" autoreverse="true" repeat="2" mode="easeIn"/>
				<animation property="rotation" to="5" begin="500" duration="80" autoreverse="true" repeat="2" mode="easeIn"/>	
				<animation property="offsetX" to="-0.008" begin="9500" duration="100" autoreverse="true" repeat="2" mode="easeIn"/>
				<animation property="rotation" to="5" begin="9500" duration="80" autoreverse="true" repeat="2" mode="easeIn"/>	
			</storyboard>				
			<storyboard event="activate" repeatAt="4000">
				<animation property="opacity" to="1" begin="300" duration="200" mode="linear"/>
				<animation property="offsetX" to="-0.008" begin="500" duration="100" autoreverse="true" repeat="2" mode="easeIn"/>
				<animation property="rotation" to="5" begin="500" duration="80" autoreverse="true" repeat="2" mode="easeIn"/>	
				<animation property="offsetX" to="-0.008" begin="9500" duration="100" autoreverse="true" repeat="2" mode="easeIn"/>
				<animation property="rotation" to="5" begin="9500" duration="80" autoreverse="true" repeat="2" mode="easeIn"/>	
			</storyboard>
			<storyboard event="deactivate">
				<animation property="opacity" to="0" duration="1" mode="linear"/>
			</storyboard>
	</image>
  
	<image name="ecran_console" extra="static">
		<path>./../../art/screen/grey1985.png</path>
		<size>0.3895833 0.4611111</size>									
		<pos>0.4379167 0.5988889</pos>	
		<pos ifHelpPrompts="false">0.4379167 0.6488889</pos>
	</image>
  
	<video name="md_video">
		<pos>0.4006771 0.584537</pos>	
		<pos ifHelpPrompts="false">0.4006771 0.634537</pos>
		<size>0.2443125 0.325</size>									
	</video>
	
	<!-- fond noir de l'écran -->
	<image name="black_bg" extra="true">
		<size>0.2443125 0.325</size>																
		<pos>0.4006771 0.584537</pos>
		<pos ifHelpPrompts="false">0.4006771 0.634537</pos>
	</image>	
	
</view>

  
    
	
<customView name="fanart">

	<image name="Consoles">
		<visible>false</visible>
	</image>

</customView>

	
	
	
  
